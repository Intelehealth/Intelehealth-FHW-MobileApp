<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
         <item name="android:textColor">@color/primary_text</item>
         <item name="colorButtonNormal">@color/colorAccent</item>

        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#212121</item>
         <item name="fontFamily">@font/lato_regular</item>
        <item name="android:windowIsTranslucent">true</item>

    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    <style name="AppThemeMaterialNew" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item><!--status bar-->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorError">@color/colorPrimaryDark2</item>
        <item name="colorPrimaryVariant">@color/colorPrimary2</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="fontFamily">@font/lato_regular</item>
        <item name="buttonStyle">@style/DefaultButtonStyle</item>

    </style>
    <style name="DefaultButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="type_mobile_no">
        <item name="android:textSize">
            15sp
        </item>
        <item name="android:textColor">
            #575555
        </item>
    </style>


    <style name="register_error_msg">
        <item name="android:textSize">
            @dimen/_14sp
        </item>
        <item name="android:textColor">
            #FF475D
        </item>
    </style>
</resources>