<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="chatMessage"
            type="org.intelehealth.feature.chat.room.entity.ChatMessage" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/std_8dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgSenderProfilePic"
            android:layout_width="@dimen/std_24dp"
            android:layout_height="@dimen/std_24dp"
            android:background="@color/colorAccent"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />

        <View
            android:id="@+id/viewBackgroundSender"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/chat_right_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/imgSenderProfilePic"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.7" />


        <TextView
            android:id="@+id/tvSenderName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/std_8dp"
            android:gravity="end|center_vertical"
            android:maxLines="1"
            android:padding="8dip"
            android:text="@{chatMessage.senderName}"
            android:textColor="@color/gray_7"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/viewBackgroundSender"
            app:layout_constraintTop_toTopOf="@id/viewBackgroundSender"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="Sender name" />

        <TextView
            android:id="@+id/tvSenderMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/std_8dp"
            android:layout_marginBottom="@dimen/std_8dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/std_8dp"
            android:text="@{chatMessage.message}"
            android:textColor="@color/gray_7"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="@id/viewBackgroundSender"
            app:layout_constraintStart_toStartOf="@id/viewBackgroundSender"
            app:layout_constraintTop_toBottomOf="@id/tvSenderName"
            tools:text="@string/dummy_text" />

        <TextView
            android:id="@+id/tvMessageTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/std_8dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:padding="@dimen/std_8dp"
            android:text="@{chatMessage.messageTime}"
            android:textColor="@color/gray_3"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@id/tvSenderName"
            app:layout_constraintEnd_toEndOf="@id/viewBackgroundSender"
            app:layout_constraintTop_toTopOf="@id/tvSenderName"
            tools:ignore="SmallSp"
            tools:text="4.31 PM" />

        <TextView
            android:id="@+id/tvMessageStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/std_8dp"
            android:drawablePadding="8dip"
            android:gravity="center_vertical"
            android:padding="@dimen/std_8dp"
            android:status="@{chatMessage.messageStatus}"
            android:text="@string/sent"
            android:textColor="@color/gray_3"
            android:textSize="10sp"
            app:drawableStartCompat="@drawable/read_status_icon"
            app:layout_constraintBottom_toBottomOf="@id/viewBackgroundSender"
            app:layout_constraintEnd_toEndOf="@id/viewBackgroundSender"
            app:layout_constraintTop_toBottomOf="@id/tvSenderMessage"
            tools:ignore="SmallSp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
