<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.myhexaville.androidwebrtc.com.shivam.androidwebrtc.tutorial.MediaStreamActivity">

        <include
            android:id="@+id/videoCallView"
            layout="@layout/content_video_call" />

        <TextView
            android:id="@+id/status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/connecting"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <include
            android:id="@+id/incomingCallView"
            layout="@layout/view_incoming_call_ringing"
            android:visibility="gone" />
    </RelativeLayout>
</layout>


