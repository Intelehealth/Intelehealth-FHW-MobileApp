<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/login_screen_padding"
        android:paddingBottom="@dimen/login_screen_padding">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvResetPasswordTitle"
            style="@style/Theme.EZazi.Screen.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_reset_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvResetPasswordContent"
            style="@style/Theme.EZazi.Text.Content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/screen_container_padding"
            android:gravity="start"
            android:text="@string/content_reset_password"
            android:textColor="@color/font_black_0"
            app:layout_constraintStart_toStartOf="@id/tvResetPasswordTitle"
            app:layout_constraintTop_toBottomOf="@id/tvResetPasswordTitle" />

        <include
            android:id="@+id/contentResetPassword"
            layout="@layout/content_reset_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/btnSave"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvResetPasswordContent" />

        <TextView
            android:id="@+id/txtPasswordHint"
            style="@style/Theme.EZazi.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/reset_password_hint"
            android:textColor="@color/red"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/btnSave"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/contentResetPassword" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            style="@style/Theme.EZazi.Button.Next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_height"
            android:layout_marginTop="@dimen/form_top_margin"
            android:enabled="false"
            android:text="@string/save_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/contentResetPassword"
            app:rippleColor="@color/white" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>