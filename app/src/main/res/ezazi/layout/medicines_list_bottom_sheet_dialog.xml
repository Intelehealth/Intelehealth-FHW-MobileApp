<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/white"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsvVisitLabour"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/screen_padding"
            android:layout_marginBottom="@dimen/screen_padding"
            android:background="@drawable/container_bg_rounded"
            android:padding="@dimen/screen_container_padding"
            app:layout_constraintBottom_toTopOf="@id/btnLabourSubmit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_labour_complete"
                    style="@style/Theme.EZazi.Material.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/labour_completed"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <org.intelehealth.ezazi.ui.custom.RightAlignErrorTextInputLayout
                        android:id="@+id/etLayoutLabour"
                        style="@style/Widget.MyApp.TextInputLayout.custom.dropdown"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/list_container_padding"
                        android:hint="@string/labour_completed">

                        <AutoCompleteTextView
                            android:id="@+id/autotv_labour_completed"
                            style="@style/Theme.EZazi.Scrollbar.Thumb"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:dropDownSelector="@color/white"
                            android:editable="false"
                            android:focusable="false"
                            android:inputType="none"
                            android:maxLines="1"
                            android:minHeight="@dimen/max_address_input_height"
                            android:textAlignment="viewStart"
                            android:textSize="@dimen/input_inner_size" />

                    </org.intelehealth.ezazi.ui.custom.RightAlignErrorTextInputLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_birth_weight"
                    style="@style/Theme.EZazi.Material.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dialog_input_margin_top"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/card_labour_complete">

                    <org.intelehealth.ezazi.ui.custom.RightAlignErrorTextInputLayout
                        android:id="@+id/etLayoutBirthWeight"
                        style="@style/Widget.MyApp.TextInputLayout.custom.dropdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/list_container_padding"
                        android:hint="@string/select_birth_weight">

                        <AutoCompleteTextView
                            android:id="@+id/autotv_birth_weight"
                            style="@style/Theme.EZazi.Scrollbar.Thumb"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:dropDownHeight="@dimen/dropdown_max_height"
                            android:dropDownSelector="@color/white"
                            android:editable="false"
                            android:focusable="false"
                            android:inputType="none"
                            android:maxLines="1"
                            android:minHeight="@dimen/max_address_input_height"
                            android:textAlignment="viewStart"
                            android:textSize="@dimen/input_inner_size" />

                    </org.intelehealth.ezazi.ui.custom.RightAlignErrorTextInputLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_apgar_1min"
                    style="@style/Theme.EZazi.Material.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dialog_input_margin_top"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/card_birth_weight">

                    <org.intelehealth.ezazi.ui.custom.RightAlignErrorTextInputLayout
                        android:id="@+id/etLayoutApgar1"
                        style="@style/Widget.MyApp.TextInputLayout.custom.dropdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/list_container_padding"
                        android:hint="@string/apgar_1min">

                        <AutoCompleteTextView
                            android:id="@+id/autotv_apgar_1min"
                            style="@style/Theme.EZazi.Scrollbar.Thumb"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:dropDownHeight="@dimen/dropdown_max_height"
                            android:dropDownSelector="@color/white"
                            android:editable="false"
                            android:focusable="false"
                            android:inputType="none"
                            android:maxLines="1"
                            android:minHeight="@dimen/max_address_input_height"
                            android:textAlignment="viewStart"
                            android:textSize="@dimen/input_inner_size" />

                    </org.intelehealth.ezazi.ui.custom.RightAlignErrorTextInputLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_apgar_5min"
                    style="@style/Theme.EZazi.Material.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dialog_input_margin_top"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/card_apgar_1min">

                    <org.intelehealth.ezazi.ui.custom.RightAlignErrorTextInputLayout
                        android:id="@+id/etLayoutApgar5"
                        style="@style/Widget.MyApp.TextInputLayout.custom.dropdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/list_container_padding"
                        android:hint="@string/apgar_5min">

                        <AutoCompleteTextView
                            android:id="@+id/autotv_apgar_5min"
                            style="@style/Theme.EZazi.Scrollbar.Thumb"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:dropDownHeight="@dimen/dropdown_max_height"
                            android:dropDownSelector="@color/white"
                            android:editable="false"
                            android:focusable="false"
                            android:inputType="none"
                            android:maxLines="1"
                            android:minHeight="@dimen/max_address_input_height"
                            android:textAlignment="viewStart"
                            android:textSize="@dimen/input_inner_size" />

                    </org.intelehealth.ezazi.ui.custom.RightAlignErrorTextInputLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_baby_gender"
                    style="@style/Theme.EZazi.Material.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dialog_input_margin_top"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/card_apgar_5min">

                    <org.intelehealth.ezazi.ui.custom.RightAlignErrorTextInputLayout
                        android:id="@+id/etLayoutBabyGender"
                        style="@style/Widget.MyApp.TextInputLayout.custom.dropdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/list_container_padding"
                        android:hint="@string/baby_sex">

                        <AutoCompleteTextView
                            android:id="@+id/autotv_baby_gender"
                            style="@style/Theme.EZazi.Scrollbar.Thumb"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:dropDownSelector="@color/white"
                            android:editable="false"
                            android:focusable="false"
                            android:inputType="none"
                            android:maxLines="1"
                            android:minHeight="@dimen/max_address_input_height"
                            android:textAlignment="viewStart"
                            android:textSize="@dimen/input_inner_size" />

                    </org.intelehealth.ezazi.ui.custom.RightAlignErrorTextInputLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_baby_status"
                    style="@style/Theme.EZazi.Material.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dialog_input_margin_top"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/card_baby_gender">

                    <org.intelehealth.ezazi.ui.custom.RightAlignErrorTextInputLayout
                        android:id="@+id/etLayout_baby_status"
                        style="@style/Theme.EZazi.Input.Add.Patient"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/list_container_padding"
                        android:hint="@string/baby_status">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_baby_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:imeOptions="actionNext"
                            android:importantForAutofill="no"
                            android:inputType="none"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textSize="@dimen/input_inner_size" />
                    </org.intelehealth.ezazi.ui.custom.RightAlignErrorTextInputLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_mother_status"
                    style="@style/Theme.EZazi.Material.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dialog_input_margin_top"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/card_baby_status">

                    <org.intelehealth.ezazi.ui.custom.RightAlignErrorTextInputLayout
                        android:id="@+id/etLayout_mother_status"
                        style="@style/Theme.EZazi.Input.Add.Patient"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/list_container_padding"
                        android:hint="@string/mother_status">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_mother_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:imeOptions="actionNext"
                            android:importantForAutofill="no"
                            android:inputType="none"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textSize="@dimen/input_inner_size" />
                    </org.intelehealth.ezazi.ui.custom.RightAlignErrorTextInputLayout>

                </com.google.android.material.card.MaterialCardView>

                <org.intelehealth.ezazi.ui.custom.RightAlignErrorTextInputLayout
                    android:id="@+id/etLayout_other_comment"
                    style="@style/Theme.EZazi.Input.Add.Patient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dialog_input_margin_top"
                    app:boxBackgroundColor="@color/color_input_bg"
                    app:counterEnabled="true"
                    app:counterMaxLength="300"
                    app:endIconCheckable="true"
                    app:endIconMode="clear_text"
                    app:hintEnabled="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/card_mother_status">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_other_comment"
                        style="@style/Theme.EZazi.Input.Dialog.Stage2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:hint="@string/enter_other_comment"
                        android:imeOptions="actionNext"
                        android:inputType="textMultiLine"
                        android:lineSpacingExtra="@dimen/std_4dp"
                        android:lines="5"
                        android:maxLength="300"
                        android:textColor="@color/colorInputText"
                        android:textSize="@dimen/input_inner_size" />

                </org.intelehealth.ezazi.ui.custom.RightAlignErrorTextInputLayout>

                <org.intelehealth.ezazi.ui.custom.RightAlignErrorTextInputLayout
                    android:id="@+id/etLayout_deceased_reason"
                    style="@style/Theme.EZazi.Input.Add.Patient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/list_container_padding"
                    app:counterEnabled="true"
                    app:counterMaxLength="300"
                    app:endIconMode="clear_text"
                    app:hintEnabled="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/etLayout_other_comment">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_deceased_reason"
                        style="@style/Theme.EZazi.Input.Dialog.Stage2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:hint="@string/enter_reason_deceased"
                        android:imeOptions="actionDone"
                        android:inputType="textMultiLine"
                        android:lineSpacingExtra="@dimen/std_4dp"
                        android:lines="5"
                        android:maxLength="300"
                        android:textColor="@color/colorInputText"
                        android:textSize="@dimen/input_inner_size" />

                </org.intelehealth.ezazi.ui.custom.RightAlignErrorTextInputLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLabourSubmit"
            style="@style/Theme.EZazi.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/screen_padding"
            android:layout_marginVertical="@dimen/screen_padding"
            android:text="@string/save_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
