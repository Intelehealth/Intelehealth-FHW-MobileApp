<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clMedicineDialogRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        app:enableEdgeToEdge="true"
        app:layout_behavior="org.intelehealth.ezazi.partogram.behavior.LockableBottomSheetBehavior">

        <include
            android:id="@+id/bottomSheetAppBar"
            layout="@layout/bottom_sheet_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clMedicineListContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/screen_padding"
            android:layout_marginBottom="@dimen/screen_padding"
            android:background="@drawable/container_bg_rounded"
            android:contentDescription="@string/content_item_container"
            app:layout_constraintBottom_toTopOf="@id/btnSaveMedicines"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bottomSheetAppBar">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMedicines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/screen_container_padding"
                android:contentDescription="@string/content_added_medicine_list"
                android:padding="@dimen/screen_container_padding"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:itemCount="5"
                tools:listitem="@layout/row_item_medicine" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddMoreMedicine"
                style="@style/Theme.EZazi.TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/screen_container_padding"
                android:layout_marginVertical="@dimen/screen_container_padding"
                android:paddingStart="@dimen/screen_padding"
                android:paddingTop="@dimen/screen_container_padding"
                android:paddingEnd="@dimen/screen_padding"
                android:paddingBottom="@dimen/screen_container_padding"
                android:text="@string/lbl_add_new_medicine"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rvMedicines" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSaveMedicines"
            style="@style/Theme.EZazi.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/screen_padding"
            android:layout_marginVertical="@dimen/screen_padding"
            android:text="@string/save_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clAddNewMedicineRoot"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/dialog_transparency_bg"
            android:clickable="false"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <include
                android:id="@+id/includeAddNewMedicineDialog"
                layout="@layout/view_add_new_medicine"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
