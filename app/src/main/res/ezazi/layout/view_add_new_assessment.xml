<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="updatePosition"
            type="Integer" />

        <variable
            name="assessment"
            type="org.intelehealth.ezazi.models.dto.ObsDTO"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clContainerNewAssessment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_menu_bg"
        android:contentDescription="@string/content_new_medicine_container"
        android:elevation="@dimen/std_20dp"
        android:padding="@dimen/screen_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvLblAddNewAssessment"
            style="@style/Theme.EZazi.Screen.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/lbl_add_new_assessment"
            android:text="@string/lbl_add_new_assessment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clAddNewAssessmentInputBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/screen_padding"
            android:background="@drawable/container_bg_rounded"
            android:contentDescription="@string/content_item_container"
            android:padding="@dimen/screen_container_padding"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvLblAddNewAssessment">

            <org.intelehealth.ezazi.ui.custom.RightAlignErrorTextInputLayout
                android:id="@+id/etLayoutMotherDeceased"
                style="@style/Theme.EZazi.Input.Login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxStrokeColor="@color/colorLoginInputStroke"
                app:boxStrokeWidth="@dimen/input_stroke_size"
                app:counterEnabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNewAssessment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:gravity="start"
                    android:hint="@string/enter_here"
                    android:text="@{assessment.value}"
                    android:imeOptions="actionDone"
                    android:inputType="textMultiLine"
                    android:lineSpacingExtra="@dimen/std_4dp"
                    android:lines="5"
                    android:textColor="@color/colorInputText"
                    android:textSize="@dimen/input_inner_size" />

            </org.intelehealth.ezazi.ui.custom.RightAlignErrorTextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddAssessmentCancel"
                style="@style/Theme.EZazi.Button.White"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/screen_padding"
                android:layout_marginEnd="@dimen/screen_container_padding"
                android:contentDescription="@string/cancel"
                android:text="@string/cancel"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnAddAssessmentAdd"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etLayoutMotherDeceased" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddAssessmentAdd"
                style="@style/Theme.EZazi.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/screen_container_padding"
                android:contentDescription="@string/lbl_add_new_plan"
                android:text="@string/lbl_add"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btnAddAssessmentCancel" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>