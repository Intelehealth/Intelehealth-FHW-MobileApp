<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/design_bottom_navigation_height"
    android:background="@drawable/bottom_menu_bg"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/actionbar_vertical_padding"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/actionbar_vertical_padding"
    tools:ignore="PrivateResource">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/endStageButton"
        style="@style/Theme.EZazi.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingStart="@dimen/icon_btn_padding"
        android:paddingEnd="@dimen/icon_btn_padding"
        android:text="@string/endStageButton"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@id/fabSOS"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/fabSOS" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fabc"
        style="@style/Theme.EZazi.Button.Icon.Blue"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:enabled="false"
        app:icon="@drawable/ic_chat"
        app:layout_constraintBottom_toBottomOf="@id/fabSOS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/fabSOS" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fabv"
        style="@style/Theme.EZazi.Button.Icon.Blue"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:contentDescription="@string/chat_fab"
        android:enabled="false"
        app:icon="@drawable/ic_video_call"
        app:layout_constraintBottom_toBottomOf="@id/fabSOS"
        app:layout_constraintEnd_toStartOf="@id/fabc"
        app:layout_constraintStart_toEndOf="@id/fabSOS"
        app:layout_constraintTop_toTopOf="@id/fabSOS" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fabSOS"
        style="@style/Theme.EZazi.Button.Emergency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_sos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/fabv"
        app:layout_constraintStart_toEndOf="@id/endStageButton"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/outcomeTV"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>