<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/white_child_container_bg"
        android:orientation="vertical"
        android:padding="@dimen/screen_container_padding">
        <org.intelehealth.ezazi.ui.custom.RightAlignErrorTextInputLayout
            android:id="@+id/etLayoutMotherDeceased"
            style="@style/Theme.EZazi.Input.Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeColor="@color/colorLoginInputStroke"
            app:boxStrokeWidth="@dimen/input_stroke_size"
            app:counterEnabled="true"
            app:counterMaxLength="300"
            app:endIconMode="clear_text">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etMotherDeceasedReason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:gravity="start"
                android:hint="@string/enter_out_of_time_reason"
                android:imeOptions="actionDone"
                android:inputType="textMultiLine"
                android:lineSpacingExtra="@dimen/std_4dp"
                android:lines="5"
                android:maxLength="300"
                android:textColor="@color/colorInputText"
                android:textSize="@dimen/input_inner_size" />

        </org.intelehealth.ezazi.ui.custom.RightAlignErrorTextInputLayout>

    </LinearLayout>
</layout>