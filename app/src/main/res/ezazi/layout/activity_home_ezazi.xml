<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.homeActivity.HomeActivity">

    <include
        layout="@layout/content_home_ezazi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior" />

    <!--<include layout="@layout/content_home" />-->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/Theme.EZazi.ActionBar.Padding"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            app:navigationIcon="@drawable/ic_home_logo"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:id="@+id/tvLastSyncStatus"
                style="@style/Theme.EZazi.LastSync.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="sfdfdfd" />

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/bottom_menu_bg"
        android:padding="@dimen/screen_container_padding"
        app:itemIconSize="@dimen/bottom_menu_icon_size"
        app:itemIconTint="?colorPrimary"
        app:itemTextAppearanceActive="@style/Theme.EZazi.Bottom.Menu.Text"
        app:itemTextAppearanceInactive="@style/Theme.EZazi.Bottom.Menu.Text"
        app:itemTextColor="?colorPrimary"
        app:menu="@menu/home_bottom_menu" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>