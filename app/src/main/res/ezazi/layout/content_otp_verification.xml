<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tvEnterMobileNumber"
            style="@style/Theme.EZazi.Heading2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_verification_code"
            android:textColor="@color/font_black_0"
            android:textSize="@dimen/forgot_password_label_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvOtpInstruction"
            style="@style/Theme.EZazi.Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/screen_container_padding"
            android:text="@string/content_verification_code"
            android:textColor="@color/darkGray"
            android:textSize="@dimen/forgot_password_instruction_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvEnterMobileNumber" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/etPinLayout"
            style="@style/Theme.EZazi.Material.CardView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/screen_padding"
            android:layout_weight="1.3"
            app:strokeWidth="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvOtpInstruction">

            <com.alimuzaffar.lib.pin.PinEntryEditText
                android:id="@+id/pinEntryEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cursorVisible="false"
                android:digits="1234567890"
                android:fontFamily="@font/dm_sans_bold"
                android:inputType="number"
                android:maxLength="6"
                android:padding="0dp"
                android:textIsSelectable="false"
                android:textSize="@dimen/pin_input_size"
                app:pinAnimationType="popIn"
                app:pinBackgroundDrawable="@drawable/selector_pin_input"
                app:pinBackgroundIsSquare="true"
                app:pinCharacterSpacing="@dimen/screen_container_padding"
                app:pinTextBottomPadding="@dimen/pin_bottom_padding" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tvErrorPin"
            style="@style/Theme.EZazi.Input.Error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/validation_error_tv_margin_top"
            android:gravity="end"
            android:lineSpacingExtra="0sp"
            android:text="This field is mandatory"
            android:textColor="@color/red"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etPinLayout" />

        <TextView
            android:id="@+id/tvNotReceived"
            style="@style/Theme.EZazi.Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/screen_padding"
            android:text="@string/lbl_did_not_receive_otp"
            android:textColor="@color/darkGray"
            android:textSize="@dimen/forgot_password_instruction_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etPinLayout" />

        <TextView
            android:id="@+id/tvResend"
            style="@style/Theme.EZazi.Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/screen_container_padding"
            android:text="@string/lbl_resend"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/forgot_password_instruction_size"
            app:layout_constraintBottom_toBottomOf="@id/tvNotReceived"
            app:layout_constraintStart_toEndOf="@id/tvNotReceived"
            app:layout_constraintTop_toTopOf="@id/tvNotReceived" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>