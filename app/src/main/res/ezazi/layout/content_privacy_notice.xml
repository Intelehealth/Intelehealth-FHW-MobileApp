<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">


    <View
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/screen_padding"
        android:background="@drawable/container_bg" />

    <ScrollView
        style="@style/Theme.EZazi.Scrollbar.Thumb"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/screen_container_padding"
        android:layout_marginTop="@dimen/screen_container_padding"
        android:layout_marginBottom="@dimen/screen_padding"
        android:background="@drawable/white_child_container_bg"
        android:fadeScrollbars="false"
        android:padding="@dimen/screen_container_padding"
        app:layout_constraintBottom_toTopOf="@id/buttons"
        app:layout_constraintEnd_toEndOf="@id/container"
        app:layout_constraintStart_toStartOf="@id/container"
        app:layout_constraintTop_toTopOf="@id/container">
        <!--Scrollable content here-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/actionbar_vertical_padding">

            <TextView
                android:id="@+id/privacy_text"
                style="@style/Theme.EZazi.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/actionbar_vertical_padding"
                android:text="Lörem ipsum uligen ud nånannanism jirövis. Carina Lindqvist lunt nidat beren fastän tisapp att såjyr Barbro Nordström jin. Makrosk tetrapärade jag vans dekatt pultvätta sys bede masoligt. Kärrtorpa syvir ifall losm dol. Sektiga olig der plan, och Gun Månsson. Roland Falk upände, om dere hemiv om lalöling Adam Sundström utom Kristina Söderberg när geore ifall ysat. Seliga rallylydnad, restdejting filosofi utan gigalona dovis sunat. Röskade påner, inte säns katubel dystes. Eulåliga pälödat i terrorresa mikromatisk regisk det vill säga kaning redigt i köling om akat. Blåljusyrke vididade tejyseskap proner ren, vande preligt. Lagugt renovräkning medan monokemi klämspärr Arne Arvidsson, i visk inte obelt, padifall. Presk nedyling dost och debyns lorade demibel dår. Vitinade makroning, nyr snurrmästare Elias Söderberg misam. Britt Åkesson dekangen. Magnus Öberg diryn Caroline Sundberg inte plar. Gubyn veganisera, bilog monossade fasm. Sul swishjournalist i div relår faspening Olov Andersson Viktor Sjöberg panbel androcism. Igisk skurkstat infrasam dovis transmodern."
                android:textAlignment="gravity" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/checkbox_CHO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/actionbar_vertical_padding"
                android:fontFamily="@font/dm_sans_medium"
                android:paddingStart="@dimen/screen_container_padding"
                android:text="@string/i_sevika_confirm_that_i_have_read_out_the_privacy_notice_and_consent_to_the_patient"
                android:textAppearance="@style/Theme.EZazi.Caption" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/screen_container_padding"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/screen_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/container"
        app:layout_constraintStart_toStartOf="@id/container">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_accept"
            style="@style/Theme.EZazi.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/accept"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/includeLoginInput" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_reject"
            style="@style/Theme.EZazi.Button.White"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/between_button_margin"
            android:layout_marginBottom="@dimen/screen_container_padding"
            android:text="@string/reject"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/includeLoginInput" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>