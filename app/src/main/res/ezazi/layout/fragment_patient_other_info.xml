<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.addNewPatient.PatientPersonalInfoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dp"
        android:background="@drawable/container_bg_rounded"
        android:paddingStart="12dp"
        android:paddingTop="14dp"
        android:paddingEnd="12dp"
        android:paddingBottom="14dp"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textView4"
                style="@style/LabelStyleAddPatient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="@string/admission_date"
                android:textColor="@color/colorBlack"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_date"
                style="@style/Theme.EZazi.Material.CardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/admission_date_margin_top"
                android:layout_marginEnd="@dimen/admission_date_margin_end"
                app:layout_constraintEnd_toStartOf="@+id/card_time"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/etLayout_admission_date"
                    style="@style/Theme.EZazi.Input.Add.Patient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:endIconDrawable="@drawable/ic_calendar_new"
                    app:endIconMode="custom">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_admission_date"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/input_add_patient_height"
                        android:backgroundTint="@color/white"
                        android:gravity="center_vertical"
                        android:hint="@string/date"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:maxLines="1"
                        android:paddingTop="@dimen/input_add_patient_padding_top"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_time"
                style="@style/Theme.EZazi.Material.CardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/time_margin_start"
                android:layout_marginTop="@dimen/admission_date_margin_top"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@+id/card_date"
                app:layout_constraintTop_toBottomOf="@+id/textView4">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/etLayout_admission_time"
                    style="@style/Theme.EZazi.Input.Add.Patient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:endIconDrawable="@drawable/ic_time_drawable"
                    app:endIconMode="custom">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_admission_time"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/input_add_patient_height"
                        android:backgroundTint="@color/white"
                        android:gravity="center_vertical"
                        android:hint="@string/time"

                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:maxLines="1"
                        android:paddingTop="@dimen/input_add_patient_padding_top"
                        android:singleLine="true"
                        app:drawableEndCompat="@drawable/ic_time_drawable" />
                </com.google.android.material.textfield.TextInputLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/textView5"
                style="@style/LabelStyleAddPatient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/titles_margin_top"
                android:gravity="start"
                android:text="@string/parity"
                android:textColor="@color/colorBlack"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_date" />

            <LinearLayout
                android:id="@+id/card_details1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/other_all_controls_margin_top"
                android:orientation="horizontal"
                android:weightSum="2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5">

                <com.google.android.material.card.MaterialCardView
                    style="@style/Theme.EZazi.Material.CardView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/date_margin_end"
                    android:layout_weight="1">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Theme.EZazi.Input.Add.Patient"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_total_birth"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/input_add_patient_height"
                            android:backgroundTint="@color/white"
                            android:gravity="center_vertical"
                            android:hint="@string/total_birth"
                            android:imeOptions="actionNext"
                            android:importantForAutofill="no"
                            android:maxLines="1"
                            android:paddingTop="@dimen/input_add_patient_padding_top"
                            android:singleLine="true" />
                    </com.google.android.material.textfield.TextInputLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    style="@style/Theme.EZazi.Material.CardView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/time_margin_start"
                    android:layout_weight="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toEndOf="@+id/card_date"
                    app:layout_constraintTop_toBottomOf="@+id/textView4">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Theme.EZazi.Input.Add.Patient"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_total_miscarriage"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/input_add_patient_height"
                            android:backgroundTint="@color/white"
                            android:gravity="center_vertical"
                            android:hint="@string/total_miscarriage"
                            android:imeOptions="actionNext"
                            android:importantForAutofill="no"
                            android:maxLines="1"
                            android:paddingTop="@dimen/input_add_patient_padding_top"
                            android:singleLine="true" />
                    </com.google.android.material.textfield.TextInputLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <TextView
                android:id="@+id/textView6"
                style="@style/LabelStyleAddPatient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/titles_margin_top"
                android:gravity="start"
                android:text="@string/labor_onset"
                android:textColor="@color/colorBlack"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_details1" />

            <LinearLayout
                android:id="@+id/card_labour_onset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/other_all_controls_margin_top"
                android:orientation="horizontal"
                android:weightSum="2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6">

                <TextView
                    android:id="@+id/et_spontaneous"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg_rounded_corners"
                    android:gravity="center"
                    android:text="@string/spontaneous"
                    android:textSize="@dimen/std_12sp" />

                <TextView
                    android:id="@+id/et_induced"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg_rounded_corners"
                    android:gravity="center"
                    android:text="@string/induced"
                    android:textSize="@dimen/std_12sp" />

