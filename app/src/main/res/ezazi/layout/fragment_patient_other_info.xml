                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg_rounded_corners"
                    android:gravity="center"
                    android:text="@string/other"
                    android:textSize="@dimen/std_12sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView11"
                style="@style/LabelStyleAddPatient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/titles_margin_top"
                android:gravity="start"
                android:text="@string/primary_doctor"
                android:textColor="@color/colorBlack"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_options" />


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/dropdown_primary_doctor"
                style="@style/Theme.EZazi.Material.CardView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/spinners_add_patient_height"
                android:layout_marginTop="@dimen/other_all_controls_margin_top"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView11">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Theme.EZazi.Input.Add.Patient.DropDown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="true">

                    <AutoCompleteTextView
                        android:id="@+id/autotv_primary_doctor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:hint="@string/primary_doctor"
                        android:inputType="none"
                        android:paddingTop="@dimen/input_add_patient_padding_top" />

                </com.google.android.material.textfield.TextInputLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/textView12"
                style="@style/LabelStyleAddPatient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/titles_margin_top"
                android:gravity="start"
                android:text="@string/secondary_doctor"
                android:textColor="@color/colorBlack"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dropdown_primary_doctor" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/dropdown_secondary_doctor"
                style="@style/Theme.EZazi.Material.CardView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/spinners_add_patient_height"
                android:layout_marginTop="@dimen/other_all_controls_margin_top"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView12">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Theme.EZazi.Input.Add.Patient.DropDown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="true">

                    <AutoCompleteTextView
                        android:id="@+id/autotv_secondary_doctor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:hint="@string/secondary_doctor"
                        android:inputType="none"
                        android:paddingTop="@dimen/input_add_patient_padding_top" />

                </com.google.android.material.textfield.TextInputLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/textView13"
                style="@style/LabelStyleAddPatient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/titles_margin_top"
                android:gravity="start"
                android:text="@string/bed_number"
                android:textColor="@color/colorBlack"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dropdown_secondary_doctor" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_bed_no"
                style="@style/Theme.EZazi.Material.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/other_all_controls_margin_top"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView13">


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Theme.EZazi.Input.Add.Patient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_bed_number"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/input_add_patient_height"
                        android:backgroundTint="@color/white"
                        android:hint="@string/bed_number"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:maxLines="1"
                        android:paddingTop="@dimen/input_add_patient_padding_top"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/button_add_patient_margin_bottom"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_back_other"
            style="@style/Theme.EZazi.Button.White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/button_add_patient_margin"
            android:layout_weight="1"
            android:text="@string/back" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_next_other"
            style="@style/Theme.EZazi.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/button_add_patient_margin"
            android:layout_weight="1"
            android:drawableEnd="@drawable/ui2_ic_baseline_arrow_forward_24"
            android:drawableTint="@color/white"
            android:text="@string/next">

        </com.google.android.material.button.MaterialButton>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

