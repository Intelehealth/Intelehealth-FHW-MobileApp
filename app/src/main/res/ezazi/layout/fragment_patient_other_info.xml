<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/screen_padding"
    tools:context=".activities.addNewPatient.PatientPersonalInfoFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_other_info"
        android:layout_width="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_bottom_scroll"
        android:background="@drawable/container_bg_rounded"
        android:padding="@dimen/screen_container_padding"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                style="@style/LabelStyleAddPatient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="@string/admission_date"
                android:textColor="@color/colorBlack"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/card_addmission_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/admission_date_margin_top"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_date_admission"
                    style="@style/Theme.EZazi.Material.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/etLayout_admission_date"
                        style="@style/Theme.EZazi.Input.Add.Patient"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/list_container_padding"
                        app:endIconDrawable="@drawable/ic_calendar_new"
                        app:endIconMode="custom">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_admission_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:gravity="center_vertical"
                            android:hint="@string/date"
                            android:imeOptions="actionNext"
                            android:importantForAutofill="no"
                            android:inputType="none"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textSize="@dimen/input_inner_size" />
                    </com.google.android.material.textfield.TextInputLayout>

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/tv_admission_date_error"
                    style="@style/Textview_Validation_Error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/validation_error_tv_margin_top"
                    android:layout_marginEnd="@dimen/admission_date_margin_end"
                    android:gravity="end"
                    android:lineSpacingExtra="0sp"
                    android:text="This field is mandatory"
                    android:visibility="gone" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_time_admission"
                    style="@style/Theme.EZazi.Material.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/screen_container_padding">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/etLayout_admission_time"
                        style="@style/Theme.EZazi.Input.Add.Patient"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/list_container_padding"
                        app:endIconDrawable="@drawable/ic_time_drawable"
                        app:endIconMode="custom">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_admission_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:gravity="center_vertical"
                            android:hint="@string/time"
                            android:imeOptions="actionNext"
                            android:importantForAutofill="no"
                            android:inputType="none"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textSize="@dimen/input_inner_size"
                            app:drawableEndCompat="@drawable/ic_time_drawable" />
                    </com.google.android.material.textfield.TextInputLayout>

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/tv_admission_time_error"
                    style="@style/Textview_Validation_Error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/validation_error_tv_margin_top"
                    android:gravity="end"
                    android:lineSpacingExtra="0sp"
                    android:text="This field is mandatory"
                    android:visibility="gone" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView5"
                style="@style/LabelStyleAddPatient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/titles_margin_top"
                android:gravity="start"
                android:text="@string/parity"
                android:textColor="@color/colorBlack"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_date" />

            <LinearLayout
                android:id="@+id/card_details1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/admission_date_margin_top"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_total_birth"
                    style="@style/Theme.EZazi.Material.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Theme.EZazi.Input.Add.Patient"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/list_container_padding">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_total_birth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:hint="@string/total_birth"
                            android:maxLength="2"
                            android:imeOptions="actionNext"
                            android:importantForAutofill="no"
                            android:inputType="number"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textSize="@dimen/input_inner_size" />
                    </com.google.android.material.textfield.TextInputLayout>

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/tv_parity_date_error"
                    style="@style/Textview_Validation_Error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/validation_error_tv_margin_top"
                    android:layout_marginEnd="@dimen/admission_date_margin_end"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:lineSpacingExtra="0sp"
                    android:text="This field is mandatory"
                    android:visibility="gone" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_total_miscarraige"
                    style="@style/Theme.EZazi.Material.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/screen_container_padding"
                    android:layout_weight="1">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Theme.EZazi.Input.Add.Patient"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/list_container_padding">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_total_miscarriage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:hint="@string/total_miscarriage"
                            android:imeOptions="actionNext"
                            android:importantForAutofill="no"
                            android:inputType="number"
                            android:maxLines="1"
                            android:maxLength="1"
                            android:singleLine="true"
                            android:textSize="@dimen/input_inner_size" />
                    </com.google.android.material.textfield.TextInputLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
                <TextView
                    android:id="@+id/tv_parity_time_error"
                    style="@style/Textview_Validation_Error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/validation_error_tv_margin_top"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:lineSpacingExtra="0sp"
                    android:text="@string/this_field_is_mandatory"
                    android:visibility="gone" />

            <TextView
                android:id="@+id/textView6"
                style="@style/LabelStyleAddPatient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/titles_margin_top"
                android:gravity="start"
                android:text="@string/labor_onset"
                android:textColor="@color/colorBlack"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_details1" />

            <LinearLayout
                android:id="@+id/card_labour_onset"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_add_patient_height"
                android:layout_marginTop="@dimen/admission_date_margin_top"
                android:orientation="horizontal"
                android:weightSum="2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6">

                <TextView
                    android:id="@+id/et_spontaneous"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/screen_container_padding"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg_rounded_corners"
                    android:gravity="center"
                    android:text="@string/spontaneous"
                    android:textColor="@color/darkGray"
                    android:textSize="@dimen/input_inner_size" />

                <TextView
                    android:id="@+id/et_induced"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg_rounded_corners"
                    android:gravity="center"
                    android:text="@string/induced"
                    android:textColor="@color/darkGray"
                    android:textSize="@dimen/input_inner_size" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_error_labour_onset"
                style="@style/Textview_Validation_Error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/validation_error_tv_margin_top"
                android:layout_weight="1"
                android:gravity="end"
                android:lineSpacingExtra="0sp"
                android:text="This field is mandatory"
                android:visibility="gone" />

            <!--    <RelativeLayout
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/titles_margin_top"
                    android:layout_marginBottom="@dimen/when_diagnosed_margin_bottom"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/card_labour_onset">
    -->
            <TextView
                android:id="@+id/textView7"
                style="@style/LabelStyleAddPatient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/titles_margin_top"
                android:text="@string/when_diagnosed"
                android:textColor="@color/colorBlack" />

            <!--
                        </RelativeLayout>
            -->

            <LinearLayout
                android:id="@+id/card_labour_diagnosed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/admission_date_margin_top"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_diagnosed_date"
                    style="@style/Theme.EZazi.Material.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/etLayout_labor_diagnosed_date"
                        style="@style/Theme.EZazi.Input.Add.Patient"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/list_container_padding"
                        app:endIconDrawable="@drawable/ic_calendar_new"
                        app:endIconMode="custom">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_labor_diagnosed_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:hint="@string/date"
                            android:imeOptions="actionNext"
                            android:importantForAutofill="no"
                            android:inputType="none"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textSize="@dimen/input_inner_size"
                            app:drawableEndCompat="@drawable/ic_calendar_new" />
                    </com.google.android.material.textfield.TextInputLayout>

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/tv_labour_diagnosed_date_error"
                    style="@style/Textview_Validation_Error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/admission_date_margin_end"
                    android:gravity="end"
                    android:lineSpacingExtra="0sp"
                    android:text="@string/this_field_is_mandatory"
                    android:visibility="gone" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_diagnosed_time"
                    style="@style/Theme.EZazi.Material.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/screen_container_padding">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/etLayout_labor_diagnosed_time"
                        style="@style/Theme.EZazi.Input.Add.Patient"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/list_container_padding"
                        app:endIconDrawable="@drawable/ic_time_drawable"
                        app:endIconMode="custom">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_labor_diagnosed_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:gravity="center_vertical"
                            android:hint="@string/time"
                            android:imeOptions="actionNext"
                            android:importantForAutofill="no"
                            android:inputType="none"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textSize="@dimen/input_inner_size"
                            app:drawableEndCompat="@drawable/ic_calendar_new" />
                    </com.google.android.material.textfield.TextInputLayout>

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/tv_labour_diagnosed_time_error"
                    style="@style/Textview_Validation_Error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:lineSpacingExtra="0sp"
                    android:text="This field is mandatory"
                    android:visibility="gone" />

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_labour_diagnosed">

                <TextView
                    style="@style/LabelStyleAddPatient"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/titles_margin_top"
                    android:gravity="start"
                    android:text="@string/sac_ruptured"
                    android:textColor="@color/colorBlack" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/mUnknownMembraneRupturedCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/other_info_checkbox_margin_top"
                    android:fontFamily="@font/dm_sans_medium"
                    android:gravity="center"
                    android:layoutDirection="rtl"
                    android:padding="5dp"
                    android:text="@string/unknown"
                    android:textAppearance="@style/Theme.EZazi.Caption"
                    android:textColor="@color/colorHighAlert"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/card_sac_ruptured"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/screen_container_padding"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_sac_ruptured_date"
                    style="@style/Theme.EZazi.Material.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/etLayout_sac_ruptured_date"
                        style="@style/Theme.EZazi.Input.Add.Patient"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/list_container_padding"
                        app:endIconDrawable="@drawable/ic_calendar_new"
                        app:endIconMode="custom">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_sac_ruptured_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:gravity="center_vertical"
                            android:hint="@string/date"
                            android:imeOptions="actionNext"
                            android:importantForAutofill="no"
                            android:inputType="none"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textSize="@dimen/input_inner_size"
                            app:drawableEndCompat="@drawable/ic_calendar_new" />
                    </com.google.android.material.textfield.TextInputLayout>

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/tv_sac_ruptured_date_error"
                    style="@style/Textview_Validation_Error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/validation_error_tv_margin_top"
                    android:layout_marginEnd="@dimen/admission_date_margin_end"
                    android:gravity="end"
                    android:lineSpacingExtra="0sp"
                    android:text="@string/this_field_is_mandatory"
                    android:visibility="gone" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_sac_ruptured_time"
                    style="@style/Theme.EZazi.Material.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/screen_container_padding">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/etLayout_sac_ruptured_time"
                        style="@style/Theme.EZazi.Input.Add.Patient"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/list_container_padding"
                        app:endIconDrawable="@drawable/ic_time_drawable"
                        app:endIconMode="custom">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_sac_ruptured_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:gravity="center_vertical"
                            android:hint="@string/time"
                            android:imeOptions="actionNext"
                            android:importantForAutofill="no"
                            android:inputType="none"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textSize="@dimen/input_inner_size"
                            app:drawableEndCompat="@drawable/ic_calendar_new" />
                    </com.google.android.material.textfield.TextInputLayout>

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/tv_sac_ruptured_time_error"
                    style="@style/Textview_Validation_Error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/validation_error_tv_margin_top"
                    android:gravity="end"
                    android:lineSpacingExtra="0sp"
                    android:text="@string/this_field_is_mandatory"
                    android:visibility="gone" />

            </LinearLayout>

            <include layout="@layout/view_other_tab_common_component" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <include
        layout="@layout/view_add_patient_bottom_action_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

