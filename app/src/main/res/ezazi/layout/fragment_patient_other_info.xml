                android:layout_marginTop="@dimen/titles_margin_top"
                android:gravity="start"
                android:text="@string/risk_factors"
                android:textColor="@color/colorBlack"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_sac_ruptured" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/dropdown_risk_factors"
                style="@style/Theme.EZazi.Material.CardView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/spinners_add_patient_height"
                android:layout_marginTop="@dimen/other_all_controls_margin_top"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView9">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Theme.EZazi.Input.Add.Patient.DropDown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="true">

                    <AutoCompleteTextView
                        android:id="@+id/autotv_risk_factors"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:hint="@string/risk_factors"
                        android:inputType="none"
                        android:paddingTop="@dimen/input_add_patient_padding_top" />

                </com.google.android.material.textfield.TextInputLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/textView10"
                style="@style/LabelStyleAddPatient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/titles_margin_top"
                android:gravity="start"
                android:text="@string/hospital_maternity"
                android:textColor="@color/colorBlack"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dropdown_risk_factors" />


            <LinearLayout
                android:id="@+id/card_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/other_all_controls_margin_top"
