                android:id="@+id/card_sac_ruptured"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/other_all_controls_margin_top"
                android:orientation="horizontal"
                android:weightSum="2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8">

                <com.google.android.material.card.MaterialCardView
                    style="@style/Theme.EZazi.Material.CardView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/date_margin_end"
                    android:layout_weight="1">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/etLayout_sac_ruptured_date"
                        style="@style/Theme.EZazi.Input.Add.Patient"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:endIconDrawable="@drawable/ic_calendar_new"
                        app:endIconMode="custom">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_sac_ruptured_date"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/input_add_patient_height"
                            android:backgroundTint="@color/white"
                            android:drawablePadding="30dp"
                            android:gravity="center_vertical"
                            android:hint="@string/date"
                            android:imeOptions="actionNext"
                            android:importantForAutofill="no"
                            android:maxLines="1"
                            android:paddingTop="@dimen/input_add_patient_padding_top"
                            android:singleLine="true"
                            app:drawableEndCompat="@drawable/ic_calendar_new" />
                    </com.google.android.material.textfield.TextInputLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    style="@style/Theme.EZazi.Material.CardView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/time_margin_start"
                    android:layout_weight="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toEndOf="@+id/card_date"
                    app:layout_constraintTop_toBottomOf="@+id/textView4">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/etLayout_sac_ruptured_time"
                        style="@style/Theme.EZazi.Input.Add.Patient"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:endIconDrawable="@drawable/ic_time_drawable"
                        app:endIconMode="custom">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_sac_ruptured_time"
