            </LinearLayout>

            <RelativeLayout
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="@dimen/when_diagnosed_margin_height"
                android:layout_marginTop="@dimen/when_diagnosed_margin_top"
                android:layout_marginBottom="@dimen/when_diagnosed_margin_bottom"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_labour_onset">

                <TextView
                    style="@style/LabelStyleAddPatient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/when_diagnosed"
                    android:textColor="@color/colorBlack" />

                <CheckBox
                    android:id="@+id/mUnknownMembraneRupturedCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/input_add_patient_height"
                    android:layout_alignParentEnd="true"
                    android:button="@drawable/ic_checkbox"
                    android:buttonTint="@color/blinkCardColor"
                    android:layoutDirection="rtl"
                    android:padding="5dp"
                    android:text="Unknown"
                    android:textColor="@color/colorHighAlert"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/card_labour_diagnosed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7">

                <com.google.android.material.card.MaterialCardView
                    style="@style/Theme.EZazi.Material.CardView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/date_margin_end"
                    android:layout_weight="1">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/etLayout_labor_diagnosed_date"
                        style="@style/Theme.EZazi.Input.Add.Patient"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:endIconDrawable="@drawable/ic_calendar_new"
                        app:endIconMode="custom">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_labor_diagnosed_date"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/input_add_patient_height"
                            android:backgroundTint="@color/white"
                            android:drawablePadding="30dp"
                            android:gravity="center_vertical"
                            android:hint="@string/date"
                            android:imeOptions="actionNext"
                            android:importantForAutofill="no"
                            android:maxLines="1"
                            android:paddingTop="@dimen/input_add_patient_padding_top"
                            android:singleLine="true"
                            app:drawableEndCompat="@drawable/ic_calendar_new" />
                    </com.google.android.material.textfield.TextInputLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    style="@style/Theme.EZazi.Material.CardView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/time_margin_start"
