<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="items"
            type="String[]" />

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/iv_fluids_option_included"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/list_container_padding">

        <TextView
            android:id="@+id/tvListOfMedicines"
            style="@style/Theme.EZazi.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_container_padding"
            android:gravity="center_vertical"
            android:hint="Select medicine"
            android:onClick="@{clickListener}"
            android:text="@{items[0]}"
            app:drawableEndCompat="@drawable/ic_baseline_expand_more_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etStrength"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/list_container_padding"
            android:background="@drawable/selector_dialog_list_item"
            android:gravity="center_vertical"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLength="200"
            android:padding="@dimen/small_btn_horizontal_padding"
            android:text="@{items[1]}"
            android:textSize="@dimen/input_inner_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvListOfMedicines"
            tools:hint="@string/strength" />

        <EditText
            android:id="@+id/etDosage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/list_container_padding"
            android:background="@drawable/selector_dialog_list_item"
            android:gravity="center_vertical"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLength="200"
            android:padding="@dimen/small_btn_horizontal_padding"
            android:text="@{items[2]}"
            android:textSize="@dimen/input_inner_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etStrength"
            tools:hint="@string/dosage" />

        <TextView
            android:id="@+id/tvRoute"
            style="@style/Theme.EZazi.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_container_padding"
            android:gravity="center_vertical"
            android:hint="select Route"
            android:onClick="@{clickListener}"
            android:text="@{items[1]}"
            app:drawableEndCompat="@drawable/ic_baseline_expand_more_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etDosage" />

        <TextView
            android:id="@+id/tvFrequency"
            style="@style/Theme.EZazi.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_container_padding"
            android:gravity="center_vertical"
            android:hint="Select frequency"
            android:onClick="@{clickListener}"
            android:text="@{items[2]}"
            app:drawableEndCompat="@drawable/ic_baseline_expand_more_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvRoute" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>