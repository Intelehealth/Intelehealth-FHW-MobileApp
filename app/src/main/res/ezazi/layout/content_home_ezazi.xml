<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingStart="@dimen/screen_padding"
    android:paddingEnd="@dimen/screen_padding">

    <View
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/home_container_top_margin"
        android:background="@drawable/container_bg"
        app:layout_constraintTop_toBottomOf="@id/tvWelcomeUser" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvWelcomeUser"
        style="@style/Theme.EZazi.Screen.Welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/screen_container_padding"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Hi! Nurse Jane" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEndShift"
        style="@style/Theme.EZazi.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/screen_container_padding"
        android:layout_marginRight="@dimen/screen_container_padding"
        android:text="@string/end_shift"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/tvWelcomeUser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvWelcomeUser" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvActiveVisitLabel"
        style="@style/Theme.EZazi.Screen.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/actionbar_vertical_padding"
        android:layout_marginTop="@dimen/screen_padding"
        android:text="@string/active_cases"
        android:textSize="@dimen/subheading_text_size"
        app:layout_constraintStart_toStartOf="@id/container"
        app:layout_constraintTop_toTopOf="@id/container"
        tools:text="Active Cases (8)" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clSearchContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/screen_container_padding"
        android:layout_marginTop="@dimen/actionbar_vertical_padding"
        android:background="@drawable/round_corner_gray_stroke_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/container"
        app:layout_constraintTop_toBottomOf="@id/tvActiveVisitLabel">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchView"
            style="@style/Theme.EZazi.Search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:theme="@style/Theme.EZazi.Search"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ivSearchIcon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivSearchIcon"
            style="@style/Theme.EZazi.Search.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/hint_search_cases"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--        <include-->
    <!--            android:id="@+id/includeSearchView"-->
    <!--            layout="@layout/search_view"-->
    <!--            android:layout_width="match_parent"-->
    <!--            android:layout_height="wrap_content"-->
    <!--            android:layout_marginTop="@dimen/std_16dp"-->
    <!--            app:layout_constraintEnd_toEndOf="parent"-->
    <!--            app:layout_constraintStart_toStartOf="parent"-->
    <!--            app:layout_constraintTop_toBottomOf="@id/tvActiveVisitLabel" />-->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvActiveVisits"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/list_container_padding"
        android:layout_marginTop="@dimen/list_container_padding"
        android:layout_marginBottom="@dimen/bottom_menu_min_height"
        android:paddingTop="@dimen/list_container_padding"
        android:paddingBottom="@dimen/home_list_bottom_padding"
        android:scrollbars="none"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/container"
        app:layout_constraintStart_toStartOf="@id/container"
        app:layout_constraintTop_toBottomOf="@id/clSearchContainer"
        app:spanCount="2"
        tools:itemCount="10"
        tools:listitem="@layout/list_item_active_patient_ezazi" />

    <TextView
        android:id="@+id/tvEmpty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/don_t_have_any_active_visit"
        android:textColor="@color/gray_3"
        android:textSize="@dimen/header_text_size"
        android:textStyle="normal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>