<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvSetupTitle"
        style="@style/Theme.EZazi.Screen.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/login_screen_padding"
        android:text="@string/title_setup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvSetupContent"
        style="@style/Theme.EZazi.Text.Content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/screen_container_padding"
        android:gravity="start"
        android:text="@string/content_complete_setup"
        android:textColor="@color/font_black_0"
        app:layout_constraintStart_toStartOf="@id/tvSetupTitle"
        app:layout_constraintTop_toBottomOf="@id/tvSetupTitle" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clLoginContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/input_top_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSetupContent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvLblLocation"
            style="@style/LabelStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/login_screen_padding"
            android:layout_marginEnd="@dimen/login_screen_padding"
            android:text="@string/location"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etLocationLayout"
            style="@style/Theme.EZazi.Input.Login.DropDown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/login_screen_padding"
            android:layout_marginTop="@dimen/screen_container_padding"
            android:layout_marginEnd="@dimen/login_screen_padding"
            app:hintEnabled="false"
            app:layout_constraintTop_toBottomOf="@id/tvLblLocation">

            <AutoCompleteTextView
                android:id="@+id/spinner_location"
                style="@style/Theme.EZazi.Scrollbar.Thumb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/login_location_select"
                android:inputType="none"
                android:dropDownSelector="@color/white"
                android:minHeight="@dimen/max_input_height"
                android:textSize="@dimen/input_inner_size" />

        </com.google.android.material.textfield.TextInputLayout>

        <include
            android:id="@+id/includeLoginInput"
            layout="@layout/view_login_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etLocationLayout" />

        <include
            android:id="@+id/includeForgotPassword"
            layout="@layout/view_forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/login_screen_padding"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/includeLoginInput" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSetup"
            style="@style/Theme.EZazi.Button.Next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_height"
            android:layout_marginStart="@dimen/login_screen_padding"
            android:layout_marginTop="@dimen/form_top_margin"
            android:layout_marginEnd="@dimen/login_screen_padding"
            android:text="@string/custom_setup"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/includeForgotPassword"
            app:rippleColor="@color/white" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>