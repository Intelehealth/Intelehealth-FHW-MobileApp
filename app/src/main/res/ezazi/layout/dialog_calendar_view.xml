<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvSelectedDate"
            style="@style/Theme.EZazi.CalendarView.Selected.Date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/screen_padding"
            android:layout_marginEnd="@dimen/screen_padding"
            android:gravity="center"
            android:padding="@dimen/screen_padding"
            tools:text="14th Feb, 2023"
            android:textSize="@dimen/screen_title_size"
            app:layout_constraintEnd_toEndOf="@id/calendar"
            app:layout_constraintStart_toStartOf="@id/calendar"
            app:layout_constraintTop_toTopOf="parent" />


        <include
            android:id="@+id/calendar"
            layout="@layout/view_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/screen_container_padding"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSelectedDate" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>