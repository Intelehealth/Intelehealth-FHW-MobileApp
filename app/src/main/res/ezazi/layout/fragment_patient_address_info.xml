<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/container_bg_rounded"
        android:orientation="vertical"
        android:padding="@dimen/address_padding">

        <LinearLayout
            android:id="@+id/layout_dropdowns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.google.android.material.card.MaterialCardView
                style="@style/Theme.EZazi.Material.CardView"
                android:layout_width="0dp"
                android:layout_height="@dimen/spinners_add_patient_height"
                android:layout_marginTop="@dimen/input_add_patient_margin_top"
                android:layout_marginEnd="5dp"
                android:layout_weight="1">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Theme.EZazi.Input.Add.Patient.DropDown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="true">

                    <AutoCompleteTextView
                        android:id="@+id/autotv_country"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/input_add_patient_height"
                        android:backgroundTint="@color/white"
                        android:hint="@string/country"
                        android:paddingTop="@dimen/input_add_patient_padding_top" />

                </com.google.android.material.textfield.TextInputLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                style="@style/Theme.EZazi.Material.CardView"
                android:layout_width="0dp"
                android:layout_height="@dimen/spinners_add_patient_height"
                android:layout_marginStart="5dp"
                android:layout_marginTop="@dimen/input_add_patient_margin_top"
                android:layout_weight="1"
                android:backgroundTint="@color/white">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Theme.EZazi.Input.Add.Patient.DropDown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="true">

                    <AutoCompleteTextView
                        android:id="@+id/autotv_state"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/input_add_patient_height"
                        android:hint="@string/state"
                        android:textAlignment="viewStart"
                        android:paddingTop="@dimen/input_add_patient_padding_top" />

                </com.google.android.material.textfield.TextInputLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            style="@style/Theme.EZazi.Material.CardView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spinners_add_patient_height"
            android:layout_marginTop="@dimen/input_add_patient_margin_top">


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Theme.EZazi.Input.Add.Patient.DropDown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="true">

                <AutoCompleteTextView
                    android:id="@+id/autotv_city"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/input_add_patient_height"
                    android:hint="@string/village_town_city"
                    android:paddingTop="@dimen/input_add_patient_padding_top" />

            </com.google.android.material.textfield.TextInputLayout>

        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            style="@style/Theme.EZazi.Material.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/input_add_patient_margin_top">


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Theme.EZazi.Input.Add.Patient"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_address1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/input_add_patient_height"
                    android:backgroundTint="@color/white"
                    android:hint="@string/address_line1"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:maxLines="1"
                    android:paddingTop="@dimen/input_add_patient_padding_top"
                    android:singleLine="true" />
            </com.google.android.material.textfield.TextInputLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            style="@style/Theme.EZazi.Material.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/input_add_patient_margin_top">


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Theme.EZazi.Input.Add.Patient"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_address2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/input_add_patient_height"
                    android:backgroundTint="@color/white"
                    android:hint="@string/address_line2"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:maxLines="1"
                    android:paddingTop="@dimen/input_add_patient_padding_top"
                    android:singleLine="true" />
            </com.google.android.material.textfield.TextInputLayout>
        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            style="@style/Theme.EZazi.Material.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/input_add_patient_margin_top">


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Theme.EZazi.Input.Add.Patient"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_postal_code"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/input_add_patient_height"
                    android:backgroundTint="@color/white"
                    android:hint="@string/postal_code"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:maxLines="1"
                    android:paddingTop="@dimen/input_add_patient_padding_top"
                    android:singleLine="true" />
            </com.google.android.material.textfield.TextInputLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/button_add_patient_margin_bottom"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_back_address"
            style="@style/Theme.EZazi.Button.White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/button_add_patient_margin"
            android:layout_weight="1"
            android:text="@string/back" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_next_address"
            style="@style/Theme.EZazi.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/button_add_patient_margin"
            android:layout_weight="1"
            android:drawableEnd="@drawable/ui2_ic_baseline_arrow_forward_24"
            android:drawableTint="@color/white"
            android:text="@string/next">

        </com.google.android.material.button.MaterialButton>

    </LinearLayout>

</RelativeLayout>