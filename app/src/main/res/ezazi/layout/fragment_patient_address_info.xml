<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etLocationLayout"
        style="@style/Theme.EZazi.Input.Login.DropDown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/screen_container_padding"
        app:hintEnabled="false">

        <AutoCompleteTextView
            android:id="@+id/spinner_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_white_with_gray_stroke"
            android:hint="Country"
            android:inputType="none"
            android:minHeight="@dimen/max_input_height"
            android:padding="@dimen/std_16dp" />

    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>