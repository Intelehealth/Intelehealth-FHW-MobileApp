<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="plan"
            type="org.intelehealth.ezazi.models.dto.ObsDTO" />

        <import type="org.intelehealth.ezazi.partogram.PartogramConstants.AccessMode" />
        <variable
            name="accessMode"
            type="org.intelehealth.ezazi.partogram.PartogramConstants.AccessMode" />

    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvPrescriptionPlan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/list_container_padding"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/std_8dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/selector_list_item"
            android:padding="@dimen/screen_container_padding">

            <TextView
                android:id="@+id/txtPlanContent"
                style="@style/Theme.EZazi.Text.Dialog.Content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="@{plan.contentLine}"
                android:text="@{plan.value}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/intro_text_1" />

            <TextView
                android:id="@+id/txtPlanDate"
                style="@style/Theme.EZazi.Caption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_padding"
                android:text="@{plan.dateWithDrName()}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtPlanContent"
                tools:text="Dr.Vishal 25 Jan, 2023 12:00 PM" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPrescriptionPlanViewMore"
                style="@style/Theme.EZazi.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{plan.contentLine == plan.minLine ? @string/view_more : @string/view_less}"
                android:visibility="@{plan.noOfLine > plan.minLine ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="@id/txtPlanDate"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/txtPlanDate" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>