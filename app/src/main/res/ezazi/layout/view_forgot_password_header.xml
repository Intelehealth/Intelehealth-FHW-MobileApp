<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvForgotPasswordTitle"
        style="@style/Theme.EZazi.Screen.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_forgot_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvSetupContent"
        style="@style/Theme.EZazi.Text.Content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/screen_container_padding"
        android:gravity="start"
        android:text="@string/follow_the_instruction"
        android:textColor="@color/font_black_0"
        app:layout_constraintStart_toStartOf="@id/tvForgotPasswordTitle"
        app:layout_constraintTop_toBottomOf="@id/tvForgotPasswordTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>