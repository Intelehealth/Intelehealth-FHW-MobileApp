<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/list_container_padding">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_todaysVisit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/container_corner_radius">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3pt"
                android:layout_marginBottom="3pt"
                android:orientation="vertical"
                android:padding="@dimen/screen_container_padding"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/list_item_head_text_view"
                            style="@style/Theme.EZazi.Heading1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            tools:text="Patient Name" />

                        <TextView
                            android:id="@+id/list_item_body_text_view"
                            style="@style/Theme.EZazi.Body"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/std_4dp"
                            android:maxLines="1"
                            tools:text="10LAM-3" />

                        <TextView
                            android:id="@+id/tv_age_gender"
                            style="@style/Theme.EZazi.Body"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/std_4dp"
                            android:maxLines="1"
                            tools:text="Age: 24 years" />

                        <TextView
                            android:id="@+id/tvBedNumber"
                            style="@style/Theme.EZazi.Body"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/std_4dp"
                            android:maxLines="1"
                            tools:text="Bed No: 2A" />

                        <TextView
                            android:id="@+id/tvStageName"
                            style="@style/Theme.EZazi.Heading2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/std_4dp"
                            android:text="Stage-1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/list_item_indicator_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/lato_bold"
                            android:paddingStart="5dp"
                            android:paddingTop="3dp"
                            android:paddingEnd="5dp"
                            android:paddingBottom="3dp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_not_uploaded"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/lato_regular"
                            android:paddingStart="5dp"
                            android:paddingTop="3dp"
                            android:paddingEnd="5dp"
                            android:paddingBottom="3dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:visibility="gone" />


                    </LinearLayout>


                    <TextView
                        android:id="@+id/tvAlertCount"
                        style="@style/Theme.EZazi.Screen.Title"
                        android:layout_width="@dimen/alert_icon_size"
                        android:layout_height="@dimen/alert_icon_size"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/ic_normal_alert"
                        android:gravity="center"
                        android:tag="0"
                        android:text="25"
                        android:textSize="@dimen/alert_text_size" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</layout>