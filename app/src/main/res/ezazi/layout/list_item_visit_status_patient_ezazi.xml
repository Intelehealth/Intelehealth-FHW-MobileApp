<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="patient"
            type="org.intelehealth.ezazi.models.dto.PatientDTO" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_todaysVisit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/list_container_padding"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/container_corner_radius"
        app:cardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clRowVisitStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3pt"
            android:layout_marginBottom="3pt"
            android:background="@drawable/selector_list_item"
            android:orientation="vertical"
            android:padding="@dimen/screen_container_padding"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivVisitStatusPatientDp"
                android:layout_width="@dimen/rtc_self_profile_size"
                android:layout_height="@dimen/rtc_self_profile_size"
                android:background="@drawable/rounded_profile_bg_shape"
                android:contentDescription="@string/content_patient_profile_picture"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/ProfileShapeAppearanceOverlay.CornerSize50Percent"
                bind:imgContent="@{patient.fullName}"
                bind:imgUrl="@{patient.patientPhoto}" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvVisitStatusPatientName"
                style="@style/Theme.EZazi.Heading1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/screen_container_padding"
                android:maxLines="1"
                android:text="@{patient.fullName}"
                app:layout_constraintBottom_toTopOf="@id/tvVisitStatusPatientId"
                app:layout_constraintEnd_toStartOf="@id/tvVisitStatusStageName"
                app:layout_constraintStart_toEndOf="@id/ivVisitStatusPatientDp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                tools:text="Patient Name" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvVisitStatusPatientId"
                style="@style/Theme.EZazi.Body"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/screen_container_padding"
                android:layout_marginTop="@dimen/std_4dp"
                android:maxLines="1"
                android:text="@{patient.openmrsId}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tvVisitStatusStageName"
                app:layout_constraintStart_toEndOf="@id/ivVisitStatusPatientDp"
                app:layout_constraintTop_toBottomOf="@id/tvVisitStatusPatientName"
                tools:text="10LAM-3" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvVisitStatusStageName"
                style="@style/Theme.EZazi.Heading2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{patient.stage}"
                android:visibility="@{patient.stage == null ? View.GONE : View.VISIBLE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Stage-1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewUpcomingPrescription"
                style="@style/Theme.EZazi.Button.Icon.Edit"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:visibility="@{patient.stage == null ? View.VISIBLE : View.GONE}"
                app:icon="@drawable/ic_vector_prescription"
                app:iconTint="?attr/colorPrimary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>