<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_menu_bg"
    android:minHeight="@dimen/bottom_menu_min_height"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/actionbar_vertical_padding"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/actionbar_vertical_padding"
    tools:ignore="PrivateResource">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSave"
        style="@style/Theme.EZazi.Button.Wrap"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:text="@string/save_button"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnView"
        app:layout_constraintStart_toEndOf="@id/btnFlipCamera"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnView"
        style="@style/Theme.EZazi.Button.Wrap.White"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/action_view"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnSave"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="?attr/colorPrimary" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnFlipCamera"
        style="@style/Theme.EZazi.Button.Icon.Blue"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:contentDescription="@string/chat_now"
        android:minWidth="@dimen/timeline_btn_height"
        app:icon="@drawable/ic_chat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/btnSave"
        app:layout_constraintStart_toEndOf="@id/btnVideoOnOff"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVideoOnOff"
        style="@style/Theme.EZazi.Button.Icon.Blue"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:contentDescription="@string/video_call"
        android:minWidth="@dimen/timeline_btn_height"
        app:icon="@drawable/ic_video_call"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/btnFlipCamera"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>