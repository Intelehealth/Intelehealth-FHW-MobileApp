<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tvEnterMobileNumber"
        style="@style/Theme.EZazi.Heading2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_mobile_number"
        android:textColor="@color/font_black_0"
        android:textSize="@dimen/forgot_password_label_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvInstruction"
        style="@style/Theme.EZazi.Body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/screen_container_padding"
        android:text="@string/enter_registered_mobile_number"
        android:textColor="@color/darkGray"
        android:textSize="@dimen/forgot_password_instruction_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvEnterMobileNumber" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etCountryCodePicker"
        style="@style/Theme.EZazi.Input.Login.DropDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/screen_padding"
        app:hintEnabled="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvInstruction">

        <AutoCompleteTextView
            android:id="@+id/spinner_location"
            style="@style/Theme.EZazi.Scrollbar.Thumb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:dropDownSelector="@color/white"
            android:hint="+91"
            android:inputType="none"
            android:minHeight="@dimen/max_input_height"
            android:textSize="@dimen/input_inner_size" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etUsernameLayout"
        style="@style/Theme.EZazi.Input.Login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/screen_padding"
        app:layout_constraintBottom_toBottomOf="@id/etCountryCodePicker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/etCountryCodePicker"
        app:layout_constraintTop_toTopOf="@id/etCountryCodePicker">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_mobile_number"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:maxLength="100"
            android:minHeight="@dimen/max_input_height"
            android:textSize="@dimen/input_inner_size" />

    </com.google.android.material.textfield.TextInputLayout>


</androidx.constraintlayout.widget.ConstraintLayout>