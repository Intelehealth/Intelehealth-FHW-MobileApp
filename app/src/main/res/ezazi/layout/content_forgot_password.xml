<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tvEnterMobileNumber"
            style="@style/Theme.EZazi.Heading2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_mobile_number"
            android:textColor="@color/font_black_0"
            android:textSize="@dimen/forgot_password_label_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvInstruction"
            style="@style/Theme.EZazi.Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/screen_container_padding"
            android:text="@string/enter_registered_mobile_number"
            android:textColor="@color/darkGray"
            android:textSize="@dimen/forgot_password_instruction_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvEnterMobileNumber" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/screen_container_padding"
            android:minHeight="@dimen/max_input_height"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvInstruction">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_date_admission"
                style="@style/Theme.EZazi.Material.CardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                app:cardBackgroundColor="@color/colorLoginInputBg"
                app:cardCornerRadius="@dimen/input_box_corner_radius">

                <com.hbb20.CountryCodePicker
                    android:id="@+id/countrycode_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/max_input_height"
                    android:paddingStart="@dimen/code_picker_padding_start_end"
                    android:paddingTop="@dimen/code_picker_padding_top"
                    android:paddingEnd="@dimen/code_picker_padding_start_end"
                    android:paddingBottom="@dimen/code_picker_padding_bottom"
                    app:ccp_countryPreference="us,in"
                    app:ccp_textSize="@dimen/code_picker_text_size" />
            </com.google.android.material.card.MaterialCardView>

            <org.intelehealth.ezazi.ui.custom.RightAlignErrorTextInputLayout
                android:id="@+id/etUsernameLayout"
                style="@style/Theme.EZazi.Input.Login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/screen_padding"
                android:layout_weight="1.3"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_email"
                    style="@style/Theme.EZazi.Input.EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_mobile_number"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:maxLength="100"
                    android:minHeight="@dimen/max_input_height"
                    android:textSize="@dimen/input_inner_size" />

            </org.intelehealth.ezazi.ui.custom.RightAlignErrorTextInputLayout>

        </LinearLayout>
