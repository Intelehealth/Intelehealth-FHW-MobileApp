<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="org.intelehealth.ezazi.partogram.PartogramConstants.AccessMode" />

        <variable
            name="medication"
            type="org.intelehealth.ezazi.partogram.model.Medication" />

        <variable
            name="accessMode"
            type="org.intelehealth.ezazi.partogram.PartogramConstants.AccessMode" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/clMedicinePrescriptionRowItemRoot1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/list_container_padding"
        android:background="@drawable/selector_list_item">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvIvFluidDetails"
            style="@style/Theme.EZazi.Heading2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/screen_container_padding"
            android:layout_weight="2"
            android:padding="@dimen/common_padding"
            android:textColor="@color/gray_6"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tvIvFluidInfusionRate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:medicationText="@{medication}"
            tools:text="Ringer Lactate" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvIvFluidInfusionRate"
            style="@style/Theme.EZazi.Heading2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/screen_container_padding"
            android:layout_weight="2"
            android:paddingStart="@dimen/common_padding"
            android:paddingEnd="@dimen/common_padding"
            android:text="@{`IV Infusion Rate : ` + medication.infusionRate}"
            android:textColor="@color/gray_6"
            app:layout_constraintBottom_toTopOf="@+id/tvIvFluidDateTime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.5" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvIvFluidDateTime"
            style="@style/Theme.EZazi.Heading2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/screen_container_padding"
            android:layout_weight="2"
            android:padding="@dimen/common_padding"
            android:text="@{medication.createdAt}"
            android:textColor="@color/gray_6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvIvFluidInfusionRate"
            app:layout_constraintVertical_bias="0.5"
            tools:text="16 Jan 2024 11:00" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnIvFluidAdminister"
            style="@style/Theme.EZazi.Button"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginEnd="@dimen/screen_container_padding"
            android:contentDescription="@string/content_expand_collapse_indicator"
            android:enabled="@{accessMode != AccessMode.READ}"
            android:text='@{medication.infusionStatus.equalsIgnoreCase("started") ? "Start" : (medication.infusionStatus.equalsIgnoreCase("continued") ? "Continue" : (medication.infusionStatus.equalsIgnoreCase("stopped") ? "Stop" : medication.infusionStatus))}'
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>