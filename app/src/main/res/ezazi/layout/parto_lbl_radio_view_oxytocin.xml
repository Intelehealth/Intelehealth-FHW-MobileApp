<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@drawable/container_bg_rounded"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/list_container_padding">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_radio_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_child_container_bg"
            android:padding="@dimen/screen_container_padding"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvParamName"
                style="@style/LabelStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Param name"
                android:textSize="@dimen/caption"
                app:layout_constraintBottom_toBottomOf="@id/radioYesNoGroup"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/radioYesNoGroup" />

            <RadioGroup
                android:id="@+id/radioYesNoGroup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="@dimen/obs_input_min_width">

                <RadioButton
                    android:id="@+id/radioYes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="@string/yes" />

                <RadioButton
                    android:id="@+id/radioNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginStart="@dimen/screen_padding"
                    android:text="@string/no" />
            </RadioGroup>

            <TextView
                android:id="@+id/tvSelectedValue"
                style="@style/LabelStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/screen_container_padding"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/radioYesNoGroup"
                app:layout_constraintWidth_percent="@dimen/obs_input_min_width" />



        </androidx.constraintlayout.widget.ConstraintLayout>
        <include
            android:id="@+id/includeLayoutPartoOxytocin"
            layout="@layout/oxytocin_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="@dimen/list_container_padding"
            android:paddingVertical="@dimen/list_container_padding"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_radio_options" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>