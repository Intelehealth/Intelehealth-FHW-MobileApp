<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/add_patient_tabs_margin_start"
    android:layout_marginEnd="@dimen/add_patient_tabs_margin_end"
    android:layout_marginTop="@dimen/add_patient_tabs_margin_top"
    android:orientation="horizontal"
    android:weightSum="2.8">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_personal_info"
            android:layout_width="@dimen/layout_stages_icon_width"
            android:layout_height="@dimen/layout_stages_icon_height"
            android:padding="@dimen/layout_stages_icon_padding"
            android:src="@drawable/ic_personal_info" />

        <TextView
            android:id="@+id/tv_personal_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_personal_info"
            android:layout_marginTop="@dimen/layout_stages_text_margin_top"
            android:textColor="@color/darkGray"
            android:fontFamily="@font/dm_sans_medium"
            android:gravity="center_horizontal|top"
            android:text="@string/personal"
            android:textSize="@dimen/body"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/line_1"
        android:layout_width="0dp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/stages_line_margin_bottom"
        android:layout_height="@dimen/layout_stages_line_height"
        android:layout_weight="0.5"
        android:background="@drawable/ic_dashed_line" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_address_info"
            android:layout_width="@dimen/layout_stages_icon_width"
            android:layout_height="@dimen/layout_stages_icon_height"
            android:padding="@dimen/layout_stages_icon_padding"
            android:src="@drawable/ic_address_info" />

        <TextView
            android:id="@+id/tv_address_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkGray"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal|top"
            android:text="@string/address"
            android:textSize="@dimen/body" />

    </LinearLayout>

    <ImageView
        android:id="@+id/line_1"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/stages_line_margin_bottom"
        android:layout_height="@dimen/layout_stages_line_height"
        android:background="@drawable/ic_dashed_line" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_other_info"
            android:layout_width="@dimen/layout_stages_icon_width"
            android:layout_height="@dimen/layout_stages_icon_height"
            android:padding="@dimen/layout_stages_icon_padding"
            android:src="@drawable/ic_other_info" />

        <TextView
            android:id="@+id/tv_other_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkGray"
            android:layout_below="@+id/iv_other_info"
            android:layout_marginTop="@dimen/layout_stages_text_margin_top"
            android:gravity="center_horizontal|top"
            android:text="@string/other"
            android:textSize="@dimen/body" />
    </LinearLayout>
</LinearLayout>