<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/video_call_action_bg"
        android:minHeight="@dimen/bottom_menu_min_height"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/actionbar_vertical_padding"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/actionbar_vertical_padding">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCallEnd"
            style="@style/Theme.EZazi.Button.Icon.Activate.State"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:contentDescription="@string/video_call"
            android:minWidth="@dimen/video_call_action_btn_min_size"
            app:backgroundTint="@color/colorAccent"
            app:icon="@drawable/ic_call_end"
            app:iconTint="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/btnMicOnOff"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMicOnOff"
            style="@style/Theme.EZazi.Button.Icon.Activate.State"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:contentDescription="@string/video_call"
            android:minWidth="@dimen/video_call_action_btn_min_size"
            app:icon="@drawable/selector_mic"
            app:iconTint="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/btnVideoOnOff"
            app:layout_constraintStart_toEndOf="@id/btnCallEnd"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFlipCamera"
            style="@style/Theme.EZazi.Button.Icon.Blue"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:contentDescription="@string/chat_now"
            android:minWidth="@dimen/video_call_action_btn_min_size"
            app:cornerRadius="@dimen/button_corner_radius"
            app:icon="@drawable/ic_flip_camera"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnVideoOnOff"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVideoOnOff"
            style="@style/Theme.EZazi.Button.Icon.Activate.State"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:contentDescription="@string/video_call"
            android:minWidth="@dimen/video_call_action_btn_min_size"
            app:icon="@drawable/selector_video_call"
            app:iconTint="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/btnFlipCamera"
            app:layout_constraintStart_toEndOf="@id/btnMicOnOff"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>