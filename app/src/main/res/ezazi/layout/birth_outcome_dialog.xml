                android:layout_marginTop="@dimen/dialog_input_margin_top"
                android:background="@drawable/selector_dialog_list_item"
                android:padding="@dimen/small_btn_horizontal_padding"
                android:text="@string/mother_deceased" />-->

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvReferToOtherHospital"
                style="@style/Theme.EZazi.Text.Dialog.Content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dialog_input_margin_top"
                android:background="@drawable/selector_dialog_list_item"
                android:padding="@dimen/small_btn_horizontal_padding"
                android:text="@string/refer_to_other_hospital" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvSelfDischarge"
                style="@style/Theme.EZazi.Text.Dialog.Content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dialog_input_margin_top"
                android:background="@drawable/selector_dialog_list_item"
                android:padding="@dimen/small_btn_horizontal_padding"
                android:text="@string/self_discharge_medical_advice" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvShiftToSection"
                style="@style/Theme.EZazi.Text.Dialog.Content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dialog_input_margin_top"
                android:background="@drawable/selector_dialog_list_item"
                android:padding="@dimen/small_btn_horizontal_padding"
                android:text="@string/shift_to_c_section" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvReferToICU"
                style="@style/Theme.EZazi.Text.Dialog.Content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dialog_input_margin_top"
                android:background="@drawable/selector_dialog_list_item"
                android:padding="@dimen/small_btn_horizontal_padding"
                android:text="@string/refer_to_icu" />

            <org.intelehealth.ezazi.ui.custom.RightAlignErrorTextInputLayout
                android:id="@+id/etOutOfTimeReasonLayout"
                style="@style/Theme.EZazi.Input.Login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dialog_input_margin_top"
                app:boxStrokeColor="@color/colorLoginInputStroke"
                app:boxStrokeWidth="@dimen/input_stroke_size"
                app:counterEnabled="true"
                app:counterMaxLength="300"
                app:endIconMode="clear_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etOtherCommentOutcomes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:gravity="start"
                    android:hint="@string/enter_other_comment"
                    android:imeOptions="actionDone"
                    android:inputType="textMultiLine"
                    android:lineSpacingExtra="@dimen/std_4dp"
                    android:lines="5"
                    android:maxLength="300"
                    android:textColor="@color/colorInputText"
                    android:textSize="@dimen/input_inner_size" />

            </org.intelehealth.ezazi.ui.custom.RightAlignErrorTextInputLayout>
