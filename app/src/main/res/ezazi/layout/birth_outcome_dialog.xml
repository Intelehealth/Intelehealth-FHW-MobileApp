            <RelativeLayout
                style="@style/Theme.EZazi.Text.Dialog.Content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/other_info_checkbox_margin_top"
                android:background="@drawable/selector_dialog_list_item"
                android:orientation="horizontal">

                <TextView
                    style="@style/Theme.EZazi.Text.Dialog.Content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/tv_labour_margin_end"
                    android:text="@string/labour_completed" />

                <CheckBox
                    android:id="@+id/cbLabourCompleted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:checked="false" />
            </RelativeLayout>

            <RelativeLayout
                style="@style/Theme.EZazi.Text.Dialog.Content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dialog_input_margin_top"
                android:background="@drawable/selector_dialog_list_item"
                android:orientation="horizontal">

                <TextView
                    style="@style/Theme.EZazi.Text.Dialog.Content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/tv_labour_margin_end"
                    android:text="@string/mother_deceased" />

                <CheckBox
                    android:id="@+id/cbMotherDeceased"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:checked="false" />
            </RelativeLayout>


            <!--<com.google.android.material.textview.MaterialTextView
