<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/add_patient_padding_start"
    android:paddingTop="@dimen/add_patient_padding_top"
    android:paddingEnd="@dimen/add_patient_padding_end">

    <include layout="@layout/custom_appbar" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/layout_stages_margin_top">

        <ImageView
            android:id="@+id/iv_personal_info"
            android:layout_width="@dimen/layout_stages_icon_width"
            android:layout_height="@dimen/layout_stages_icon_height"
            android:padding="2dp"
            android:src="@drawable/ic_personal_info" />

        <TextView
            android:id="@+id/tv_personal_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_personal_info"
            android:layout_marginStart="-2dp"
            android:layout_marginTop="@dimen/layout_stages_text_margin_top"
            android:fontFamily="@font/dm_sans_medium"
            android:gravity="center_horizontal|top"
            android:text="@string/personal"
            android:textSize="@dimen/body"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/line_1"
            android:layout_width="@dimen/layout_stages_line_width"
            android:layout_height="@dimen/layout_stages_line_height"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/stages_line_margin_start"
            android:layout_marginTop="@dimen/stages_line_margin_top"
            android:layout_marginEnd="@dimen/stages_line_margin_end"
            android:layout_toEndOf="@+id/iv_personal_info"
            android:background="@drawable/ic_dashed_line" />

        <ImageView
            android:id="@+id/iv_address_info"
            android:layout_width="@dimen/layout_stages_icon_width"
            android:layout_height="@dimen/layout_stages_icon_height"
            android:layout_toEndOf="@+id/line_1"
            android:padding="@dimen/layout_stages_icon_padding"
            android:src="@drawable/ic_address_info" />

        <ImageView
            android:id="@+id/line_11"
            android:layout_width="@dimen/layout_stages_line_width"
            android:layout_height="@dimen/layout_stages_line_height"
            android:layout_below="@+id/iv_address_info"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/stages_line_margin_top"
            android:layout_marginEnd="@dimen/stages_line_margin_end"
            android:layout_toEndOf="@+id/iv_personal_info"
            android:src="@drawable/ic_dashed_line"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_address_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_address_info"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/line_11"
            android:gravity="center_horizontal|top"
            android:text="@string/address"
            android:textSize="@dimen/body" />


        <ImageView
            android:id="@+id/line_2"
            android:layout_width="@dimen/layout_stages_line_width"
            android:layout_height="@dimen/layout_stages_line_height"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/stages_line_margin_start"
            android:layout_marginTop="@dimen/stages_line_margin_top"
            android:layout_marginEnd="@dimen/stages_line_margin_end"
            android:layout_toEndOf="@+id/iv_address_info"
            android:src="@drawable/ic_dashed_line" />

        <ImageView
            android:id="@+id/iv_other_info"
            android:layout_width="@dimen/layout_stages_icon_width"
            android:layout_height="@dimen/layout_stages_icon_height"
            android:layout_toEndOf="@+id/line_2"
            android:padding="2dp"
            android:src="@drawable/ic_other_info" />

        <ImageView
            android:id="@+id/line_22"
            android:layout_width="@dimen/layout_stages_line_width"
            android:layout_height="@dimen/layout_stages_line_height"
            android:layout_below="@+id/iv_address_info"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/stages_line_margin_start"
            android:layout_marginTop="@dimen/stages_line_margin_top"
            android:layout_marginEnd="@dimen/stages_line_margin_end"
            android:layout_toEndOf="@+id/tv_address_info"
            android:gravity="center_horizontal|top"
            android:src="@drawable/ic_dashed_line"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_other_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_other_info"
            android:layout_marginTop="@dimen/layout_stages_text_margin_top"
            android:layout_toEndOf="@+id/line_22"
            android:gravity="center_horizontal|top"
            android:text="@string/other"
            android:textSize="@dimen/body" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frame_add_patient"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_text"
        android:layout_marginStart="@dimen/add_patient_frame_margin_start"
        android:layout_marginTop="@dimen/add_patient_frame_margin_top"
        android:layout_marginEnd="@dimen/add_patient_frame_margin_end" />

</LinearLayout>