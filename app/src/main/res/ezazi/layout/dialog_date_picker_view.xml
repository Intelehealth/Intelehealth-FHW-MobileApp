<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/screen_container_padding">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clTimerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/screen_container_padding"
            android:background="@drawable/timepicker_timer_bg"
            android:paddingHorizontal="@dimen/login_screen_padding"
            android:paddingVertical="@dimen/screen_container_padding"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_selected_date"
                style="@style/Theme.EZazi.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="14 Feb, 2023"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--
                        android:textSize="@dimen/time_picker_dialog_text_size"
            -->

        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
            android:id="@+id/dropdown_month_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:visibility="visible"
            android:weightSum="4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clTimerView"
            app:layout_constraintTop_toTopOf="@+id/datePicker">

            <ImageButton
                android:id="@+id/ib_prev_month"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp"
                android:layout_weight="0.3"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ui2_ic_calendar_previous"
                app:tint="@color/colorPrimary" />

            <Spinner
                android:id="@+id/spinner_months_calview_new"
                style="@style/CalendarSpinnerTheme"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_toEndOf="@+id/ib_prev_month"
                android:layout_weight="1.7"
                android:dropDownVerticalOffset="56dp"
                android:gravity="start"
                android:paddingTop="@dimen/margin_10"
                android:paddingBottom="@dimen/margin_10"
                android:spinnerMode="dropdown"
                android:textAlignment="viewStart"
                android:textSize="@dimen/year_month_text_size" />

            <Spinner
                android:id="@+id/spinner_year_calview_new"
                style="@style/CalendarSpinnerTheme"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_toStartOf="@+id/ib_next_month"
                android:layout_toEndOf="@+id/spinner_months_calview_new"
                android:layout_weight="1.7"
                android:dropDownVerticalOffset="56dp"
                android:paddingTop="@dimen/margin_10"
                android:paddingBottom="@dimen/margin_10"
                android:spinnerMode="dropdown"
                android:textAlignment="center"
                android:textSize="@dimen/year_month_text_size" />

            <ImageButton
                android:id="@+id/ib_next_month"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:layout_weight="0.3"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ui2_ic_calendar_next"
                app:tint="@color/colorPrimary" />
        </LinearLayout>

        <DatePicker
            android:id="@+id/datePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-20dp"
            android:calendarTextColor="@color/yellow"
            android:descendantFocusability="blocksDescendants"
            android:headerBackground="@drawable/timepicker_timer_bg"
            android:orientation="horizontal"
            android:theme="@style/my_dialog_theme"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dropdown_month_year" />

    </LinearLayout>
</layout>