<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="org.intelehealth.ezazi.partogram.PartogramConstants.AccessMode" />

        <variable
            name="allowAdminister"
            type="Boolean" />

        <variable
            name="medication"
            type="org.intelehealth.ezazi.partogram.model.Medication" />

        <variable
            name="accessMode"
            type="org.intelehealth.ezazi.partogram.PartogramConstants.AccessMode" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvPrescriptionMedication"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/list_container_padding"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/std_8dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/selector_list_item"
            android:padding="@dimen/screen_container_padding">

            <TextView
                android:id="@+id/txtMedicationContent"
                style="@style/Theme.EZazi.Text.Dialog.Content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/screen_container_padding"
                android:text="@{medication.content}"
                app:layout_constraintEnd_toStartOf="@id/clMedicationAction"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/lbl_oxytocin" />

            <TextView
                android:id="@+id/txtMedicationDate"
                style="@style/Theme.EZazi.Caption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_padding"
                android:layout_marginEnd="@dimen/screen_container_padding"
                android:text="@{medication.dateWithDrName()}"
                app:layout_constraintEnd_toStartOf="@id/clMedicationAction"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtMedicationContent"
                tools:text="Dr.Vishal 25 Jan, 2023 12:00 PM" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clMedicationAction"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/txtMedicationStatus"
                    style="@style/Theme.EZazi.Caption"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{medication.infusionStatus}"
                    android:visibility="@{allowAdminister ? View.GONE : View.VISIBLE}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Start" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMedicationAdminister"
                    style="@style/Theme.EZazi.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/screen_container_padding"
                    android:contentDescription="@string/content_expand_collapse_indicator"
                    android:enabled="@{accessMode != AccessMode.READ}"
                    android:text='@{medication.infusionStatus}'
                    android:visibility="@{allowAdminister ? View.VISIBLE : View.GONE}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>