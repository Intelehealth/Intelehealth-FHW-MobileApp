<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/screen_container_padding">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clTimerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/screen_container_padding"
            android:background="@drawable/timepicker_timer_bg"
            android:paddingHorizontal="@dimen/activity_horizontal_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/timePickerClock"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/hours"
                style="@style/Theme.EZazi.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:minWidth="@dimen/icon_btn_width"
                android:text="12"
                android:textSize="@dimen/screen_title_size"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/separator"
                style="@style/Theme.EZazi.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="@dimen/screen_title_size"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/hours"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/minutes"
                style="@style/Theme.EZazi.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="12"
                android:textSize="@dimen/screen_title_size"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/separator"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/btnAm"
                style="@style/Theme.EZazi.Screen.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/screen_container_padding"
                android:text="@string/lbl_am"
                android:textColor="@color/color_am_pm_selector"
                android:textSize="@dimen/input_label_size"
                app:layout_constraintBottom_toTopOf="@id/btnPm"
                app:layout_constraintStart_toEndOf="@id/minutes"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/btnPm"
                style="@style/Theme.EZazi.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/screen_container_padding"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:text="@string/lbl_pm"
                android:textColor="@color/color_am_pm_selector"
                android:textSize="@dimen/input_label_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/minutes"
                app:layout_constraintTop_toBottomOf="@id/btnAm" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--        <TimePicker-->
        <!--            android:id="@+id/timePickerInput"-->
        <!--            android:layout_width="0dp"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:descendantFocusability="blocksDescendants"-->
        <!--            android:headerBackground="@drawable/timepicker_timer_bg"-->
        <!--            android:orientation="horizontal"-->
        <!--            app:layout_constraintBottom_toBottomOf="parent"-->
        <!--            app:layout_constraintEnd_toStartOf="@id/timePickerClock"-->
        <!--            app:layout_constraintStart_toStartOf="parent"-->
        <!--            app:layout_constraintTop_toTopOf="parent" />-->

        <TimePicker
            android:id="@+id/timePickerClock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            android:headerBackground="@drawable/timepicker_timer_bg"
            android:numbersBackgroundColor="@color/colorContainer"
            android:numbersSelectorColor="@color/colorEmergencyBg"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/clTimerView"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>