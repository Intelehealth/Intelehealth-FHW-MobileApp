<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_forgot_password"
    app:startDestination="@id/fragmentForgotPassword">

    <fragment
        android:id="@+id/fragmentForgotPassword"
        android:label=""
        tools:layout="@layout/fragment_forgot_password">
        <action
            android:id="@+id/forgotToOtpVerificationFragment"
            app:destination="@id/fragmentOtpVerification" />
    </fragment>

    <fragment
        android:id="@+id/fragmentOtpVerification"
        android:label=""
        tools:layout="@layout/fragment_otp_verification">
        <action
            android:id="@+id/otpVerificationToResetPasswordFragment"
            app:destination="@id/fragmentResetPassword" />
    </fragment>

    <fragment
        android:id="@+id/fragmentResetPassword"
        android:label=""
        tools:layout="@layout/fragment_reset_password" />
</navigation>