    <style name="Theme.EZazi.Search" parent="">
        <item name="iconifiedByDefault">false</item>
        <item name="searchIcon">@null</item>
        <item name="background">@null</item>
        <item name="queryBackground">@android:color/transparent</item>
        <item name="android:editTextBackground">@null</item>
        <item name="queryHint">@string/hint_search_cases</item>
        <item name="hintTextColor">@color/colorSearchContent</item>
        <item name="defaultQueryHint">@string/hint_search_cases</item>
        <item name="android:minHeight">@dimen/search_view_height</item>
        <item name="android:focusable">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
