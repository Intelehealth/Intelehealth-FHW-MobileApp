<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.EZazi.Input" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintEnabled">false</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/input_box_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/input_box_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/input_box_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/input_box_corner_radius</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextColor">@color/red</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="android:textColor">@color/colorInputText</item>
        <item name="iconEndPadding">@dimen/std_16dp</item>
        <item name="android:textSize">@dimen/input_inner_size</item>
        <item name="boxStrokeWidth">@dimen/input_stroke_size</item>
        <item name="boxStrokeWidthFocused">@dimen/input_stroke_size</item>
    </style>

    <style name="Theme.EZazi.Input.Login" parent="Theme.EZazi.Input">
        <item name="boxBackgroundColor">@color/colorLoginInputBg</item>
        <item name="boxStrokeColor">@color/input_focus_color</item>
    </style>

    <style name="Theme.EZazi.Input.Login.DropDown" parent="Theme.EZazi.Input.Login">
        <item name="android:theme">
            @style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu
        </item>
        <item name="endIconDrawable">@drawable/ic_dropdown_spinner</item>
        <item name="endIconMode">dropdown_menu</item>
    </style>

    <style name="Theme.EZazi.Input.Login.Password" parent="Theme.EZazi.Input.Login">
        <item name="endIconMode">password_toggle</item>
        <item name="iconEndPadding">16dp</item>
        <item name="endIconTint">@color/colorForgotPassword</item>
        <!--        <item name="passwordToggleTint">@color/colorForgotPassword</item>-->
        <!--        <item name="passwordToggleEnabled">true</item>-->
        <!--        <item name="passwordToggleTintMode">src_atop</item>-->
        <item name="endIconDrawable">@drawable/ic_password_toggle</item>
    </style>

    <style name="Theme.EZazi.Text.Content" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/splash_bottom_text_size</item>
        <item name="android:textColor">?android:attr/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">@dimen/std_4dp</item>
        <item name="android:layout_marginBottom">@dimen/splash_bottom_text_margin</item>
    </style>

    <style name="LabelStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/input_label_size</item>
        <item name="android:textColor">@color/font_black_0</item>
        <item name="fontFamily">@font/dm_sans_medium</item>
        <item name="android:fontFamily">@font/dm_sans_medium</item>
    </style>

    <style name="Theme.EZazi.Text.Dialog.Title" parent="@style/LabelStyle">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="Theme.EZazi.Text.Dialog.Content" parent="@style/LabelStyle">
        <item name="fontFamily">@font/dm_sans_regular</item>
        <item name="android:fontFamily">@font/dm_sans_regular</item>
        <item name="android:textSize">@dimen/input_inner_size</item>
    </style>

    <style name="Theme.EZazi.Text.Dialog.Alert.Title" parent="@style/LabelStyle">
        <item name="fontFamily">@font/dm_sans_bold</item>
        <item name="android:fontFamily">@font/dm_sans_bold</item>
        <item name="android:textSize">@dimen/alert_text_size</item>
    </style>

    <style name="Theme.EZazi.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minHeight">@dimen/input_height</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="rippleColor">@color/white</item>
        <item name="fontFamily">@font/dm_sans_bold</item>
        <item name="android:fontFamily">@font/dm_sans_bold</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="backgroundTint">@color/btn_blue_color_selector</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
    </style>

    <style name="Theme.EZazi.Button.Small" parent="Theme.EZazi.Button">
        <item name="android:textSize">@dimen/small_button_text_size</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <!--        <item name="android:paddingStart">@dimen/small_button_padding</item>-->
        <!--        <item name="android:paddingEnd">@dimen/small_button_padding</item>-->
        <item name="cornerRadius">@dimen/small_btn_radius</item>
        <item name="android:paddingTop">@dimen/small_button_padding</item>
        <item name="android:paddingBottom">@dimen/small_button_padding</item>
    </style>

    <style name="Theme.EZazi.Button.White" parent="Theme.EZazi.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="rippleColor">@color/gray_2</item>
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">@color/gray_2</item>
        <item name="strokeWidth">@dimen/input_stroke_size</item>
    </style>

    <style name="Theme.EZazi.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">@dimen/forgot_pwd_size</item>
        <item name="fontFamily">@font/dm_sans_medium</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingTop">@dimen/small_btn_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/small_btn_vertical_padding</item>
        <item name="android:textAllCaps">false</item>

        <item name="android:fontFamily">@font/dm_sans_medium</item>
        <item name="rippleColor">@color/gray_2</item>
    </style>

    <style name="Theme.EZazi.Button.Next" parent="Theme.EZazi.Button">
        <item name="icon">@drawable/ic_arrow_next</item>
        <item name="iconGravity">end</item>
        <item name="android:gravity">center</item>
        <item name="iconPadding">-16dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingEnd">@dimen/screen_container_padding</item>
    </style>

    <style name="Theme.EZazi.Screen.Title" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/screen_title_size</item>
        <item name="android:textColor">@color/font_black_0</item>
        <item name="fontFamily">@font/dm_sans_bold</item>
        <item name="android:fontFamily">@font/dm_sans_bold</item>
    </style>

    <style name="Theme.EZazi.Screen.Welcome" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/welcome_text_size</item>
        <item name="android:textColor">@color/font_black_0</item>
        <item name="fontFamily">@font/dm_sans_medium</item>
        <item name="android:fontFamily">@font/dm_sans_medium</item>
