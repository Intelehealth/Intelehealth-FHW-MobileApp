<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.EZazi.Input" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintEnabled">false</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/input_box_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/input_box_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/input_box_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/input_box_corner_radius</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextColor">@color/red</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="android:textColor">@color/colorInputText</item>
        <item name="iconEndPadding">@dimen/std_16dp</item>
        <item name="android:textSize">@dimen/input_inner_size</item>
    </style>

    <style name="Theme.EZazi.Input.Login" parent="Theme.EZazi.Input">
        <item name="boxBackgroundColor">@color/colorLoginInputBg</item>
        <item name="boxStrokeColor">@color/input_focuse_color</item>
        <item name="boxStrokeWidth">@dimen/input_stroke_size</item>
    </style>

    <style name="Theme.EZazi.Input.Login.DropDown" parent="Theme.EZazi.Input.Login">
        <item name="android:theme">
            @style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu
        </item>
        <item name="endIconDrawable">@drawable/ic_dropdown</item>
        <item name="endIconMode">dropdown_menu</item>
    </style>

    <style name="Theme.EZazi.Input.Login.Password" parent="Theme.EZazi.Input.Login">
        <item name="endIconMode">password_toggle</item>
        <item name="iconEndPadding">16dp</item>
        <item name="endIconTint">@color/colorForgotPassword</item>
        <!--        <item name="passwordToggleTint">@color/colorForgotPassword</item>-->
        <!--        <item name="passwordToggleEnabled">true</item>-->
        <!--        <item name="passwordToggleTintMode">src_atop</item>-->
        <item name="endIconDrawable">@drawable/ic_password_toggle</item>
    </style>

    <style name="Theme.EZazi.Text.Content" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/splash_bottom_text_size</item>
        <item name="android:textColor">?android:attr/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">@dimen/std_4dp</item>
        <item name="android:layout_marginBottom">@dimen/splash_bottom_text_margin</item>
    </style>

    <style name="LabelStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/input_label_size</item>
        <item name="android:textColor">@color/font_black_0</item>
        <item name="fontFamily">@font/dm_sans_medium</item>
        <item name="android:fontFamily">@font/dm_sans_medium</item>
    </style>

    <style name="Theme.EZazi.Text.Dialog.Title" parent="@style/LabelStyle">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="Theme.EZazi.Text.Dialog.Content" parent="@style/LabelStyle">
        <item name="fontFamily">@font/dm_sans_regular</item>
        <item name="android:fontFamily">@font/dm_sans_regular</item>
    </style>

    <style name="Theme.EZazi.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minHeight">@dimen/input_height</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="rippleColor">@color/white</item>
        <item name="fontFamily">@font/dm_sans_bold</item>
        <item name="android:fontFamily">@font/dm_sans_bold</item>
        <item name="backgroundTint">@color/btn_blue_color_selector</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
    </style>

    <style name="Theme.EZazi.Button.Small" parent="Theme.EZazi.Button">
        <item name="android:textSize">@dimen/small_button_text_size</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingTop">@dimen/small_button_padding</item>
        <item name="android:paddingBottom">@dimen/small_button_padding</item>
    </style>

    <style name="Theme.EZazi.Button.White" parent="Theme.EZazi.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="rippleColor">@color/gray_2</item>
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">@color/gray_2</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="Theme.EZazi.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">@dimen/forgot_pwd_size</item>
        <item name="fontFamily">@font/dm_sans_medium</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingTop">@dimen/small_btn_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/small_btn_vertical_padding</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/dm_sans_medium</item>
        <item name="rippleColor">@color/gray_2</item>
    </style>

    <style name="Theme.EZazi.Button.Next" parent="Theme.EZazi.Button">
        <item name="icon">@drawable/ic_arrow_next</item>
        <item name="iconGravity">end</item>
    </style>

    <style name="Theme.EZazi.Screen.Title" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/screen_title_size</item>
        <item name="android:textColor">@color/font_black_0</item>
        <item name="fontFamily">@font/dm_sans_bold</item>
        <item name="android:fontFamily">@font/dm_sans_bold</item>
    </style>

    <style name="Theme.EZazi.Screen.Welcome" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/welcome_text_size</item>
        <item name="android:textColor">@color/font_black_0</item>
        <item name="fontFamily">@font/dm_sans_medium</item>
        <item name="android:fontFamily">@font/dm_sans_medium</item>
    </style>

    <style name="Theme.EZazi.Bottom.Menu.Text" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/bottom_menu_text_size</item>
        <item name="fontFamily">@font/dm_sans_bold</item>
        <item name="android:fontFamily">@font/dm_sans_bold</item>
    </style>

    <style name="Theme.EZazi.Heading1" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/heading1</item>
        <item name="fontFamily">@font/dm_sans_medium</item>
        <item name="android:textColor">@color/font_black_0</item>
        <item name="android:fontFamily">@font/dm_sans_medium</item>
    </style>

    <style name="Theme.EZazi.Heading2" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/heading2</item>
        <item name="fontFamily">@font/dm_sans_medium</item>
        <item name="android:textColor">@color/font_black_0</item>
        <item name="android:fontFamily">@font/dm_sans_medium</item>
    </style>

    <style name="Theme.EZazi.Body" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/body</item>
        <item name="fontFamily">@font/dm_sans_regular</item>
        <item name="android:textColor">@color/font_black_0</item>
        <item name="android:fontFamily">@font/dm_sans_regular</item>
    </style>

    <style name="Theme.EZazi.Caption" parent="Theme.EZazi.Body">
        <item name="android:textSize">@dimen/caption</item>
    </style>

    <style name="Theme.EZazi.Search" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:background">@drawable/round_corner_gray_stroke_light</item>
        <item name="iconifiedByDefault">false</item>
        <item name="searchIcon">@drawable/ic_search_24dp</item>
        <item name="queryHint">@string/hint_search_cases</item>
        <item name="defaultQueryHint">@string/hint_search_cases</item>
        <item name="android:minHeight">@dimen/search_view_height</item>
        <item name="android:focusable">false</item>
    </style>


    <style name="Theme.EZazi.Dialog.Button.Next" parent="Theme.EZazi.Button.Next">
        <item name="android:textSize">@dimen/dialog_btn_text_size</item>
        <item name="android:paddingTop">@dimen/actionbar_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/actionbar_vertical_padding</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="Theme.EZazi.Dialog.Button.Cancel" parent="Theme.EZazi.Button.White">
        <item name="android:textSize">@dimen/dialog_btn_text_size</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:paddingTop">@dimen/actionbar_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/actionbar_vertical_padding</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="Theme.EZazi.Scrollbar.Thumb" parent="">
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarSize">@dimen/scrollbar_width</item>
        <item name="android:scrollbarThumbVertical">@color/colorScrollbar</item>
    </style>

    <style name="Theme.EZazi.Screen.Name" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/custom_appbar_title_size</item>
        <item name="android:textColor">@color/font_black_0</item>
        <item name="fontFamily">@font/dm_sans_medium</item>
        <item name="android:fontFamily">@font/dm_sans_medium</item>
        <item name="android:lineHeight">@dimen/std_31dp</item>

    </style>


    <style name="Theme.EZazi.Input.Add.Patient" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="hintTextColor">@color/darkGray</item>
        <item name="boxBackgroundColor">@color/white</item>
    </style>

    <style name="Theme.EZazi.Material.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="elevation">0dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardMaxElevation">0dp</item>
        <item name="strokeWidth">0.1dp</item>
        <item name="strokeColor">@color/colorScrollbar</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">-10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>

    </style>

    <style name="Theme.EZazi.Input.Add.Patient.DropDown" parent="Theme.EZazi.Input.Login">
        <item name="android:theme">
            @style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu
        </item>
        <item name="endIconDrawable">@drawable/ic_dropdown</item>
        <item name="endIconMode">dropdown_menu</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxStrokeWidth">0dp</item>
    </style>
</resources>