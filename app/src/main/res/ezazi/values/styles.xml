    <style name="Theme.EZazi.Bottom.Menu.Text" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/bottom_menu_text_size</item>
        <item name="fontFamily">@font/dm_sans_bold</item>
        <item name="android:fontFamily">@font/dm_sans_bold</item>
    </style>

    <style name="Theme.EZazi.Heading1" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/heading1</item>
        <item name="fontFamily">@font/dm_sans_medium</item>
        <item name="android:textColor">@color/font_black_0</item>
        <item name="android:fontFamily">@font/dm_sans_medium</item>
    </style>

    <style name="Theme.EZazi.Heading2" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/heading2</item>
        <item name="fontFamily">@font/dm_sans_medium</item>
        <item name="android:textColor">@color/font_black_0</item>
