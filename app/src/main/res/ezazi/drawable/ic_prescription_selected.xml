<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorPrimary" />
            <corners android:radius="@dimen/button_corner_radius" />
            <size
                android:width="@dimen/back_button_size"
                android:height="@dimen/back_button_size" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorWhiteTransparent" />
            <corners android:radius="@dimen/button_corner_radius" />
            <size
                android:width="@dimen/back_button_size"
                android:height="@dimen/back_button_size" />
            <padding
                android:bottom="@dimen/back_button_padding"
                android:left="@dimen/back_button_padding"
                android:right="@dimen/back_button_padding"
                android:top="@dimen/back_button_padding" />
        </shape>
    </item>
    <item android:drawable="@drawable/ic_vector_prescription" />
</layer-list>