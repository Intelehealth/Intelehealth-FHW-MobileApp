<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorSelectedListItem" />
            <corners android:radius="@dimen/button_corner_radius" />
            <padding android:bottom="@dimen/list_container_padding" android:left="@dimen/list_container_padding" android:right="@dimen/list_container_padding" android:top="@dimen/list_container_padding" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorSelectedListItem" />
            <corners android:radius="@dimen/button_corner_radius" />
            <padding android:bottom="@dimen/list_container_padding" android:left="@dimen/list_container_padding" android:right="@dimen/list_container_padding" android:top="@dimen/list_container_padding" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorSelectedListItem" />
            <corners android:radius="@dimen/button_corner_radius" />
            <padding android:bottom="@dimen/list_container_padding" android:left="@dimen/list_container_padding" android:right="@dimen/list_container_padding" android:top="@dimen/list_container_padding" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="@dimen/button_corner_radius" />
            <padding android:bottom="@dimen/list_container_padding" android:left="@dimen/list_container_padding" android:right="@dimen/list_container_padding" android:top="@dimen/list_container_padding" />
        </shape>
    </item>
</selector>