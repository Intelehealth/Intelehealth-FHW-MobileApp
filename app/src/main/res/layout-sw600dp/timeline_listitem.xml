<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp">

    <TextView
        android:id="@+id/stage1start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="10dp"
        android:gravity="center"
        android:text="Stage 1"
        android:textAlignment="center"
        android:textColor="@color/gray_2"
        android:textSize="@dimen/text_24sp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/stage2start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stage1start"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="10dp"
        android:gravity="center"
        android:text="Stage 2"
        android:textAlignment="center"
        android:textColor="@color/gray_2"
        android:textSize="@dimen/text_24sp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:visibility="visible" />

    <FrameLayout
        android:id="@+id/frame1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/stage2start">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvElcgEncounter1Time"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"
                android:gravity="center"
                android:minWidth="@dimen/text_24sp"
                android:text="06:00 AM"
                android:textSize="@dimen/text_24sp" />

            <View
                android:id="@+id/vl_1"
                android:layout_width="2dp"
                android:layout_height="160dp"
                android:layout_marginStart="31dp"
                android:layout_toEndOf="@id/tvElcgEncounter1Time"
                android:background="#33000000" />

            <ImageView
                android:id="@+id/viewIndicatorElcgEncounter1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="24dp"
                android:layout_toEndOf="@+id/tvElcgEncounter1Time"
                android:src="@drawable/circle_indicator_timeline" />

            <View
                android:id="@+id/viewElcgEncounterConnectorLine1"
                android:layout_width="40dp"
                android:layout_height="2dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/viewIndicatorElcgEncounter1"
                android:background="#33000000" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardElcgEncounter2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:layout_toEndOf="@+id/viewElcgEncounterConnectorLine1"
                app:cardCornerRadius="15dp"
                app:cardElevation="10dp"
                app:cardPreventCornerOverlap="true"
                app:contentPadding="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <TextView
                        android:id="@+id/summary_note_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@+id/ivEdit"
                        android:text="Tap here to collect the history!"
                        android:textColor="@color/gray_4"
                        android:textSize="@dimen/content_text_size" />

                    <TextView
                        android:id="@+id/summary_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/summary_note_textview"
                        android:gravity="center"
                        android:text="@string/click_to_enter"
                        android:textSize="@dimen/header_text_size"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/ivEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/ic_edit"
                        android:padding="8dip"
                        android:src="@drawable/ic_mode_edit_white_48px" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>


        </RelativeLayout>
    </FrameLayout>

    <!--    Child A-->
    <FrameLayout
        android:id="@+id/frame2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frame1"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/time2"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:text="26:65 PM" />

            <View
                android:id="@+id/vl_2"
                android:layout_width="2dp"
                android:layout_height="130dp"
                android:layout_marginStart="21dp"
                android:layout_toEndOf="@id/time2"
                android:background="#33000000" />

            <ImageView
                android:id="@+id/circle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/time2"
                android:src="@drawable/circle_indicator_timeline" />


            <View
                android:id="@+id/hl_2"
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/circle2"
                android:background="#33000000" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_parent1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="40dp"
                android:layout_toEndOf="@+id/hl_2"
                app:cardCornerRadius="15dp"
                app:cardElevation="10dp"
                app:cardPreventCornerOverlap="true"
                app:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="A- Summary: This looks a summary \n\n Alert: This is an Alert!!!" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </RelativeLayout>
    </FrameLayout>

    <!--    Child B-->
    <FrameLayout
        android:id="@+id/frame3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frame2"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/time3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:text="06:30 AM" />

            <View
                android:id="@+id/vl_3"
                android:layout_width="2dp"
                android:layout_height="130dp"
                android:layout_marginStart="21dp"
                android:layout_toEndOf="@id/time3"
                android:background="#33000000" />

            <ImageView
                android:id="@+id/circle3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/time3"
                android:src="@drawable/circle_indicator_timeline" />

            <View
                android:id="@+id/hl_3"
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/circle3"
                android:background="#33000000" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_parent2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="40dp"
                android:layout_toEndOf="@+id/hl_3"
                app:cardCornerRadius="15dp"
                app:cardElevation="10dp"
                app:cardPreventCornerOverlap="true"
                app:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="B- Summary: This looks a summary \n\n Alert: This is an Alert!!!" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </RelativeLayout>
    </FrameLayout>

    <!--    Child C-->
    <FrameLayout
        android:id="@+id/frame4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frame3"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/time4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:text="06:45 AM" />

            <View
                android:id="@+id/vl_4"
                android:layout_width="2dp"
                android:layout_height="130dp"
                android:layout_marginStart="21dp"
                android:layout_toEndOf="@id/time4"
                android:background="#33000000" />

            <ImageView
                android:id="@+id/circle4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/time4"
                android:src="@drawable/circle_indicator_timeline" />

            <View
                android:id="@+id/hl_4"
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/circle4"
                android:background="#33000000" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_parent3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="40dp"
                android:layout_toEndOf="@+id/hl_4"
                app:cardCornerRadius="15dp"
                app:cardElevation="10dp"
                app:cardPreventCornerOverlap="true"
                app:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="C- Summary: This looks a summary \n\n Alert: This is an Alert!!!" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </RelativeLayout>
    </FrameLayout>
</RelativeLayout>