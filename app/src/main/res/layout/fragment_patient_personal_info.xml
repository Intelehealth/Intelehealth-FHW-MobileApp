<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.addNewPatient.PatientPersonalInfoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:scrollbars="none"
        android:layout_above="@+id/btn_next_first_screen"
        android:layout_alignParentTop="true"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <FrameLayout
                android:id="@+id/layout_profile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_gravity="center"
                    android:layout_height="70dp"
                    app:cardCornerRadius="12dp">

                    <ImageView
                        android:id="@+id/profilePic"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="bottom|center_horizontal"
                        android:src="@drawable/dummy_profile_icon" />

                </androidx.cardview.widget.CardView>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="bottom|end"
                    android:scaleType="center"
                    android:visibility="visible"
                    app:backgroundTint="@color/colorGray"
                    app:fabCustomSize="28dp"
                    app:maxImageSize="15dp"
                    app:srcCompat="@drawable/ic_camera_edit_photo"
                    app:tint="@color/colorPrimary" />

            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-20dp"
                android:gravity="center"
                android:text="Add a picture"
                android:textColor="@color/darkGray"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_profile"
                android:background="@drawable/container_bg_rounded"
                android:orientation="vertical"
                android:paddingStart="12dp"
                android:layout_marginTop="15dp"
                android:paddingTop="10dp"
                android:paddingEnd="12dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_no_ofdays_staff"
                    style="@style/Theme.EZazi.Input.Add.Patient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputet_no_of_days_expense"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/input_height"
                        android:backgroundTint="@color/white"
                        android:hint="First Name*"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:maxLines="1"
                        android:layout_weight="400"
                        android:singleLine="true"
                        android:textColor="@color/colorBlack" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_no_ofdays_staff"
                    style="@style/Theme.EZazi.Input.Add.Patient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputet_no_of_days_expense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:hint="Middle Name"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:maxLines="1"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_no_ofdays_staff"
                    style="@style/Theme.EZazi.Input.Add.Patient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputet_no_of_days_expense"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/input_height"
                        android:backgroundTint="@color/white"
                        android:hint="Last Name*"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"

                        android:maxLines="1"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_no_ofdays_staff"
                    style="@style/Theme.EZazi.Input.Add.Patient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputet_no_of_days_expense"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/input_height"
                        android:backgroundTint="@color/white"
                        android:hint="Date of Birth*"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"

                        android:maxLines="1"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_no_ofdays_staff"
                    style="@style/Theme.EZazi.Input.Add.Patient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputet_no_of_days_expense"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/input_height"
                        android:backgroundTint="@color/white"
                        android:drawablePadding="30dp"
                        android:hint="Age*"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:maxLines="1"
                        android:singleLine="true"
                        app:drawableEndCompat="@drawable/ic_calendar_new" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_no_ofdays_staff"
                    style="@style/Theme.EZazi.Input.Add.Patient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputet_no_of_days_expense"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/input_height"
                        android:backgroundTint="@color/white"
                        android:hint="Mobile Number"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:inputType="numberDecimal"
                        android:maxLines="1"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_no_ofdays_staff"
                    style="@style/Theme.EZazi.Input.Add.Patient"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="15dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputet_no_of_days_expense"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/input_height"
                        android:backgroundTint="@color/white"
                        android:hint="Alternate Mobile Number"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:inputType="numberDecimal"
                        android:maxLines="1"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_next_first_screen"
        style="@style/Theme.EZazi.Button"
        android:layout_width="match_parent"
        android:backgroundTint="@color/darkGray"
        android:layout_height="@dimen/input_height"
        android:layout_alignParentBottom="true"
        android:text="Next"
        android:layout_marginTop="30dp"
        app:rippleColor="@color/white" />
</RelativeLayout>