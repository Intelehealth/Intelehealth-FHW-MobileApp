<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/frame_10021"
    tools:context=".activities.visit.VisitActivity">

    <RelativeLayout
        android:id="@+id/toolbar_relative"
        android:layout_width="0dp"
        android:layout_height="@dimen/followup_toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/toolbar_top_minus_24dp"
        android:background="@drawable/frame_10021">

        <!-- Frame 100167 -->
        <LinearLayout
            android:id="@+id/frame_10016"
            android:layout_width="0dp"
            android:layout_height="@dimen/followup_toolbar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/fu_margin_start"
            android:layout_marginTop="@dimen/toolbar_margin_top"
            android:layout_marginRight="@dimen/fu_margin_start"
            android:orientation="horizontal"
            android:weightSum="3">

            <!-- Frame 100116 -->
            <LinearLayout
                android:id="@+id/frame_10011"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.7"
                android:orientation="horizontal">

                <!-- arrow-right -->
                <ImageButton
                    android:id="@+id/imgBtnBackPrescriptions"
                    android:contentDescription="image button to move back to previous screen from prescription screen"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:background="@null"
                    android:padding="@dimen/margin_5"
                    android:src="@drawable/ic_arrow_right" />

                <!-- Label -->
                <TextView
                    android:id="@+id/tvScreenTitlePrescriptions"
                    android:contentDescription="screen title textview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/fu_margin_start"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="1sp"
                    android:text="@string/prescriptions"
                    android:textSize="@dimen/toolbar_text_size"
                    android:textStyle="bold"
                    android:textAppearance="@style/label"
                    android:translationY="-0.28sp" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/imgBtnRefreshPrescriptions"
                android:contentDescription="imagebutton to refresh data"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="@null" android:onClick="syncNow"
                android:src="@drawable/ic_refreshbtn" />

        </LinearLayout>
    </RelativeLayout>
    <!--toolbar - end-->

    <!--Tablayout-->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabPrescriptions"
        android:contentDescription="tablayout to show received and pending tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabInlineLabel="true"
        android:gravity="center"
        android:textAlignment="center"
        app:tabGravity="fill"
        app:tabMaxWidth="0dp"
        app:tabMode="fixed"
        android:layout_below="@+id/toolbar_relative"
        android:layout_marginStart="@dimen/fu_margin_start"
        android:layout_marginEnd="@dimen/fu_margin_start"
        app:tabIndicatorColor="@color/lite_red"
        app:tabSelectedTextColor="@color/textColorBlack"
        app:tabTextAppearance="@style/CustomTabText" />

    <!--Tablayout - end -->

    <!--ViewPager-->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vpPrescriptions"
        android:contentDescription="view pager to show received and pending tabs with sliding feature"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tabPrescriptions"
        android:visibility="visible"
        android:layout_marginTop="@dimen/margin_24"
        android:layout_marginStart="@dimen/fu_margin_start"
        android:layout_marginEnd="@dimen/fu_margin_start"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />


</RelativeLayout>