<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.medicationAidActivity.AdministerDispenseActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@id/appbar_layout"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <FrameLayout
            android:id="@+id/fl_med"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_medication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="top"
            android:lineSpacingExtra="3sp"
            android:text="@string/medication"
            android:textSize="@dimen/card_content_sub_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_medData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/card_content_sub_text_size"
            tools:text="1. Medicine A \n2. Medicine B"
            app:layout_constraintTop_toBottomOf="@id/tv_medication"
            />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_medNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/tv_medData"
                android:scrollbars="vertical"
                android:fadeScrollbars="false"
                android:layout_marginBottom="20dp"
                app:counterEnabled="true"
                app:counterMaxLength="1000"
                android:gravity="top">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tie_medNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="3"
                    android:background="@drawable/edittext_border"
                    android:inputType="textMultiLine"
                    android:gravity="top"
                    android:padding="20dp"
                    tools:hint="Enter details here."
                    android:maxLength="1000"
                    android:textColorHint="@color/edittext_hint_color"
                    android:textSize="@dimen/find_patient_hint_size"
                    />
            </com.google.android.material.textfield.TextInputLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_aid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/fl_med"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_aid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:lineSpacingExtra="3sp"
                android:text="@string/aid"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/card_content_sub_text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_aidData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/card_content_sub_text_size"
                tools:text="1. Aid A \n2. Aid B"
                app:layout_constraintTop_toBottomOf="@id/tv_aid"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_totalCost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_aidData">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tie_totalCost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="15dp"
                    android:layout_marginTop="20dp"
                    android:ems="10"
                    android:fontFamily="@font/lato_regular"
                    android:freezesText="true"
                    android:hint="@string/total_cost"
                    android:imeOptions="actionUnspecified"
                    android:inputType="number"
                    android:maxLength="25"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textAlignment="viewStart"
                    android:textSize="@dimen/card_content_sub_text_size" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_pharmacyDiscount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/til_totalCost">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tie_vendorDiscount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="15dp"
                    android:layout_marginTop="20dp"
                    android:ems="10"
                    android:fontFamily="@font/lato_regular"
                    android:freezesText="true"
                    android:hint="@string/vendor_discount"
                    android:imeOptions="actionUnspecified"
                    android:inputType="number"
                    android:maxLength="25"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textAlignment="viewStart"
                    android:textSize="@dimen/card_content_sub_text_size" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_coveredCost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/til_pharmacyDiscount">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tie_coveredCost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="15dp"
                    android:layout_marginTop="20dp"
                    android:ems="10"
                    android:fontFamily="@font/lato_regular"
                    android:freezesText="true"
                    android:hint="@string/covered_cost"
                    android:imeOptions="actionUnspecified"
                    android:inputType="number"
                    android:maxLength="25"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textAlignment="viewStart"
                    android:textSize="@dimen/card_content_sub_text_size" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_outOfPocket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/til_coveredCost">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tie_outOfPocket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="15dp"
                    android:layout_marginTop="20dp"
                    android:ems="10"
                    android:fontFamily="@font/lato_regular"
                    android:freezesText="true"
                    android:hint="@string/out_of_pocket"
                    android:imeOptions="actionUnspecified"
                    android:inputType="number"
                    android:maxLength="25"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textAlignment="viewStart"
                    android:textSize="@dimen/card_content_sub_text_size" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_others"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:enabled="false"
                app:layout_constraintTop_toBottomOf="@+id/til_outOfPocket">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tie_others"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="15dp"
                    android:layout_marginTop="20dp"
                    android:ems="10"
                    android:fontFamily="@font/lato_regular"
                    android:freezesText="true"
                    android:hint="@string/other_aids"
                    android:imeOptions="actionUnspecified"
                    android:inputType="number"
                    android:maxLength="25"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textAlignment="viewStart"
                    android:textSize="@dimen/card_content_sub_text_size" />

            </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_aidNotes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        app:layout_constraintTop_toBottomOf="@id/til_others"
                        android:scrollbars="vertical"
                        android:fadeScrollbars="false"
                        android:layout_marginBottom="20dp"
                        app:counterEnabled="true"
                        app:counterMaxLength="1000"
                        android:gravity="top">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tie_aidNotes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittext_border"
                            android:gravity="top"
                            android:inputType="textMultiLine"
                            android:maxLength="1000"
                            android:minLines="3"
                            android:padding="20dp"
                            android:textColorHint="@color/edittext_hint_color"
                            android:textSize="@dimen/find_patient_hint_size"
                            tools:hint="Enter details here." />
                    </com.google.android.material.textfield.TextInputLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>
            </FrameLayout>


            <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cv_docs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/fl_aid"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/padding_card"
                app:cardCornerRadius="5dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/layout_addDoc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/titleBar_cardview"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView_additional_document_images"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:background="@color/titleBar_cardview"
                            android:fontFamily="@font/lato_bold"
                            android:paddingVertical="12dp"
                            android:paddingStart="20dp"
                            android:text="@string/upload_supporting_documents"
                            android:textColor="@color/white"
                            android:textSize="@dimen/card_content_text_size" />

                        <ImageButton
                            android:id="@+id/imagebutton_edit_additional_document"
                            style="@style/SelectableItemBackground"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:background="@null"
                            android:contentDescription="TODO"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:padding="15dp"
                            app:srcCompat="@drawable/ic_add_24dp" />

                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recy_additional_documents"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layout_addDoc"
                        android:padding="@dimen/padding_card"></androidx.recyclerview.widget.RecyclerView>

                    <TextView
                        android:id="@+id/additional_documents_download"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/recy_additional_documents"
                        android:backgroundTint="@color/cardview_dark_background"
                        android:fontFamily="@font/lato_medium"
                        android:padding="@dimen/padding_card"
                        android:text="@string/click_to_download_the_images"
                        android:textSize="@dimen/card_content_sub_text_size"
                        android:visibility="gone" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cv_docs"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/primary_bg_rounded_corners"
                android:fontFamily="@font/lato_bold"
                android:gravity="center"
                android:padding="12dp"
                android:text="@string/button_save"
                android:textColor="@color/white"
                android:textSize="20sp"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>