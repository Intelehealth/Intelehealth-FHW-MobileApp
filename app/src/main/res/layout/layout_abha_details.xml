<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fl_doNotHaveABHANumber"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15"
            app:hintEnabled="false"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@android:color/transparent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etAbhaNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textbox_outline"
                android:inputType="number"
                android:hint="@string/enter_14_digit_abha_id_number"
                android:imeOptions="actionNext"
                android:textColor="@null"
                android:textSize="@null"
                android:textAppearance="@style/type_mobile_no"
                android:textColorHint="@color/hint_color"
                android:padding="14dp"
                android:singleLine="true"
                android:maxLength="14"
                />

            <TextView
                android:id="@+id/tvAbhaNumberError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/hamburger_margin_start"
                android:lineSpacingExtra="0sp"
                android:text="@string/this_field_is_mandatory"
                android:textAppearance="@style/registr_error_msg"
                android:textColor="@color/red"
                android:textSize="@null"
                android:visibility="gone"
                tools:visibility="visible" />

        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/or"
            android:layout_gravity="center"
            android:textSize="14sp"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:layout_marginTop="@dimen/spinner_countries_margin_top"
             app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etAbhaAddress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/textbox_outline"
                android:hint="@string/enter_abha_address"
                android:imeOptions="actionDone"
                android:lineSpacingExtra="3sp"
                android:textColor="@null"
                android:textSize="@null"
                android:textAppearance="@style/type_mobile_no"
                android:textColorHint="@color/hint_color"
                android:padding="14dp"
                android:singleLine="true"
                android:inputType="text"
                />

            <TextView
                android:id="@+id/tvAbhaAddressError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/hamburger_margin_start"
                android:lineSpacingExtra="0sp"
                android:text="@string/this_field_is_mandatory"
                android:textAppearance="@style/registr_error_msg"
                android:textColor="@color/red"
                android:textSize="@null"
                android:visibility="gone"
                tools:visibility="visible" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

</FrameLayout>