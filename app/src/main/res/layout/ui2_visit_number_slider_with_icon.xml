<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlParentVisitNumberSliderIcon"
    android:contentDescription="Visit Number Slider Icon Parent RelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ayu.visit.reason.VisitReasonCaptureFragment">

    <TextView
        android:id="@+id/tvDescVisitNumberSliderIcon"
        android:contentDescription="Visit Number Slider Icon Description TextView"
        style="@style/label_misc_txt_14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="1sp"
        android:text="@string/drag_anywhere_from_0_to_10" />

    <LinearLayout
        android:id="@+id/llSliderVisitNumberSliderIcon"
        android:contentDescription="Visit Number Slider Icon Slider LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDescVisitNumberSliderIcon"
        android:layout_marginTop="@dimen/padding_12"
        android:background="@drawable/ui2_common_gray_round_stroke_bg"
        android:orientation="vertical"
        android:padding="@dimen/padding_12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin_8"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/margin_8"
            android:weightSum="10">

            <TextView
                android:id="@+id/tvNum0VisitNumberSliderIcon"
                android:contentDescription="Visit Number Slider Icon Number 0 TextView"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/gray_3"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvNum1VisitNumberSliderIcon"
                android:contentDescription="Visit Number Slider Icon Number 1 TextView"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/gray_3"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvNum2VisitNumberSliderIcon"
                android:contentDescription="Visit Number Slider Icon Number 2 TextView"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/gray_3"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvNum3VisitNumberSliderIcon"
                android:contentDescription="Visit Number Slider Icon Number 3 TextView"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/gray_3"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvNum4VisitNumberSliderIcon"
                android:contentDescription="Visit Number Slider Icon Number 4 TextView"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/gray_3"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvNum5VisitNumberSliderIcon"
                android:contentDescription="Visit Number Slider Icon Number 5 TextView"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/gray_3"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvNum6VisitNumberSliderIcon"
                android:contentDescription="Visit Number Slider Icon Number 6 TextView"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="6"
                android:textColor="@color/gray_3"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvNum7VisitNumberSliderIcon"
                android:contentDescription="Visit Number Slider Icon Number 7 TextView"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="7"
                android:textColor="@color/gray_3"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvNum8VisitNumberSliderIcon"
                android:contentDescription="Visit Number Slider Icon Number 8 TextView"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="8"
                android:textColor="@color/gray_3"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvNum9VisitNumberSliderIcon"
                android:contentDescription="Visit Number Slider Icon Number 9 TextView"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="9"
                android:textColor="@color/gray_3"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvNum10VisitNumberSliderIcon"
                android:contentDescription="Visit Number Slider Icon Number 10 TextView"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="10"
                android:textColor="@color/gray_3"
                android:textSize="14sp" />
        </LinearLayout>

        <com.google.android.material.slider.Slider
            android:id="@+id/sliderVisitNumberSliderIcon"
            android:contentDescription="Visit Number Slider Icon Slider"
            style="@style/slider_scrollbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:value="1"
            android:valueFrom="1"
            android:valueTo="10"
            app:labelBehavior="floating"
            app:labelStyle="@style/slider_tooltip"
            app:thumbColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin_8"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/margin_8"
            android:weightSum="10">

            <ImageView
                android:id="@+id/ivNum0VisitNumberSliderIcon"
                android:contentDescription="Visit Number Slider Icon Number 0 ImageView"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/n0_icon"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivNum1VisitNumberSliderIcon"
                android:contentDescription="Visit Number Slider Icon Number 1 ImageView"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/n1_icon" />

            <ImageView
                android:id="@+id/ivNum2VisitNumberSliderIcon"
                android:contentDescription="Visit Number Slider Icon Number 2 ImageView"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/n2_icon" />

            <ImageView
                android:id="@+id/ivNum3VisitNumberSliderIcon"
                android:contentDescription="Visit Number Slider Icon Number 3 ImageView"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/n3_icon" />

            <ImageView
                android:id="@+id/ivNum4VisitNumberSliderIcon"
                android:contentDescription="Visit Number Slider Icon Number 4 ImageView"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/n4_icon" />

            <ImageView
                android:id="@+id/ivNum5VisitNumberSliderIcon"
                android:contentDescription="Visit Number Slider Icon Number 5 ImageView"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/n5_icon" />

            <ImageView
                android:id="@+id/ivNum6VisitNumberSliderIcon"
                android:contentDescription="Visit Number Slider Icon Number 6 ImageView"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/n6_icon" />

            <ImageView
                android:id="@+id/ivNum7VisitNumberSliderIcon"
                android:contentDescription="Visit Number Slider Icon Number 7 ImageView"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/n7_icon" />

            <ImageView
                android:id="@+id/ivNum8VisitNumberSliderIcon"
                android:contentDescription="Visit Number Slider Icon Number 8 ImageView"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/n8_icon" />

            <ImageView
                android:id="@+id/ivNum9VisitNumberSliderIcon"
                android:contentDescription="Visit Number Slider Icon Number 9 ImageView"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/n9_icon" />

            <ImageView
                android:id="@+id/ivNum10VisitNumberSliderIcon"
                android:contentDescription="Visit Number Slider Icon Number 10 ImageView"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/n10_icon" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvSelectedValueVisitNumberSliderIcon"
        android:contentDescription="Visit Number Slider Icon Selected Value TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llSliderVisitNumberSliderIcon"
        android:layout_marginTop="@dimen/margin_16"
        android:background="@drawable/edittext_border_blue"
        android:gravity="center"
        android:minWidth="80dip"
        android:padding="@dimen/padding_10"
        android:text="---"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary1"
        android:textSize="@dimen/card_content_normal_text_size"
        android:textStyle="bold"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/tvSubmitVisitNumberSliderIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llSliderVisitNumberSliderIcon"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/margin_16"
        android:background="@drawable/ui2_common_button_bg_submit"
        android:gravity="center"
        android:minWidth="80dip"
        android:padding="@dimen/padding_10"
        android:text="@string/submit"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/card_content_normal_text_size"
        android:textStyle="bold"
        tools:ignore="TextContrastCheck" />
    <Button
        android:id="@+id/btnSkipVisitNumberSliderIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llSliderVisitNumberSliderIcon"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_24"
        android:layout_toStartOf="@+id/tvSubmitVisitNumberSliderIcon"
        android:background="@drawable/ui2_common_button_bg_submit"
        android:minWidth="100dip"
        android:paddingHorizontal="@dimen/padding_7"
        android:paddingVertical="@dimen/padding_7"
        android:text="@string/skip_new"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/common_button_text_size"
        android:visibility="visible" />
</RelativeLayout>