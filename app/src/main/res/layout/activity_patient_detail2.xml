<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlParentPatientDetails"
    android:contentDescription="Patient Details Parent RelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".activities.patientDetailActivity.PatientDetailActivity2">


    <RelativeLayout
        android:id="@+id/rlToolbarPatientDetails"
        android:contentDescription="Patient Details Toolbar RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="@dimen/toolbar_margin_left"
        android:layout_marginEnd="@dimen/toolbar_margin_right"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/ivBackArrowPatientDetails"
            android:contentDescription="Patient Details Back Arrow ImageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@null"
            android:padding="@dimen/margin_5"
            android:src="@drawable/ic_arrow_right"
            android:visibility="gone" />

        <!-- Label -->
        <TextView
            android:id="@+id/tvTitlePatientDetails"
            android:contentDescription="Patient Details Title TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:lineSpacingExtra="1sp"
            android:text="@string/title_activity_patient_detail"
            android:textAppearance="@style/label"
            android:textColor="@null"
            android:textSize="@dimen/toolbar_text_size"
            android:textStyle="bold"
            android:translationY="-0.28sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivRefreshPatientDetails"
                android:contentDescription="Patient Details Refresh ImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_20dp"
                android:background="@null"
                android:elevation="8dip"
                android:onClick="syncNow"
                android:src="@drawable/ic_refreshbtn" />

            <ImageView
                android:id="@+id/ivCancelPatientDetails"
                android:contentDescription="Patient Details Cancel ImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:elevation="8dip"
                android:src="@drawable/cancel_btn_cross" />

        </LinearLayout>
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/svParentPatientDetails"
        android:contentDescription="Patient Details Parent ScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rlStartVisitButtonPatientDetails"
        android:layout_below="@+id/rlToolbarPatientDetails"
        android:layout_marginBottom="@dimen/margin_16">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvNameIDPatientDetails"
                android:contentDescription="Patient Details Name OpenMRS ID CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_24"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_marginEnd="@dimen/margin_24"
                app:cardCornerRadius="@dimen/hamburger_margin_start"
                app:cardElevation="@dimen/margin_5">

                <RelativeLayout
                    android:id="@+id/rlNameIDParentPatientDetails"
                    android:contentDescription="Patient Details Name OpenMRS ID Parent RelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/fu_margin_start">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvProfileImagePatientDetails"
                        android:contentDescription="Patient Details Profile Image CardView"
                        android:layout_width="@dimen/patdetail_profile_imgview_14sp"
                        android:layout_height="@dimen/patdetail_profile_imgview_14sp"
                        android:layout_margin="2dp"
                        android:elevation="0dp"
                        app:cardCornerRadius="40dp">

                        <ImageView
                            android:id="@+id/ivProfileImagePatientDetails"
                            android:contentDescription="Patient Details Profile Image ImageView"                            android:layout_width="@dimen/patdetail_profile_imgview_14sp"
                            android:layout_height="@dimen/patdetail_profile_imgview_14sp"
                            android:src="@drawable/avatar1" />
                    </androidx.cardview.widget.CardView>

                    <!--Name and SubTitle-->
                    <LinearLayout
                        android:id="@+id/llNameIDChildPatientDetails"
                        android:contentDescription="Patient Details Name OpenMRS ID Child RelativeLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/fu_margin_start"
                        android:layout_toEndOf="@+id/cvProfileImagePatientDetails"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvPatientNamePatientDetails"
                            android:contentDescription="Patient Details Patient Name TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="-3sp"
                            android:text="Kiran Devi Prakash"
                            android:textColor="@color/textview_color"
                            android:textSize="@dimen/txtsize_patdetail_16sp" />

                        <TextView
                            android:id="@+id/tvPatientOpenMRSIDPatientDetails"
                            android:contentDescription="Patient Details Patient OpenMRS ID TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_4"
                            android:gravity="center_vertical"
                            android:text="@string/fu_openmrsID"
                            android:textAppearance="@style/caption_fu_openmrsId"
                            android:textColor="@null"
                            android:textSize="@dimen/find_patient_hint_size" />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!--Header 1-->
            <include
                android:id="@+id/personalCardPatientDetails"
                android:contentDescription="Patient Details Personal Details Card"
                layout="@layout/patdetail_personal_droplist_layout" />

            <!--Header 2-->
            <include
                android:id="@+id/addressCardPatientDetails"
                android:contentDescription="Patient Details Address Details Card"
                layout="@layout/patdetail_address_droplist_layout" />

            <!--Header 3-->
            <include
                android:id="@+id/otherCardPatientDetails"
                android:contentDescription="Patient Details Other Details Card"
                layout="@layout/patdetail_other_droplist_layout" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/otherCardPatientDetails"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/margin_10"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:id="@+id/cvOpenVisitsPatientDetails"
                    android:contentDescription="Patient Details Open Visits CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="@dimen/margin_20"
                    app:cardCornerRadius="@dimen/margin_8"
                    app:cardElevation="@dimen/margin_5">

                    <LinearLayout
                        android:id="@+id/llOpenVisitsParentPatientDetails"
                        android:contentDescription="Patient Details Open Visits Parent LinearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/padding_20">

                        <LinearLayout
                            android:id="@+id/llOpenVisitsHeaderPatientDetails"
                            android:contentDescription="Patient Details Open Visits Header LinearLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/padding_12"
                            android:layout_marginTop="@dimen/padding_12"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/ivOpenVisitsIconPatientDetails"
                                android:contentDescription="Patient Details Open Visits Icon ImageView"
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                android:background="@drawable/ic_baseline_lens_24_light"
                                android:padding="12dip"
                                android:src="@drawable/icons8_activity_history_24" />

                            <TextView
                                android:id="@+id/tvOpenVisitsTitlePatientDetails"
                                android:contentDescription="Patient Details Open Visits Title TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_8"
                                android:gravity="center_vertical"
                                android:lineSpacingExtra="3sp"
                                android:text="@string/open_visit"
                                android:textAppearance="@style/patdetail_header1" />
                        </LinearLayout>

                        <View
                            android:id="@+id/viewDividerOpenVisitsHeaderPatientDetails"
                            android:contentDescription="Patient Details Open Visits Header Divider View"
                            android:layout_width="match_parent"
                            android:layout_height="1dip"
                            android:layout_marginVertical="@dimen/padding_12"
                            android:background="@color/gray_1" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvOpenVisitsPatientDetails"
                            android:contentDescription="Patient Details Open Visits RecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/padding_12" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvPastVisitsPatientDetails"
                    android:contentDescription="Patient Details Past Visits CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="@dimen/margin_24"
                    app:cardCornerRadius="@dimen/margin_8"
                    app:cardElevation="@dimen/margin_5">

                    <LinearLayout
                        android:id="@+id/llPastVisitsParentPatientDetails"
                        android:contentDescription="Patient Details Past Visits Parent LinearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/padding_20">

                        <LinearLayout
                            android:id="@+id/llPastVisitsHeaderPatientDetails"
                            android:contentDescription="Patient Details Past Visits Header LinearLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/padding_12"
                            android:layout_marginTop="@dimen/padding_12"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/ivPastVisitsIconPatientDetails"
                                android:contentDescription="Patient Details Past Visits Icon ImageView"
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                android:background="@drawable/ic_baseline_lens_24_light"
                                android:padding="12dip"
                                android:src="@drawable/icons8_activity_history_24" />

                            <TextView
                                android:id="@+id/tvPastVisitsTitlePatientDetails"
                                android:contentDescription="Patient Details Past Visits Title TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_8"
                                android:gravity="center_vertical"
                                android:lineSpacingExtra="3sp"
                                android:text="@string/past_visits"
                                android:textAppearance="@style/patdetail_header1" />
                        </LinearLayout>

                        <View
                            android:id="@+id/viewDividerPastVisitsHeaderPatientDetails"
                            android:contentDescription="Patient Details Past Visits Header Divider View"
                            android:layout_width="match_parent"
                            android:layout_height="1dip"
                            android:layout_marginVertical="@dimen/padding_12"
                            android:background="@color/gray_1" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvPastVisitsPatientDetails"
                            android:contentDescription="Patient Details Past Visits RecyclerView"                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/padding_12" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/rlStartVisitButtonPatientDetails"
        android:contentDescription="Patient Details Start Visit Button RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="visible">

        <Button
            android:id="@+id/btnStartVisitPatientDetails"
            android:contentDescription="Patient Details Start Visit Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/margin_24"
            android:layout_marginEnd="@dimen/margin_24"
            android:layout_marginBottom="@dimen/margin_24"
            android:background="@drawable/blue_common_bg_button"
            android:drawableEnd="@drawable/ui2_ic_baseline_arrow_forward_24"
            android:paddingStart="@dimen/margin_30"
            android:paddingEnd="@dimen/margin_14"
            android:text="@string/start_visit"
            android:textColor="@color/white"
            android:textSize="@dimen/txtsize_patdetail_16sp" />

    </RelativeLayout>
</RelativeLayout>