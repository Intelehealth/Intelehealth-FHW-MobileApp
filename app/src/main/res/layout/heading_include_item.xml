<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_heading"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_aid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAlignment="viewStart"
        android:lineSpacingExtra="3sp"
        android:paddingStart="15dp"
        android:text="@string/aid"
        android:textSize="@dimen/card_content_sub_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_aid_pastnotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="viewEnd"
        android:lineSpacingExtra="3sp"
        android:paddingEnd="15dp"
        android:text="@string/view_past_notes"
        android:textColor="@color/intro_next"
        android:textSize="@dimen/card_content_normal_text_size"
        android:textStyle="bold"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/tv_aid"
        android:layout_alignTop="@id/tv_aid"
        />

</RelativeLayout>