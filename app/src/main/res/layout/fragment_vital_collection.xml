<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundWhite"
    tools:context=".ayu.visit.vital.VitalCollectionFragment">

    <Button
        android:id="@+id/btnNextVitalCollection"
        android:contentDescription="next button in Vital Collection Fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/button_skip_margin_start"
        android:layout_marginEnd="@dimen/button_skip_margin_end"
        android:layout_marginBottom="@dimen/button_skip_margin_bottom"
        android:background="@drawable/ui2_common_primary_bg"
        android:drawableEnd="@drawable/ui2_ic_baseline_arrow_forward_24"
        android:drawableTint="@color/iconTintWhite"
        android:lineHeight="@dimen/button_skip_line_height"
        android:paddingStart="@dimen/common_button_padding_left"
        android:paddingTop="@dimen/common_button_padding_top"
        android:paddingEnd="@dimen/common_button_padding_right"
        android:paddingBottom="@dimen/common_button_padding_bottom"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/common_button_text_size" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsvVitalCollection"
        android:contentDescription="nested scrollview in Vital Collection Fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnNextVitalCollection"
        android:padding="8dip"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_20">

            <TextView
                android:id="@+id/tv_sub_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="1sp"
                android:text="@string/enter_patient_s_body_measurement_details"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/common_label_text_size"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_height_lbl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="1sp"
                        android:text="@string/height_cm"
                        android:textColor="@color/gray_3"
                        android:textSize="@dimen/common_label_text_size"
                        android:textStyle="normal" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/hamburger_margin_start">

                        <!--<androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/sp_height"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edittext_height_44dp"
                            android:background="@drawable/edittext_border"
                            android:dropDownVerticalOffset="56dp"
                            android:padding="@dimen/padding_10" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginEnd="@dimen/margin_12"
                            android:contentDescription="@null"
                            android:src="@drawable/ui2_ic_dropdown"
                            android:visibility="visible" />-->
                        <EditText
                            android:id="@+id/etHeightVitalCollection"
                            android:contentDescription="editext for height input in Vital Collection Fragment"
                            style="@style/edittext_textcolor"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edittext_height_44dp"
                            android:layout_marginTop="@dimen/hamburger_margin_start"
                            android:background="@drawable/edittext_border"
                            android:hint="@string/enter_value"
                            android:inputType="numberDecimal"
                            android:maxLength="3"
                            android:padding="@dimen/padding_10"
                            android:textColorHint="@color/edittext_hint_color"
                            android:textSize="14sp" />

                    </FrameLayout>

                    <TextView
                        android:id="@+id/tvHeightErrorVitalCollection"
                        android:contentDescription="height error textview in Vital Collection Fragment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="@dimen/hamburger_margin_start"
                        android:lineSpacingExtra="0sp"
                        android:text="@string/this_field_is_mandatory"
                        android:textAppearance="@style/registr_error_msg"
                        android:textColor="@color/red"
                        android:textSize="@null"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_16"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_wight_lbl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="1sp"
                        android:text="@string/weight_kg"
                        android:textColor="@color/gray_3"
                        android:textSize="@dimen/common_label_text_size"
                        android:textStyle="normal" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/hamburger_margin_start">

                        <!-- <androidx.appcompat.widget.AppCompatSpinner
                             android:id="@+id/sp_weight"
                             android:layout_width="match_parent"
                             android:layout_height="@dimen/edittext_height_44dp"
                             android:background="@drawable/edittext_border"
                             android:dropDownVerticalOffset="56dp"
                             android:padding="@dimen/padding_10" />

                         <ImageView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_gravity="end|center_vertical"
                             android:layout_marginEnd="@dimen/margin_12"
                             android:contentDescription="@null"
                             android:src="@drawable/ui2_ic_dropdown"
                             android:visibility="visible" />-->
                        <EditText
                            android:id="@+id/etWeightVitalCollection"
                            android:contentDescription="edittext for weight in Vital Collection Fragment"
                            style="@style/edittext_textcolor"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edittext_height_44dp"
                            android:layout_marginTop="@dimen/hamburger_margin_start"
                            android:background="@drawable/edittext_border"
                            android:hint="@string/enter_value"
                            android:inputType="numberDecimal"
                            android:maxLength="3"
                            android:padding="@dimen/padding_10"
                            android:textColorHint="@color/edittext_hint_color"
                            android:textSize="14sp" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tvWeightErrorVitalCollection"
                        android:contentDescription="Weight Error textview in Vital Collection Fragment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="@dimen/hamburger_margin_start"
                        android:lineSpacingExtra="0sp"
                        android:text="@string/this_field_is_mandatory"
                        android:textAppearance="@style/registr_error_msg"
                        android:textColor="@color/red"
                        android:textSize="@null"
                        android:visibility="visible" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bmi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_bmi_lbl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_16"
                    android:lineSpacingExtra="1sp"
                    android:text="@string/bmi_index_auto_calculated"
                    android:textColor="@color/gray_3"
                    android:textSize="@dimen/common_label_text_size"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_16"
                    android:background="@drawable/edittext_border"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_10"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/tvBMIValueVisitCollection"
                        android:contentDescription="bmi value textview in Vital Collection Fragment"
                        style="@style/edittext_textcolor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/auto_calculate"
                        android:lineSpacingExtra="1sp"
                        android:text=""
                        android:textSize="@dimen/common_label_text_size"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tvBMIStatusVisitCollection"
                        android:contentDescription="bmi status textview in Vital Collection Fragment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_10"
                        android:lineSpacingExtra="1sp"
                        android:text=""
                        android:textSize="@dimen/common_label_text_size"
                        android:textStyle="normal" />
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/tv_sub_title_vital_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16"
                android:lineSpacingExtra="1sp"
                android:text="@string/enter_the_patient_s_vitals"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/common_label_text_size"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_bp_sys_lbl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="1sp"
                        android:text="@string/bp_sys"
                        android:textColor="@color/gray_3"
                        android:textSize="@dimen/common_label_text_size"
                        android:textStyle="normal" />

                    <EditText
                        android:id="@+id/etBpSysVisitCollection"
                        android:contentDescription="bp systolic edittext input in Vital Collection Fragment"
                        style="@style/edittext_textcolor"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edittext_height_44dp"
                        android:layout_marginTop="@dimen/hamburger_margin_start"
                        android:background="@drawable/edittext_border"
                        android:hint="@string/enter_value"
                        android:inputType="number"
                        android:maxLength="3"
                        android:padding="@dimen/padding_10"
                        android:textColorHint="@color/edittext_hint_color"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvBpSysErrorVisitCollection"
                        android:contentDescription="bp systolic error display textview in Vital Collection Fragment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="@dimen/hamburger_margin_start"
                        android:lineSpacingExtra="0sp"
                        android:text="@string/this_field_is_mandatory"
                        android:textAppearance="@style/registr_error_msg"
                        android:textColor="@color/red"
                        android:textSize="@null"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_16"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_bp_dia_lbl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="1sp"
                        android:text="@string/bp_dia"
                        android:textColor="@color/gray_3"
                        android:textSize="@dimen/common_label_text_size"
                        android:textStyle="normal" />

                    <EditText
                        android:id="@+id/etBpDiaVisitCollection"
                        android:contentDescription="bp diastolic edittext input in Vital Collection Fragment"
                        style="@style/edittext_textcolor"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edittext_height_44dp"
                        android:layout_marginTop="@dimen/hamburger_margin_start"
                        android:background="@drawable/edittext_border"
                        android:hint="@string/enter_value"
                        android:inputType="number"
                        android:maxLength="3"
                        android:padding="@dimen/padding_10"
                        android:textColorHint="@color/edittext_hint_color"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvBpDiaErrorVisitCollection"
                        android:contentDescription="bp diastolic error textview in Vital Collection Fragment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="@dimen/hamburger_margin_start"
                        android:lineSpacingExtra="0sp"
                        android:text="@string/this_field_is_mandatory"
                        android:textAppearance="@style/registr_error_msg"
                        android:textColor="@color/red"
                        android:textSize="@null"
                        android:visibility="visible" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_pulse_lbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16"
                android:lineSpacingExtra="1sp"
                android:text="@string/pulse_bpm"
                android:textColor="@color/gray_3"
                android:textSize="@dimen/common_label_text_size"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/etPulseVisitCollection"
                android:contentDescription="pulse input edittext in Vital Collection Fragment"
                style="@style/edittext_textcolor"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height_44dp"
                android:layout_marginTop="@dimen/hamburger_margin_start"
                android:background="@drawable/edittext_border"
                android:hint="@string/bpm_eg"
                android:inputType="number"
                android:maxLength="3"
                android:padding="@dimen/padding_10"
                android:textColorHint="@color/edittext_hint_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvPulseErrorVisitCollection"
                android:contentDescription="pulse error textview in Vital Collection Fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/hamburger_margin_start"
                android:lineSpacingExtra="0sp"
                android:text="@string/this_field_is_mandatory"
                android:textAppearance="@style/registr_error_msg"
                android:textColor="@color/red"
                android:textSize="@null"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_temperature_lbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16"
                android:lineSpacingExtra="1sp"
                android:text="@string/temperature_f_new"
                android:textColor="@color/gray_3"
                android:textSize="@dimen/common_label_text_size"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/etTemperatureVitalCollection"
                android:contentDescription="temperature input edittext in Vital Collection Fragment"
                style="@style/edittext_textcolor"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height_44dp"
                android:layout_marginTop="@dimen/hamburger_margin_start"
                android:background="@drawable/edittext_border"
                android:hint="@string/temp_eg"
                android:inputType="numberDecimal"
                android:maxLength="3"
                android:padding="@dimen/padding_10"
                android:textColorHint="@color/edittext_hint_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvTempErrorVitalCollection"
                android:contentDescription="temperature error textview in Vital Collection Fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/hamburger_margin_start"
                android:lineSpacingExtra="0sp"
                android:text="@string/this_field_is_mandatory"
                android:textAppearance="@style/registr_error_msg"
                android:textColor="@color/red"
                android:textSize="@null"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_spo2_lbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16"
                android:lineSpacingExtra="1sp"
                android:text="@string/spo2"
                android:textColor="@color/gray_3"
                android:textSize="@dimen/common_label_text_size"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/etSPO2VitalCollection"
                android:contentDescription="spo2 input edittext in Vital Collection Fragment"
                style="@style/edittext_textcolor"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height_44dp"
                android:layout_marginTop="@dimen/hamburger_margin_start"
                android:background="@drawable/edittext_border"
                android:hint="@string/spo2_eg"
                android:inputType="number"
                android:maxLength="3"
                android:padding="@dimen/padding_10"
                android:textColorHint="@color/edittext_hint_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvSPO2ErrorVitalCollection"
                android:contentDescription="spo2 error textview in Vital Collection Fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/hamburger_margin_start"
                android:lineSpacingExtra="0sp"
                android:text="This field is mandatory"
                android:textAppearance="@style/registr_error_msg"
                android:textColor="@color/red"
                android:textSize="@null"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_respiratory_rate_lbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16"
                android:lineSpacingExtra="1sp"
                android:text="@string/respiratory_rate_breaths_min"
                android:textColor="@color/gray_3"
                android:textSize="@dimen/common_label_text_size"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/etRRVitalCollection"
                android:contentDescription="Respiratory Rate input edittext in Vital Collection Fragment"
                style="@style/edittext_textcolor"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height_44dp"
                android:layout_marginTop="@dimen/hamburger_margin_start"
                android:background="@drawable/edittext_border"
                android:hint="@string/respiratory_eg"
                android:inputType="number"
                android:maxLength="3"
                android:padding="@dimen/padding_10"
                android:textColorHint="@color/edittext_hint_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvRRErrorVitalCollection"
                android:contentDescription="respiratory rate error textview in Vital Collection Fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/hamburger_margin_start"
                android:lineSpacingExtra="0sp"
                android:text="@string/this_field_is_mandatory"
                android:textAppearance="@style/registr_error_msg"
                android:textColor="@color/red"
                android:textSize="@null"
                android:visibility="visible" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>