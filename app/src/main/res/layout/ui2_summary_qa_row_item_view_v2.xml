<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_8"
    android:layout_marginTop="@dimen/margin_16"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageView
            android:layout_width="12dip"
            android:layout_height="12dip"
            android:layout_marginTop="@dimen/padding_5"
            android:layout_marginEnd="@dimen/padding_5"
            android:src="@drawable/ic_baseline_lens_24" />

        <TextView
            android:id="@+id/tv_question_label"
            style="@style/label_misc_txt_14sp_dark_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="1sp"
            android:paddingEnd="@dimen/margin_16"
            android:text="@string/question" />


    </LinearLayout>

    <TextView
        android:id="@+id/tv_answer_value"
        style="@style/label_misc_txt_14sp_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:lineSpacingExtra="1sp"
        android:text="@string/answer_information"
        android:textStyle="bold" />

</LinearLayout>
