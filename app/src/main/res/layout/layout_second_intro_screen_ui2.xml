<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
    android:id="@+id/rlParentIntroScreenSecond"
    android:contentDescription="Intro Screen Second Parent Relative Layout"
android:layout_height="match_parent">

<LinearLayout
    android:id="@+id/llChildIntroScreenSecond"
    android:contentDescription="Intro Screen Second Child Linear Layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivDisplayIntroScreenSecond"
        android:contentDescription="Intro Screen Second Display ImageView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:src="@drawable/second" />

    <TextView
        android:id="@+id/tvTitleIntroScreenSecond"
        android:contentDescription="Intro Screen Second Title TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/intro_heading_margin_top"
        android:gravity="center"
        android:lineHeight="@dimen/intro_heading_line_height"
        android:text="@string/take_patient_visits"
        android:textColor="@color/textColorBlack"
        android:textSize="@dimen/introscreen_title"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvSubtitleIntroScreenSecond"
        android:contentDescription="Intro Screen Second Subtitle TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/intro_description_margin_start"
        android:layout_marginTop="@dimen/intro_description_margin_top"
        android:layout_marginEnd="@dimen/intro_description_margin_end"
        android:gravity="center"
        android:justificationMode="inter_word"
        android:lineHeight="@dimen/intro_description_line_height"
        android:text="@string/take_patient_visits_intro"
        android:textColor="@color/textColorGray"
        android:textSize="@dimen/introscreen_content" />
</LinearLayout>

</RelativeLayout>

