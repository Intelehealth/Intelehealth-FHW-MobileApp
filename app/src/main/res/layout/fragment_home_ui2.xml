<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlParentHomeScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tvFindPatientHomeFragment"
        android:contentDescription="Home Fragment Find Patient TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/find_patient_margin_start_new"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="@dimen/find_patient_margin_end_new"
        android:background="@drawable/ui2_common_input_bg"
        android:drawableStart="@drawable/ui2_ic_search_icon_home"
        android:drawablePadding="@dimen/find_patient_icon_padding"
        android:drawableTint="@color/colorPrimary"
        android:gravity="center_vertical"
        android:importantForAutofill="no"
        android:maxLines="1"
        android:minHeight="52dp"
        android:padding="@dimen/find_patient_padding"
        android:singleLine="true"
        android:text="@string/find_patient"
        android:textColor="@color/textColorGray"
        android:textSize="@dimen/find_patient_hint_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvFindPatientHomeFragment"
        android:orientation="vertical"
        android:weightSum="10">


        <androidx.cardview.widget.CardView
            android:id="@+id/cvAddPatientHomeFragment"
            android:contentDescription="Home Fragment Add Patient CardView"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginStart="@dimen/common_all_card_start_margin"
            android:layout_marginTop="@dimen/margin_12"
            android:layout_marginEnd="@dimen/common_all_card_end_margin"
            android:layout_weight="1.5"
            android:backgroundTint="@color/cardTintDarkBlue"
            app:cardCornerRadius="@dimen/common_card_corner_radius"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textlayout_find_patient">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/card_add_patient_margin">

                <ImageView
                    android:id="@+id/ivAddPatientIconHomeFragment"
                    android:contentDescription="Home Fragment Add Patient Icon ImageView"
                    android:layout_width="@dimen/image_add_patient_width"
                    android:layout_height="@dimen/image_add_patient_height"
                    android:layout_centerVertical="true"
                    android:foregroundGravity="center"
                    android:padding="@dimen/image_add_patient_padding"
                    android:src="@drawable/ui2_ic_add_pateint_home"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvAddPatientTitleHomeFragment"
                    android:contentDescription="Home Fragment Add Patient Title TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/image_add_patient_margin_start"
                    android:layout_toEndOf="@+id/ivAddPatientIconHomeFragment"
                    android:text="@string/add_patient"
                    android:textColor="@color/textColorWhite"
                    android:textSize="@dimen/common_headings_home"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ivAddPatientIconHomeFragment"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/ivAddPatientArrowIconHomeFragment"
                    android:contentDescription="Home Fragment Add Patient Arrow Icon ImageView"
                    android:layout_width="@dimen/image_add_patient_next_width"
                    android:layout_height="@dimen/image_add_patient_next_height"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:foregroundGravity="center"
                    android:paddingTop="@dimen/image_add_patient_icon_padding_top"
                    android:paddingEnd="@dimen/image_add_patient_icon_padding_end"
                    android:paddingBottom="@dimen/image_add_patient_icon_padding_bottom"
                    android:src="@drawable/ui2_ic_forward_arrow_white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvPrescHomeFragment"
            android:contentDescription="Home Fragment Prescription CardView"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/common_all_card_start_margin"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginEnd="@dimen/common_all_card_end_margin"
            android:layout_weight="2.75"
            android:backgroundTint="@color/cardTintLightGreen"
            app:cardCornerRadius="@dimen/common_card_corner_radius"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addpatient_cardview">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/common_all_card_top_margin"
                android:background="@color/cardTintLightGreen"
                android:paddingStart="@dimen/common_all_card_start_padding">

                <TextView
                    android:id="@+id/tvPrescTitleHomeFragment"
                    android:contentDescription="Home Fragment Prescription Title TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/prescriptions"
                    android:textSize="@dimen/common_headings_home"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvPrescNumberHomeFragment"
                    android:contentDescription="Home Fragment Prescription Number TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvPrescTitleHomeFragment"
                    android:layout_marginTop="@dimen/common_info_margin_top"
                    android:text="5 out of 12 received"
                    android:textColor="@color/textColorGray"
                    android:textSize="@dimen/common_label_text_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvPrescTitleHomeFragment" />

                <ImageView
                    android:id="@+id/ivPrescArrowIconHomeFragment"
                    android:contentDescription="Home Fragment Prescription Arrow Icon ImageView"
                    android:layout_width="@dimen/image_add_patient_next_width"
                    android:layout_height="@dimen/image_add_patient_next_height"
                    android:layout_below="@+id/tvPrescNumberHomeFragment"
                    android:layout_marginBottom="@dimen/card_prescription_image_margin_bottom"
                    android:paddingTop="@dimen/image_add_patient_icon_padding_top"
                    android:paddingEnd="@dimen/image_add_patient_icon_padding_end"
                    android:paddingBottom="@dimen/image_add_patient_icon_padding_bottom"
                    android:src="@drawable/ui2_ic_forward_arrow_green"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/ivPrescIconHomeFragment"
                    android:contentDescription="Home Fragment Prescription Icon ImageView"
                    android:layout_width="@dimen/card_prescription_image_width"
                    android:layout_height="72dip"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="16dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ui2_image_prescription_green_bg"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <ImageView
                    android:id="@+id/ivPrescIcon1HomeFragment"
                    android:contentDescription="Home Fragment Prescription Icon 1 ImageView"
                    android:layout_width="@dimen/card_prescription_image_width"
                    android:layout_height="@dimen/card_prescription_image_height"
                    android:layout_alignParentEnd="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/ui2_image_prescription_green"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvClosedVisitHomeFragment"
            android:contentDescription="Home Fragment Closed Visit CardView"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginStart="@dimen/common_all_card_start_margin"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginEnd="@dimen/common_all_card_end_margin"
            android:layout_weight="2.75"
            android:backgroundTint="@color/colorAccentCloseVisit"
            app:cardCornerRadius="@dimen/common_card_corner_radius"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_prescription">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/common_all_card_top_margin"
                android:background="@color/colorAccentCloseVisit"
                android:paddingStart="@dimen/common_all_card_start_padding">

                <TextView
                    android:id="@+id/tvCloseVisitTitleHomeFragment"
                    android:contentDescription="Home Fragment Closed Visits Title TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/close_visits"
                    android:textSize="@dimen/common_headings_home"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvClosedVisitNumberHomeFragment"
                    android:contentDescription="Home Fragment Closed Visit Number TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvCloseVisitTitleHomeFragment"
                    android:layout_marginTop="@dimen/common_info_margin_top"
                    android:text="12 unclosed visits"
                    android:textColor="@color/textColorGray"
                    android:textSize="@dimen/common_label_text_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvCloseVisitTitleHomeFragment" />

                <ImageView
                    android:id="@+id/ivCloseVisitArrowIconHomeFragment"
                    android:contentDescription="Home Fragment Close Visit Arrow Icon ImageView"
                    android:layout_width="@dimen/image_add_patient_next_width"
                    android:layout_height="@dimen/image_add_patient_next_height"
                    android:layout_marginBottom="@dimen/card_prescription_image_margin_bottom"
                    android:paddingTop="@dimen/image_add_patient_icon_padding_top"
                    android:paddingEnd="@dimen/image_add_patient_icon_padding_end"
                    android:paddingBottom="@dimen/image_add_patient_icon_padding_bottom"
                    android:src="@drawable/ui2_ic_forward_arrow_white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/ivCloseVisitIcon1HomeFragment"
                    android:contentDescription="Home Fragment Close Visit Icon 1 ImageView"
                    android:layout_width="@dimen/card_prescription_image_width"
                    android:layout_height="@dimen/card_prescription_image_height"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/margin_8"
                    android:src="@drawable/ui2_ic_close_visit"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/closedVisitsCardView">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvAppointmentHomeFragment"
                android:contentDescription="Home Fragment Appointment CardView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/card_appointment_margin_end"
                android:background="@drawable/ui2_card_bg_gray_border"
                app:cardCornerRadius="@dimen/common_card_corner_radius"
                app:cardElevation="@dimen/card_appointment_card_elevation"
                app:cardMaxElevation="8dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/cvFollowUpHomeFragment"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeWidth="10dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:backgroundTint="@color/backgroundWhite"
                    android:padding="@dimen/card_options_padding"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:id="@+id/ivAppointmentIconHomeFragment"
                        android:contentDescription="Home Fragment Appointment Icon ImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/card_options_icons_margin_top"
                        android:src="@drawable/ui2_ic_appointments_icon_home"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvAppointmentTitleHomeFragment"
                        android:contentDescription="Home Fragment Appointment Title TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_8"
                        android:text="@string/appointments"
                        android:textSize="@dimen/common_sub_headings_home"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ivAppointmentIconHomeFragment" />

                    <TextView
                        android:id="@+id/tvAppointmentNumHomeFragment"
                        android:contentDescription="Home Fragment Appointment Number TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/options_sub_heading_margin_top"
                        android:layout_marginBottom="@dimen/common_info_margin_bottom"
                        android:text="4 Upcoming"
                        android:textSize="@dimen/common_label_text_size"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvAppointmentTitleHomeFragment" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvFollowUpHomeFragment"
                android:contentDescription="Home Fragment Follow Up CardView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/card_followup_margin_start"
                android:backgroundTint="@color/backgroundWhite"
                app:cardCornerRadius="@dimen/common_card_corner_radius"
                app:cardElevation="@dimen/card_appointment_card_elevation"
                app:cardMaxElevation="8dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toEndOf="@+id/cvAppointmentHomeFragment"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:backgroundTint="@color/backgroundWhite"
                    android:padding="@dimen/card_options_padding">

                    <ImageView
                        android:id="@+id/ivFollowUpIconHomeFragment"
                        android:contentDescription="Home Fragment Follow Up Icon ImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/card_options_icons_margin_top"
                        android:src="@drawable/ui2_ic_followup_visits_icon_home"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvFollowUpTitleHomeFragment"
                        android:contentDescription="Home Fragment Follow Up Title TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_8"
                        android:text="@string/follow_up_visits"
                        android:textSize="@dimen/common_sub_headings_home"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ivFollowUpIconHomeFragment" />

                    <TextView
                        android:id="@+id/tvFollowUpNumHomeFragment"
                        android:contentDescription="Home Fragment Follow Up Number TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/options_sub_heading_margin_top"
                        android:layout_marginBottom="@dimen/common_info_margin_bottom"
                        android:text="0 Pending"
                        android:textSize="@dimen/common_label_text_size"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvFollowUpTitleHomeFragment" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</RelativeLayout>
