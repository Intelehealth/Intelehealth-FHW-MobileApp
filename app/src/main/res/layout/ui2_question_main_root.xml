<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_50"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:src="@drawable/ui2_ic_ayu_image_blue" />

            <TextView
                android:id="@+id/tvQuestionCountQuestionNode"
                android:contentDescription="Question Node Question Count TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16"
                android:lineSpacingExtra="1sp"
                android:text="1 of 10 questions"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/common_label_text_size"
                android:textStyle="normal" />
        </LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_8"
            android:layout_marginTop="@dimen/margin_8"
            android:src="@drawable/chat_bubble_top" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ui2_chat_bubble_square_round"
            android:orientation="vertical">

            <com.github.ybq.android.spinkit.SpinKitView
                android:id="@+id/skvQuestionNode"
                android:contentDescription="Question Node SpinKitView"
                style="@style/SpinKitView.ThreeBounce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_15"
                android:visibility="visible"
                app:SpinKit_Color="@color/ui2_green" />

            <LinearLayout
                android:id="@+id/llBodyQuestionNode"
                android:contentDescription="Question Node Body LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_15">

                <TextView
                    android:id="@+id/tvQuestionQuestionNode"
                    android:contentDescription="Question Node Question TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lineSpacingExtra="1sp"
                    android:text="Which part of the abdomen do you feel pain?"
                    android:textColor="@color/ui2_black_text_color"
                    android:textSize="@dimen/text_18sp" />

                <TextView
                    android:id="@+id/tvRefDescQuestionNode"
                    android:contentDescription="Question Node Reference Desc TextView"
                    style="@style/label_misc_txt_14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_question"
                    android:lineSpacingExtra="1sp"
                    android:text="@string/references"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/llReferenceContainerQuestionNode"
                    android:contentDescription="Question Node Reference Container LinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_question_desc"
                    android:layout_marginTop="@dimen/margin_16"
                    android:layout_marginBottom="@dimen/margin_16"
                    android:orientation="horizontal"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvQuestionDescQuestionNode"
                        android:contentDescription="Question Node Question Desc TextView"
                        style="@style/label_misc_txt_14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_question"
                        android:lineSpacingExtra="1sp"
                        android:text="@string/select_any_one" />

                    <TextView
                        android:id="@+id/tvKnowMoreQuestionNode"
                        android:contentDescription="Question Node Know More TextView"
                        style="@style/label_misc_txt_14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_question"
                        android:layout_marginStart="@dimen/margin_24"
                        android:drawableEnd="@drawable/info_blue_svg"
                        android:drawablePadding="@dimen/margin_8"
                        android:lineSpacingExtra="1sp"
                        android:text="@string/know_more_txt"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvQuestionNode"
                    android:contentDescription="Question Node RecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_question_desc"
                    android:layout_marginTop="@dimen/margin_16" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvNestedQuestionNode"
                    android:contentDescription="Question Node Nested RecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8" />

                <LinearLayout
                    android:id="@+id/llSingleComponentContainerQuestionNode"
                    android:contentDescription="Question Node Single Component Container LinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8"
                    android:orientation="vertical" />

                <LinearLayout
                    android:id="@+id/llOtherContainerQuestionNode"
                    android:contentDescription="Question Node Other Container LinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8"
                    android:orientation="vertical" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_8"
                    android:gravity="end">

                    <Button
                        android:id="@+id/btnSkipQuestionNode"
                        android:contentDescription="Question Node Skip Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ui2_common_button_bg_submit"
                        android:drawablePadding="8dip"
                        android:paddingHorizontal="@dimen/margin_16"
                        android:text="@string/skip_new"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/common_button_text_size"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/btnSubmitQuestionNode"
                        android:contentDescription="Question Node Submit Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_24"
                        android:background="@drawable/ui2_common_button_bg_submit"
                        android:drawablePadding="8dip"
                        android:paddingHorizontal="@dimen/margin_16"
                        android:text="@string/submit"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/common_button_text_size"
                        android:visibility="gone" />
                </LinearLayout>

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/rlNextQuestionNode"
                android:contentDescription="Question Node Next RelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/colorPrimary1" />

                <Button
                    android:id="@+id/btnNextQuestionNode"
                    android:contentDescription="Question Node Next Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginVertical="@dimen/margin_16"
                    android:layout_marginEnd="@dimen/margin_16"
                    android:background="@drawable/ui2_common_button_bg_submit"
                    android:drawableEnd="@drawable/ic_baseline_navigate_next_24"
                    android:drawablePadding="4dip"
                    android:gravity="center"
                    android:minWidth="100dip"
                    android:paddingHorizontal="@dimen/margin_16"
                    android:text="@string/next"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/common_button_text_size"
                    android:visibility="visible" />

            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>