<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlParentFollowUpScreen"
    android:contentDescription="Follow Up Screen Parent RelativeLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/follow_up_v">

    <RelativeLayout
        android:id="@+id/rlChildFollowUpScreen"
        android:contentDescription="Follow Up Screen Child RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="@dimen/margin_24">

        <ImageButton
            android:id="@+id/ivBackArrowFollowUpScreen"
            android:contentDescription="Follow Up Screen Back Arrow ImageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@drawable/ic_arrow_right" />

        <!-- Label -->
        <TextView
            android:id="@+id/tvTitleFollowUpScreen"
            android:contentDescription="Follow Up Screen Title TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_toEndOf="@+id/ivBackArrowFollowUpScreen"
            android:lineSpacingExtra="1sp"
            android:text="@string/label"
            android:textAppearance="@style/label"
            android:textSize="@dimen/toolbar_text_size"
            android:textStyle="bold"
            android:translationY="-0.28sp" />
        <!-- Frame 100167 -->


        <LinearLayout
            android:id="@+id/llRefreshFilterFollowUpScreen"
            android:contentDescription="Follow Up Screen Refresh Filter LinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ivRefreshFollowUpScreen"
                android:contentDescription="Follow Up Screen Refresh ImageButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/margin_10"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/ic_refreshbtn" />

            <ImageButton
                android:id="@+id/ivFilterFollowUpScreen"
                android:contentDescription="Follow Up Screen Filter ImageButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/ui2_ic_filter"
                android:visibility="gone" />

        </LinearLayout>

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsvFollowUpScreen"
        android:contentDescription="Follow Up Screen NestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlChildFollowUpScreen"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/llCompleteListFollowUpScreen"
            android:contentDescription="Follow Up Screen Complete List LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="@dimen/margin_24"
            android:layout_marginRight="@dimen/margin_24"
            android:orientation="vertical">

            <!-- You can add all acco -->
            <RelativeLayout
                android:id="@+id/rlTodayListFollowUpScreen"
                android:contentDescription="Follow Up Screen Today List RelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvTodayHeadingFollowUpScreen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fu_margin_start"
                    android:contentDescription="Follow Up Screen Today List Title TextView"
                    android:gravity="top"
                    android:lineSpacingExtra="3sp"
                    android:text="@string/you_can_add"
                    android:textAppearance="@style/you_can_add"
                    android:textSize="@dimen/fu_male_textsize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTodayNoDataHeading1FollowUpScreen"
                    android:contentDescription="Follow Up Screen Today No Data Heading TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvTodayHeadingFollowUpScreen"
                    android:gravity="center"
                    android:padding="@dimen/card_padding"
                    android:text="@string/no_follow_up_data"
                    android:textAppearance="@style/caption"
                    android:textColor="@null"
                    android:textSize="@dimen/fu_male_textsize"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvTodayListFollowUpScreen"
                    android:contentDescription="Follow Up Screen Today List RecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvTodayHeadingFollowUpScreen"
                    android:layout_marginTop="@dimen/margin_8"
                    android:nestedScrollingEnabled="false"
                    android:paddingTop="@dimen/card_padding"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="1"
                    tools:listitem="@layout/followup_list_item_1" />
            </RelativeLayout>


            <!--            This week-->
            <RelativeLayout
                android:id="@+id/rlWeekListFollowUpScreen"
                android:contentDescription="Follow Up Screen Week List RelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvThisWeekHeadingFollowUpScreen"
                    android:contentDescription="Follow Up Screen This Week List Title TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:lineSpacingExtra="3sp"
                    android:text="@string/this_week"
                    android:textAppearance="@style/you_can_add"
                    android:textSize="@dimen/fu_male_textsize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvWeekNoDataHeadingFollowUpScreen"
                    android:contentDescription="Follow Up Screen Week No Data Heading TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvThisWeekHeadingFollowUpScreen"
                    android:gravity="center"
                    android:padding="@dimen/card_padding"
                    android:text="@string/no_follow_up_data"
                    android:textAppearance="@style/caption"
                    android:textColor="@null"
                    android:textSize="@dimen/fu_male_textsize"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvWeekListFollowUpScreen"
                    android:contentDescription="Follow Up Screen Week List RecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvThisWeekHeadingFollowUpScreen"
                    android:layout_marginTop="@dimen/margin_8"
                    android:nestedScrollingEnabled="false"
                    android:paddingVertical="@dimen/margin_5"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="2"
                    tools:listitem="@layout/followup_list_item_1" />
            </RelativeLayout>

            <!-- This month -->
            <RelativeLayout
                android:id="@+id/rlMonthListFollowUpScreen"
                android:contentDescription="Follow Up Screen Month List RelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvThisMonthHeadingFollowUpScreen"
                    android:contentDescription="Follow Up Screen This Month List Title TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_margin"
                    android:gravity="top"
                    android:lineSpacingExtra="3sp"
                    android:text="@string/this_month"
                    android:textAppearance="@style/you_can_add"
                    android:textSize="@dimen/fu_male_textsize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvMonthNoDataHeadingFollowUpScreen"
                    android:contentDescription="Follow Up Screen Month No Data Heading TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvThisMonthHeadingFollowUpScreen"
                    android:gravity="center"
                    android:padding="@dimen/card_padding"
                    android:text="@string/no_follow_up_data"
                    android:textAppearance="@style/caption"
                    android:textColor="@null"
                    android:textSize="@dimen/fu_male_textsize"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvMonthListFollowUpScreen"
                    android:contentDescription="Follow Up Screen Month List RecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvThisMonthHeadingFollowUpScreen"
                    android:layout_marginTop="@dimen/margin_8"
                    android:nestedScrollingEnabled="false"
                    android:paddingVertical="@dimen/margin_5"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="4"
                    tools:listitem="@layout/followup_list_item_1" />
            </RelativeLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/tvNoVisitsFollowUpScreen"
        android:contentDescription="Follow Up Screen No Visits TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/follow_up_visits_not_found"
        android:textColor="@color/textColorGray"
        android:textSize="@dimen/text_18sp"
        android:visibility="gone" />
</RelativeLayout>