<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/follow_up_v"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/follow_up_v">

    <!-- Frame 100217 -->
    <RelativeLayout
        android:id="@+id/frame_10021"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="@dimen/margin_24">

        <ImageButton
            android:id="@+id/vector"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@null"

            android:src="@drawable/ic_arrow_right" />

        <!-- Label -->
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_toEndOf="@+id/vector"
            android:lineSpacingExtra="1sp"
            android:text="@string/label"
            android:textAppearance="@style/label"
            android:textSize="@dimen/toolbar_text_size"
            android:textStyle="bold"
            android:translationY="-0.28sp" />
        <!-- Frame 100167 -->


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/refresh"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/margin_10"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/ic_refreshbtn" />

            <ImageButton
                android:id="@+id/filter"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/ui2_ic_filter"
                android:visibility="gone" />

        </LinearLayout>

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedscrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frame_10021"
        android:fillViewport="true">

        <!-- Frame 2608676 -->
        <LinearLayout
            android:id="@+id/frame_26086"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="@dimen/margin_24"
            android:layout_marginRight="@dimen/margin_24"
            android:orientation="vertical">

            <!-- You can add all acco -->
            <RelativeLayout
                android:id="@+id/rl_today"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/you_can_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fu_margin_start"
                    android:gravity="top"
                    android:lineSpacingExtra="3sp"
                    android:text="@string/you_can_add"
                    android:textAppearance="@style/you_can_add"
                    android:textSize="@dimen/fu_male_textsize"
                    android:textStyle="bold" />

                <!-- Frame 100314 -->
                <TextView
                    android:id="@+id/today_nodata"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/you_can_add"
                    android:gravity="center"
                    android:padding="@dimen/card_padding"
                    android:text="No follow up data"
                    android:textAppearance="@style/caption"
                    android:textColor="@null"
                    android:textSize="@dimen/fu_male_textsize"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_today"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/you_can_add"
                    android:layout_marginTop="@dimen/margin_8"
                    android:nestedScrollingEnabled="false"
                    android:paddingTop="@dimen/card_padding"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="1"
                    tools:listitem="@layout/followup_list_item_1" />
            </RelativeLayout>


            <!--            This week-->
            <RelativeLayout
                android:id="@+id/rl_week"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/this_week"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:lineSpacingExtra="3sp"
                    android:text="@string/this_week"
                    android:textAppearance="@style/you_can_add"
                    android:textSize="@dimen/fu_male_textsize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/week_nodata"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/this_week"
                    android:gravity="center"
                    android:padding="@dimen/card_padding"
                    android:text="No follow up data"
                    android:textAppearance="@style/caption"
                    android:textColor="@null"
                    android:textSize="@dimen/fu_male_textsize"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_thisweek"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/this_week"
                    android:layout_marginTop="@dimen/margin_8"
                    android:nestedScrollingEnabled="false"
                    android:paddingVertical="@dimen/margin_5"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="2"
                    tools:listitem="@layout/followup_list_item_1" />
            </RelativeLayout>

            <!-- This month -->
            <RelativeLayout
                android:id="@+id/rl_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/this_month"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_margin"
                    android:gravity="top"
                    android:lineSpacingExtra="3sp"
                    android:text="@string/this_month"
                    android:textAppearance="@style/you_can_add"
                    android:textSize="@dimen/fu_male_textsize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/month_nodata"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/this_month"
                    android:gravity="center"
                    android:padding="@dimen/card_padding"
                    android:text="No follow up data"
                    android:textAppearance="@style/caption"
                    android:textColor="@null"
                    android:textSize="@dimen/fu_male_textsize"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_thismonth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/this_month"
                    android:layout_marginTop="@dimen/margin_8"
                    android:nestedScrollingEnabled="false"
                    android:paddingVertical="@dimen/margin_5"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="4"
                    tools:listitem="@layout/followup_list_item_1" />
            </RelativeLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/empty_view_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/follow_up_visits_not_found"
        android:textColor="@color/textColorGray"
        android:textSize="@dimen/text_18sp"
        android:visibility="gone" />
</RelativeLayout>