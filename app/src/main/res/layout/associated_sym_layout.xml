<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LL_associated"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/symp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.2"
            android:text="fever"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/chip_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".4"
            android:background="@drawable/ui2_chip_type_1_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/generic_yes"
            android:textColor="@color/ui2_black_text_color"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/chip_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5sp"
            android:layout_weight=".4"
            android:background="@drawable/ui2_chip_type_1_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/generic_no"
            android:textColor="@color/ui2_black_text_color"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>