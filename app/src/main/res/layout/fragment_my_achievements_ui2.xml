<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlParentMyAchievements"
    android:contentDescription="My Achievements Parent RelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rlToolbarMyAchievements"
        android:contentDescription="My Achievements Toolbar RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/achievements_badge_margin_start"
        android:layout_marginTop="@dimen/image_home_toolbar_icon_margintop"
        android:layout_marginEnd="@dimen/achievements_badge_margin_start"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvTitleMyAchievements"
            android:contentDescription="My Achievements Title TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ivBackArrowCommonToolbar"
            android:text="@string/title"
            android:textColor="@color/textColorBlack"
            android:textSize="@dimen/common_header_text_size"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/ivRefreshMyAchievements"
            android:contentDescription="My Achievements Refresh ImageView"
            android:layout_width="@dimen/image_home_toolbar_icon_width"
            android:layout_height="@dimen/image_home_toolbar_icon_height"
            android:layout_alignParentEnd="true"
            android:layout_toStartOf="@+id/imageview_notifications_common"
            android:foregroundGravity="center_horizontal"
            android:tooltipText="Tooltip"
            android:visibility="visible" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/ivBadgeMyAchievements"
        android:contentDescription="My Achievements Badge Icon ImageView"
        android:layout_width="@dimen/achievements_badge_width"
        android:layout_height="@dimen/achievements_badge_height"
        android:layout_below="@+id/rlToolbarMyAchievements"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="@dimen/achievements_badge_margin_start"
        android:layout_marginTop="@dimen/achievements_badge_margin_top"
        android:src="@drawable/ui2_ic_achievements_badge" />

    <TextView
        android:id="@+id/tvUserLevelMyAchievements"
        android:contentDescription="My Achievements 'Level' TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlToolbarMyAchievements"
        android:layout_marginStart="@dimen/achievements_userlevel_margin_start"
        android:layout_marginTop="@dimen/achievements_userlevel_margin_top"
        android:layout_toEndOf="@+id/ivBadgeMyAchievements"
        android:text="@string/level"
        android:textColor="@color/textColorBlack"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvUserPointsMyAchievements"
        android:contentDescription="My Achievements 'User Point' TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUserLevelMyAchievements"
        android:layout_marginStart="@dimen/achievements_user_score_margin_start"
        android:layout_marginTop="@dimen/achievements_user_score_margin_top"
        android:layout_toEndOf="@+id/ivBadgeMyAchievements"
        android:lineSpacingExtra="@dimen/achievements_user_score_line_Spacing"
        android:textColor="@color/textColorGray"
        android:textSize="@dimen/common_info_text_size" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tlMyAchievements"
        android:contentDescription="My Achievements TabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUserPointsMyAchievements"
        android:layout_marginStart="@dimen/achievements_tab_margin_start"
        android:layout_marginTop="@dimen/achievements_tab_margin_top"
        android:layout_marginEnd="@dimen/achievements_tab_margin_end"
        android:background="@drawable/ui2_bg_tablayout_achievements"
        android:gravity="center"
        android:textAlignment="center"
        app:tabGravity="fill"
        app:tabMaxWidth="0dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/textColorBlack"
        app:tabTextAppearance="@style/CustomTabText" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vpMyAchievements"
        android:contentDescription="My Achievements View Pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tlMyAchievements"
        android:layout_alignBottom="@id/app_bar"
        android:layout_marginBottom="45dp"
        android:visibility="visible"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />


</RelativeLayout>