<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/svParentOverallAchievements"
    android:contentDescription="Overall Achievements Parent ScrollView"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/llParentOverallAchievements"
        android:contentDescription="Overall Achievements Parent LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_parent_achi_margin_top"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llChild1OverallAchievements"
            android:contentDescription="Overall Achievements Child 1 LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/card1_common_achieve_margin_start"
            android:layout_marginEnd="@dimen/card1_common_achieve_margin_end"
            android:layout_marginBottom="@dimen/card1_common_achieve_margin_bottom"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/llPatientAddedOverallAchievements"
                android:contentDescription="Overall Achievements Patient Added LinearLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/card1_achieve_margin_end"
                android:layout_weight="1"
                android:background="@drawable/ui2_patients_card_bg_1"
                android:orientation="vertical"
                android:padding="@dimen/card_common_achieve_padding">

                <ImageView
                    android:id="@+id/ivPatientAddedIconOverallAchievements"
                    android:contentDescription="Overall Achievements Patient Added Icon ImageView"
                    android:layout_width="@dimen/card_achieve_icon_width"
                    android:layout_height="@dimen/card_achieve_icon_height"
                    android:src="@drawable/ui2_icon_user_add" />

                <TextView
                    android:id="@+id/tvPatientAddedDescOverallAchievements"
                    android:contentDescription="Overall Achievements Patient Added Description TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/card_achieve_title_margin_top"
                    android:text="@string/patients_added"
                    android:textSize="@dimen/date_frag_layout_text_size" />

                <TextView
                    android:id="@+id/tvPatientAddedValueOverallAchievements"
                    android:contentDescription="Overall Achievements Patient Added Value TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/card_achieve_value_margin_top"
                    android:gravity="top"
                    android:lineHeight="@dimen/card_achieve_value_line_height"
                    android:lineSpacingExtra="@dimen/card_achieve_value_line_spacing"
                    android:textColor="@color/textColorBlack"
                    android:textSize="@dimen/card_achieve_value_textsize"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llVisitCompletedOverallAchievements"
                android:contentDescription="Overall Achievements Visit Completed LinearLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/card1_achieve_margin_start"
                android:layout_weight="1"
                android:background="@drawable/ui2_patients_card_bg_blue"
                android:orientation="vertical"
                android:padding="@dimen/card_common_achieve_padding">

                <ImageView
                    android:id="@+id/ivVisitCompletedIconOverallAchievements"
                    android:contentDescription="Overall Achievements Visit Completed Icon ImageView"
                    android:layout_width="@dimen/card_achieve_icon_width"
                    android:layout_height="@dimen/card_achieve_icon_height"
                    android:src="@drawable/ui2_ic_icon_visits_completed" />

                <TextView
                    android:id="@+id/tvVisitCompletedDescOverallAchievements"
                    android:contentDescription="Overall Achievements Visit Completed Description TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/card_achieve_title_margin_top"
                    android:text="@string/visits_completed_by_you"
                    android:textSize="@dimen/date_frag_layout_text_size" />

                <TextView
                    android:id="@+id/tvVisitCompletedValueOverallAchievements"
                    android:contentDescription="Overall Achievements Visit Completed Value TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/card_achieve_value_margin_top"
                    android:gravity="top"
                    android:lineHeight="@dimen/card_achieve_value_line_height"
                    android:lineSpacingExtra="@dimen/card_achieve_value_line_spacing"
                    android:textColor="@color/textColorBlack"
                    android:textSize="@dimen/card_achieve_value_textsize"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llChild2OverallAchievements"
            android:contentDescription="Overall Achievements Child 2 LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/card2_common_achieve_margin_start"
            android:layout_marginEnd="@dimen/card2_common_achieve_margin_end"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/llSatisfactionScoreOverallAchievements"
                android:contentDescription="Overall Achievements Satisfaction Score LinearLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/card1_achieve_margin_end"
                android:layout_weight="1"
                android:background="@drawable/ui2_patients_card_bg_green"
                android:orientation="vertical"
                android:padding="@dimen/card_common_achieve_padding">

                <ImageView
                    android:id="@+id/ivSatisfactionScoreIconOverallAchievements"
                    android:contentDescription="Overall Achievements Satisfaction Score Icon ImageView"
                    android:layout_width="@dimen/card_achieve_icon_width"
                    android:layout_height="@dimen/card_achieve_icon_height"
                    android:src="@drawable/ui2_ic_star_score" />

                <TextView
                    android:id="@+id/tvSatisfactionScoreDescOverallAchievements"
                    android:contentDescription="Overall Achievements Satisfaction Score Description TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/card_achieve_title_margin_top"
                    android:text="@string/your_patient_score"
                    android:textSize="@dimen/date_frag_layout_text_size" />

                <TextView
                    android:id="@+id/tvSatisfactionScoreValueOverallAchievements"
                    android:contentDescription="Overall Achievements Satisfaction Score Value TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/card_achieve_value_margin_top"
                    android:gravity="top"
                    android:lineHeight="@dimen/card_achieve_value_line_height"
                    android:lineSpacingExtra="@dimen/card_achieve_value_line_spacing"
                    android:textColor="@color/textColorBlack"
                    android:textSize="@dimen/card_achieve_value_textsize"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/llTimeSpentOverallAchievements"
                android:contentDescription="Overall Achievements Time Spent LinearLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/card1_achieve_margin_start"
                android:layout_weight="1"
                android:background="@drawable/ui2_patients_card_bg_1"
                android:orientation="vertical"
                android:padding="@dimen/card_common_achieve_padding">

                <ImageView
                    android:id="@+id/ivTimeSpentIconOverallAchievements"
                    android:contentDescription="Overall Achievements Time Spent Icon ImageView"
                    android:layout_width="@dimen/card_achieve_icon_width"
                    android:layout_height="@dimen/card_achieve_icon_height"
                    android:src="@drawable/ui2_ic_time_spent" />

                <TextView
                    android:id="@+id/tvTimeSpentDescOverallAchievements"
                    android:contentDescription="Overall Achievements Time Spent Desc TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/card_achieve_title_margin_top"
                    android:text="@string/daily_avg_time_spent"
                    android:textSize="@dimen/date_frag_layout_text_size" />

                <TextView
                    android:id="@+id/tvTimeSpentValueOverallAchievements"
                    android:contentDescription="Overall Achievements Time Spent Value TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/card_achieve_value_margin_top"
                    android:lineHeight="@dimen/card_achieve_value_line_height"
                    android:lineSpacingExtra="@dimen/card_achieve_value_line_spacing"
                    android:textColor="@color/textColorBlack"
                    android:textSize="@dimen/card_achieve_value_textsize"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>