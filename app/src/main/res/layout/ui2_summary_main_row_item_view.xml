<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_8"
    android:orientation="vertical">

    <View
        android:id="@+id/viewMainRowItem"
        android:contentDescription="Main Row Item View to adjust height"
        android:layout_width="match_parent"
        android:layout_height="24dip" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_4">


        <TextView
            android:id="@+id/tvComplaintLabelMainRowItem"
            android:contentDescription="Main Row Item Complaint Label TextView"
            style="@style/label_misc_txt_14sp_dark_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:lineSpacingExtra="1sp"
            android:text="Abdominal pain" />

        <TextView
            android:id="@+id/tvComplaintEditMainRowItem"
            android:contentDescription="Main Row Item Complaint Edit TextView"
            style="@style/label_misc_txt_12sp_primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ui2_common_gray_round_stroke_bg"
            android:drawableStart="@drawable/ui2_ic_edit"
            android:drawablePadding="4dip"
            android:gravity="center"
            android:lineSpacingExtra="1sp"
            android:padding="@dimen/padding_5"
            android:text="@string/change" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMainRowItem"
        android:contentDescription="Main Row Item RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/ui2_summary_qa_row_item_view" />

</LinearLayout>
