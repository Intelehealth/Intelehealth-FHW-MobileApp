<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.searchPatientActivity.SearchPatientActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="@string/toolbar_search_patient" />

    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_bar_layout"
        app:tabMode="scrollable">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_anemia_screening"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab_anemia_screening" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_anemia_follow_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab_anemia_follow_up" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_diabetes_screening"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab_diabetes_screening" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_diabetes_follow_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab_diabetes_follow_up" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_hypertension_screening"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab_hypertension_screening" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_hypertension_follow_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab_hypertension_follow_up" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_general"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab_general" />

    </com.google.android.material.tabs.TabLayout>

</androidx.constraintlayout.widget.ConstraintLayout>