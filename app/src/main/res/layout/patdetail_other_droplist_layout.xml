<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/cvAddressDetails"
    android:id="@+id/cvOtherDetails"
    android:contentDescription="Patient Details Screen Other Details CardView"
    android:layout_marginStart="24dp"
    android:layout_marginTop="@dimen/margin_20"
    android:layout_marginEnd="24dp"
    app:cardCornerRadius="@dimen/margin_8"
    app:cardElevation="@dimen/margin_5">

    <RelativeLayout
        android:id="@+id/rlParentOtherDetails"
        android:contentDescription="Patient Details Screen Other Details Parent RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_12"
        android:layout_marginTop="@dimen/margin_12"
        android:layout_marginEnd="@dimen/margin_12"
        android:layout_marginBottom="@dimen/margin_16">


        <!--Personal Header-->
        <RelativeLayout
            android:id="@+id/rlHeaderOtherDetails"
            android:contentDescription="Patient Details Screen Other Details Header RelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivIconHeaderOtherDetails"
                android:contentDescription="Patient Details Screen Other Details Header Icon ImageView"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/other_icon_unselected" />

            <TextView
                android:id="@+id/tvTitleHeaderOtherDetails"
                android:contentDescription="Patient Details Screen Other Details Header Title TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_8"
                android:layout_toEndOf="@+id/ivIconHeaderOtherDetails"
                android:gravity="center_vertical"
                android:lineSpacingExtra="3sp"
                android:text="@string/other_details"
                android:textAppearance="@style/patdetail_header1" />

            <ImageView
                android:id="@+id/ivCollapseCardOtherDetails"
                android:contentDescription="Patient Details Screen Other Details Collapse Card Arrow ImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/chevron_up" />

        </RelativeLayout>

        <View
            android:id="@+id/viewDividerOtherDetails"
            android:contentDescription="Patient Details Screen Other Details Divider View"
            android:layout_height="1dp"
            android:layout_below="@+id/rlHeaderOtherDetails"
            android:layout_marginTop="@dimen/margin_12"
            android:layout_marginBottom="@dimen/fu_card_margin_updown"
            android:background="@color/notifi_divider_color" />

        <!--Personal Sub-Child-->
        <RelativeLayout
            android:id="@+id/rlDetailsParentOtherDetails"
            android:contentDescription="Patient Details Screen Other Details 'Details' Parent RelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewDividerOtherDetails">

            <TextView
                android:id="@+id/tvDetailsTitleOtherDetails"
                android:contentDescription="Patient Details Screen Other Details 'Details' Title TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="-3sp"
                android:text="@string/details"
                android:textAppearance="@style/patdetail_header1"
                android:textColor="@null"
                android:textSize="@null" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_change_patdetail"
                android:layout_alignParentEnd="true"
                android:paddingHorizontal="4dp"
                android:id="@+id/llEditOtherDetails"
                android:contentDescription="Patient Details Screen Other Details Edit LinearLayout">

                <ImageView
                    android:id="@+id/ivEditIconOtherDetails"
                    android:contentDescription="Patient Details Screen Other Details Edit Icon ImageView"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/edit"/>

                <TextView
                    android:id="@+id/tvChangeTitleOtherDetails"
                    android:contentDescription="Patient Details Screen Other Details Change Title TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/change"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/lato_bold"
                    android:textColor="#2E1E91"/>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlDetailsChildOtherDetails"
            android:contentDescription="Patient Details Screen Other Details 'Details' Child RelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlDetailsParentOtherDetails"
            android:layout_marginTop="@dimen/margin_8">

            <TableLayout
                android:id="@+id/tlDetailsOtherDetails"
                android:contentDescription="Patient Details Screen Other Details 'Details' TableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shrinkColumns="1">

                <TableRow
                    android:id="@+id/trNationalIDOtherDetails"
                    android:contentDescription="Patient Details Screen Other Details 'National ID' TableRow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <TextView
                        android:id="@+id/tvNationalIDOtherDetails"
                        android:contentDescription="Patient Details Screen Other Details 'National ID' TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="@dimen/margin_5"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/bullet_gray"
                        android:drawablePadding="@dimen/margin_5"
                        android:text="@string/national_ID_other_details"
                        android:textAppearance="@style/caption"
                        android:textColor="@color/hint_text_color"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvNationalIDValueOtherDetails"
                        android:contentDescription="Patient Details Screen Other Details 'National ID' Value TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/not_provided"
                        android:textAppearance="@style/caption"
                        android:textColor="@color/textview_color"
                        android:textSize="14sp" />
                </TableRow>

                <TableRow
                    android:id="@+id/trRelationOtherDetails"
                    android:contentDescription="Patient Details Screen Other Details 'Relation' TableRow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:layout_weight="2">

                    <TextView
                        android:id="@+id/tvRelationOtherDetails"
                        android:contentDescription="Patient Details Screen Other Details 'Relation' TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="@dimen/margin_5"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/bullet_gray"
                        android:text="@string/son_daughter_wife_of"
                        android:drawablePadding="5dp"
                        android:textAppearance="@style/caption"
                        android:textColor="@color/hint_text_color"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvRelationValueOtherDetails"
                        android:contentDescription="Patient Details Screen Other Details 'Relation' Value TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/not_provided"
                        android:textAppearance="@style/caption"
                        android:textColor="@color/textview_color"
                        android:textSize="14sp" />
                </TableRow>

                <!--Gender-->
                <TableRow
                    android:id="@+id/trOccupationOtherDetails"
                    android:contentDescription="Patient Details Screen Other Details 'Occupation' TableRow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_4"
                    android:layout_weight="2">

                    <TextView
                        android:id="@+id/tvOccupationOtherDetails"
                        android:contentDescription="Patient Details Screen Other Details 'Occupation' TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="@dimen/margin_5"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/bullet_gray"
                        android:drawablePadding="@dimen/margin_5"
                        android:text="@string/occupation"
                        android:textAppearance="@style/caption"
                        android:textColor="@color/hint_text_color"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvOccupationValueOtherDetails"
                        android:contentDescription="Patient Details Screen Other Details 'Occupation' Value TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Diabetes - 20 May 2021 | Current medication - Not taking any | Last measured blood sugar and HbA1C - Not known"
                        android:textAppearance="@style/caption"
                        android:textColor="@color/textview_color"
                        android:textSize="14sp" />
                </TableRow>

                <!--Date of birth-->
                <TableRow
                    android:id="@+id/trCasteOtherDetails"
                    android:contentDescription="Patient Details Screen Other Details 'Caste' TableRow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_4"
                    android:layout_weight="2">

                    <TextView
                        android:id="@+id/tvCasteOtherDetails"
                        android:contentDescription="Patient Details Screen Other Details 'Caste' TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="@dimen/margin_5"
                        android:drawablePadding="@dimen/margin_5"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/bullet_gray"
                        android:text="@string/social_category"
                        android:textAppearance="@style/caption"
                        android:textColor="@color/hint_text_color"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvCasteValueOtherDetails"
                        android:contentDescription="Patient Details Screen Other Details 'Caste' Value TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/not_provided"
                        android:textAppearance="@style/caption"
                        android:textColor="@color/textview_color"
                        android:textSize="14sp" />
                </TableRow>

                <!--Age-->
                <TableRow
                    android:id="@+id/trEducationOtherDetails"
                    android:contentDescription="Patient Details Screen Other Details 'Education' TableRow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_4"
                    android:layout_weight="2">

                    <TextView
                        android:id="@+id/tvEducationOtherDetails"
                        android:contentDescription="Patient Details Screen Other Details 'Education' TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="@dimen/margin_5"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/bullet_gray"
                        android:drawablePadding="@dimen/margin_5"
                        android:text="@string/education"
                        android:textAppearance="@style/caption"
                        android:textColor="@color/hint_text_color"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvEducationValueOtherDetails"
                        android:contentDescription="Patient Details Screen Other Details 'Education' Value TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Graduation"
                        android:textAppearance="@style/caption"
                        android:textColor="@color/textview_color"
                        android:textSize="14sp" />
                </TableRow>

                <!--Phone number-->
                <TableRow
                    android:id="@+id/trEconomicOtherDetails"
                    android:contentDescription="Patient Details Screen Other Details 'Economic' TableRow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_4"
                    android:layout_weight="2">

                    <TextView
                        android:id="@+id/tvEconomicOtherDetails"
                        android:contentDescription="Patient Details Screen Other Details 'Economic' TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="@dimen/margin_5"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/bullet_gray"
                        android:drawablePadding="@dimen/margin_5"
                        android:text="@string/economic_category"
                        android:textAppearance="@style/caption"
                        android:textColor="@color/hint_text_color"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvEconomicValueOtherDetails"
                        android:contentDescription="Patient Details Screen Other Details 'Economic' Value TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="APL"
                        android:textAppearance="@style/caption"
                        android:textColor="@color/textview_color"
                        android:textSize="14sp" />
                </TableRow>

            </TableLayout>

        </RelativeLayout>


    </RelativeLayout>
</androidx.cardview.widget.CardView>
