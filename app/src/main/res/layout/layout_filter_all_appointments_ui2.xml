<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvParentAllAppFilter"
    android:contentDescription="All Appointment Filter Parent CardView"
    android:layout_gravity="end"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="@dimen/margin_10"
    android:layout_marginStart="@dimen/margin_10"
    android:layout_marginBottom="@dimen/margin_10"
    android:layout_marginEnd="@dimen/margin_30"
    app:cardElevation="5dp">

        <RadioGroup
            android:id="@+id/rgAllAppFilter"
            android:contentDescription="All Appointment Filter RadioGroup"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/margin_12"
            android:layout_marginEnd="@dimen/margin_12"
            android:layout_marginVertical="@dimen/margin_15"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rbUpcomingAllAppFilter"
                android:contentDescription="All Appointment Filter Upcoming RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/radio_gender_margin_end"
                android:layout_marginBottom="@dimen/margin_12"
                android:paddingStart="10dp"
                android:button="@drawable/ui2_ic_circle"
                android:lineSpacingExtra="@dimen/profile_text_line_spacing"
                android:padding="@dimen/radio_gender_padding"
                android:checked="false"
                android:paddingEnd="@dimen/radio_gender_padding_end"
                android:text="@string/upcoming_appointments"
                android:textColor="@color/textColorBlack"
                android:textSize="@dimen/common_info_text_size" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/notifi_divider_color" />

            <RadioButton
                android:id="@+id/rbCancelledAllAppFilter"
                android:contentDescription="All Appointment Filter Cancelled RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/radio_gender_margin_end"
                android:checked="false"
                android:layout_marginTop="@dimen/margin_12"
                android:layout_marginBottom="@dimen/margin_12"
                android:button="@drawable/ui2_ic_circle"
                android:lineSpacingExtra="@dimen/profile_text_line_spacing"
                android:paddingStart="12dp"
                android:padding="@dimen/radio_gender_padding"
                android:paddingEnd="@dimen/radio_gender_padding_end"
                android:text="@string/cancelled_appointments"
                android:textColor="@color/textColorBlack"
                android:textSize="@dimen/common_info_text_size" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/notifi_divider_color" />

            <RadioButton
                android:id="@+id/rbCompletedAllAppFilter"
                android:contentDescription="All Appointment Filter Completed RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/radio_gender_margin_end"
                android:checked="false"
                android:button="@drawable/ui2_ic_circle"
                android:lineSpacingExtra="@dimen/profile_text_line_spacing"
                android:paddingStart="12dp"
                android:layout_marginTop="@dimen/margin_12"
                android:padding="@dimen/radio_gender_padding"
                android:paddingEnd="@dimen/radio_gender_padding_end"
                android:text="@string/completed_appointments"
                android:textColor="@color/textColorBlack"
                android:textSize="@dimen/common_info_text_size" />
        </RadioGroup>

</androidx.cardview.widget.CardView>