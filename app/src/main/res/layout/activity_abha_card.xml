<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".abdm.activity.AbhaCardActivity">

    <include
        android:id="@+id/includeLayout"
        layout="@layout/layout_twobuttonsbottom" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/includeLayout"
        android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--toolbar-->
        <LinearLayout
            android:id="@+id/ll_action_bar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_marginStart="@dimen/back_arrow_margin_start"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back_arrow"
                android:layout_width="@dimen/back_arrow_width"
                android:layout_height="@dimen/back_arrow_height"
                android:src="@drawable/ui2_ic_arrow_back_new" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/title_margin_start"
                android:text="@string/abha_card"
                android:textColor="@color/textColorBlack"
                android:textSize="@dimen/setup_privacy_screen_info"
                android:textStyle="bold" />
        </LinearLayout>
        <!--toolbar end-->


        <ImageView
            android:id="@+id/ivAbhaCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="center"
            android:layout_below="@id/ll_action_bar"
            android:layout_marginHorizontal="@dimen/back_arrow_margin_start"
            android:layout_marginVertical="@dimen/back_arrow_margin_start"
            tools:src="@drawable/addpatient_icon" />

    </RelativeLayout>
    </ScrollView>
</RelativeLayout>