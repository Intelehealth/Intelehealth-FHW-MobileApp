<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_20"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <ImageView
            android:id="@+id/ivPrevArrowCustomCVDialog"
            android:contentDescription="Custom CalendarView Dialog Prev Arrow ImageView"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:layout_weight="0.3"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ui2_ic_calendar_previous"
            app:tint="@color/colorPrimary" />

        <Spinner
            android:id="@+id/spinnerMonthCustomCVDialog"
            android:contentDescription="Custom CalendarView Dialog Month Spinner"
            style="@style/CalendarSpinnerTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/ivPrevArrowCustomCVDialog"
            android:layout_weight="1.7"
            android:dropDownVerticalOffset="56dp"
            android:gravity="center_vertical"
            android:paddingStart="-10dp"
            android:paddingTop="@dimen/margin_10"
            android:paddingEnd="@dimen/margin_16dp"
            android:paddingBottom="@dimen/margin_10"
            android:spinnerMode="dropdown"
            android:textAlignment="viewStart"
            android:textSize="@dimen/edittext_textsize_16sp" />

        <Spinner
            android:id="@+id/spinnerYearCustomCVDialog"
            android:contentDescription="Custom CalendarView Dialog Year Spinner"
            style="@style/CalendarSpinnerTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-10dp"
            android:layout_toStartOf="@+id/iv_next_month2"
            android:layout_toEndOf="@+id/spinnerMonthCustomCVDialog"
            android:layout_weight="1.7"
            android:dropDownVerticalOffset="56dp"
            android:gravity="center_vertical"
            android:paddingStart="-10dp"
            android:paddingTop="@dimen/margin_10"
            android:paddingEnd="@dimen/margin_16dp"
            android:paddingBottom="@dimen/margin_10"
            android:spinnerMode="dropdown"
            android:textAlignment="center"
            android:textSize="@dimen/edittext_textsize_16sp" />

        <ImageView
            android:id="@+id/ivNextArrowCustomCVDialog"
            android:contentDescription="Custom CalendarView Dialog Next Arrow ImageView"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:layout_weight="0.3"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ui2_ic_calendar_next"
            app:tint="@color/colorPrimary" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="7">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:lineHeight="24dp"
            android:text="@string/mo"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:lineHeight="24dp"
            android:text="@string/tu"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:lineHeight="24dp"
            android:text="@string/we"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:lineHeight="24dp"
            android:text="@string/th"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:lineHeight="24dp"
            android:text="@string/fr"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:lineHeight="24dp"
            android:text="@string/sa"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:lineHeight="24dp"
            android:text="@string/su"
            android:textSize="13sp"
            android:textStyle="bold" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCustomCVDialog"
        android:contentDescription="Custom CalendarView Dialog RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        tools:itemCount="7"
        tools:listitem="@layout/layout_item_calendarview_ui2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btnCancelCustomCVDialog"
            android:contentDescription="Custom CalendarView Dialog Cancel Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_privacy_notice_link"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="@dimen/button_setup1_margin_bottom"
            android:layout_weight="1"
            android:background="@drawable/ui2_cal_view_white_button"
            android:paddingStart="@dimen/common_button_padding_left"
            android:paddingTop="@dimen/common_button_padding_top"
            android:paddingEnd="@dimen/common_button_padding_right"
            android:paddingBottom="@dimen/common_button_padding_bottom"
            android:text="@string/cancel"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/common_button_text_size" />

        <Button
            android:id="@+id/btnOkayCustomCVDialog"
            android:contentDescription="Custom CalendarView Dialog Okay Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_privacy_notice_link"
            android:layout_marginBottom="@dimen/button_setup1_margin_bottom"
            android:layout_weight="1"
            android:background="@drawable/ui2_common_primary_bg"
            android:paddingStart="@dimen/common_button_padding_left"
            android:paddingTop="@dimen/common_button_padding_top"
            android:paddingEnd="@dimen/common_button_padding_right"
            android:paddingBottom="@dimen/common_button_padding_bottom"
            android:text="@string/okay"
            android:textSize="@dimen/common_button_text_size" />

    </LinearLayout>
</LinearLayout>