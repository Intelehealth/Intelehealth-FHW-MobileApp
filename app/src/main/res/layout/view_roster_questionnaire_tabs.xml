<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/std_16dp"
        android:paddingHorizontal="@dimen/std_48dp"
        android:paddingVertical="@dimen/std_16dp"
        app:layout_collapseMode="parallax">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvIndicatorGeneralRoster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/std_8dp"
            android:gravity="center"
            android:text="@string/general_roster"
            android:textAppearance="@style/personal_txtview"
            app:drawableTopCompat="@drawable/general_roster_icon_unselected"
            app:layout_constraintEnd_toStartOf="@id/line_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/line_1"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_marginBottom="@dimen/std_24dp"
            android:contentDescription="@string/general_to_pregnancy_roster"
            android:src="@drawable/line_11"
            app:layout_constraintBottom_toBottomOf="@id/tvIndicatorGeneralRoster"
            app:layout_constraintEnd_toStartOf="@id/tvIndicatorPregnancyRoster"
            app:layout_constraintStart_toEndOf="@id/tvIndicatorGeneralRoster"
            app:layout_constraintTop_toTopOf="@id/tvIndicatorGeneralRoster" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvIndicatorPregnancyRoster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/std_8dp"
            android:gravity="center"
            android:text="@string/pregnancy_roster"
            android:textAppearance="@style/personal_txtview"
            app:drawableTopCompat="@drawable/pregnancy_roster_icon_unselected"
            app:layout_constraintEnd_toStartOf="@id/line_2"
            app:layout_constraintStart_toEndOf="@id/line_1"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/line_2"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_marginBottom="@dimen/std_24dp"
            android:contentDescription="@string/pregnancy_to_health_service_roster"
            android:src="@drawable/line_11"
            app:layout_constraintBottom_toBottomOf="@id/tvIndicatorGeneralRoster"
            app:layout_constraintEnd_toStartOf="@id/tvIndicatorHealthService"
            app:layout_constraintStart_toEndOf="@id/tvIndicatorPregnancyRoster"
            app:layout_constraintTop_toTopOf="@id/tvIndicatorGeneralRoster" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvIndicatorHealthService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/std_8dp"
            android:gravity="center"
            android:text="@string/health_service_roster"
            android:textAppearance="@style/personal_txtview"
            app:drawableTopCompat="@drawable/health_service_roster_icon_unselected"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/line_2"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>