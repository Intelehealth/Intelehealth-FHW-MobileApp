<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llParentOtpVerification"
    android:contentDescription="OTP Verification Parent LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context=".activities.forgotPasswordNew.ForgotPasswordActivity_New">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivBackArrowOtpVerification"
            android:contentDescription="OTP Verification Back Arrow ImageView"
            android:layout_width="@dimen/back_arrow_demo1_width"
            android:layout_height="@dimen/back_arrow_demo1_width"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/back_arrow_forgot_margin_start"
            android:layout_marginTop="@dimen/back_arrow_demo1_width"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <LinearLayout
            android:id="@+id/llHelpOtpVerification"
            android:contentDescription="OTP Verification Help LinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/back_arrow_demo1_width"
            android:layout_marginEnd="@dimen/tv_help_on_otp_margin_end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvHelpOtpVerification"
                android:contentDescription="OTP Verification Help TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/otpVerificationHelpImageView"
                android:drawableTint="@color/iconTintWhite"
                android:text="@string/help"
                android:textColor="@color/textColorWhite"
                android:textSize="@dimen/common_hint_text_size" />

            <ImageView
                android:id="@+id/ivHelpOtpVerification"
                android:contentDescription="OTP Verification Help ImageView"
                android:layout_width="@dimen/back_arrow_demo1_width"
                android:layout_height="@dimen/back_arrow_demo1_width"
                android:layout_marginStart="@dimen/iv_help_info_margin_start"
                android:src="@drawable/info_svg"
                android:tint="@color/white" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvForgotPasswordTitleOtpVerification"
            android:contentDescription="OTP Verification Forgot Password Title TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivBackArrowOtpVerification"
            android:layout_marginTop="@dimen/forgot_password_top_margin"
            android:gravity="center_horizontal"
            android:text="@string/forgot_password"
            android:textColor="@color/textColorWhite"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvForgotPasswordSubtitleOtpVerification"
            android:contentDescription="OTP Verification Subtitle TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvForgotPasswordTitleOtpVerification"
            android:layout_marginTop="@dimen/margin_10"
            android:gravity="center_horizontal"
            android:text="@string/forgot_password_instruction"
            android:textColor="@color/textColorWhite"
            android:textSize="@dimen/common_hint_text_size" />

        <ImageView
            android:layout_width="@dimen/image_intelehealth_login_width"
            android:layout_height="@dimen/image_intelehealth_login_height"
            android:layout_below="@+id/tvForgotPasswordSubtitleOtpVerification"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/iv_main_icon_otp_margin_top"
            android:src="@drawable/ui2_ic_forgot_password_icon" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/login_scroll_margin_top"
        android:layout_weight="1"
        android:background="@drawable/top_rounded_whitebg"
        android:orientation="vertical"
        android:paddingStart="@dimen/padding_25"
        android:paddingTop="@dimen/padding_30"
        android:paddingEnd="@dimen/padding_25">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rlChildOtpVerification"
                    android:contentDescription="OTP Verification Child RelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvEnterCodeTitleOtpVerification"
                        android:contentDescription="OTP Verification Enter Code Title TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10"
                        android:text="@string/enter_verification_code"
                        android:textColor="@color/textColorBlack"
                        android:textSize="@dimen/common_button_text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvEnterCodeSubtitleOtpVerification"
                        android:contentDescription="OTP Verification Enter Code Subtitle TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvEnterCodeTitleOtpVerification"
                        android:layout_marginTop="@dimen/margin_20"
                        android:text="@string/otp_sent"
                        android:textColor="@color/textColorGray"
                        android:textSize="@dimen/common_label_text_size" />

                    <include
                        android:id="@+id/pinViewOtpVerification"
                        layout="@layout/otp_pinview_layout_ui2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvEnterCodeSubtitleOtpVerification"
                        android:layout_marginTop="@dimen/otp_pinview_margin_top"
                        android:contentDescription="OTP Verification Pin View"
                        android:focusable="true"
                        android:focusableInTouchMode="true" />

                    <TextView
                        android:id="@+id/tvErrorOtpVerification"
                        android:contentDescription="OTP Verification Error TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/pinViewOtpVerification"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="@dimen/hamburger_margin_start"
                        android:lineSpacingExtra="0sp"
                        android:text="@string/enter_otp"
                        android:textAppearance="@style/registr_error_msg"
                        android:textColor="@color/red"
                        android:textSize="@null"
                        android:visibility="gone" />


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/otpVerificationPinView"
                        android:layout_marginTop="@dimen/otp_pinview_margin_top"
                        android:text="@string/no_otp_received"
                        android:textColor="@color/textColorGray"
                        android:textSize="@dimen/common_label_text_size" />

                    <TextView
                        android:id="@+id/tvResendOtpVerification"
                        android:contentDescription="OTP Verification Resend TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/otpVerificationPinView"
                        android:layout_marginStart="@dimen/tv_resend_otp_margin_start"
                        android:layout_marginTop="@dimen/otp_pinview_margin_top"
                        android:text="@string/resend_otp_in"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/common_label_text_size" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btnContinueOtpVerification"
            android:contentDescription="OTP Verification Continue Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/ui2_common_primary_bg"
            android:drawableEnd="@drawable/ui2_ic_baseline_arrow_forward_24"
            android:drawableTint="@color/iconTintWhite"
            android:paddingStart="@dimen/common_button_padding_left"
            android:paddingTop="@dimen/common_button_padding_top"
            android:paddingEnd="@dimen/common_button_padding_right"
            android:paddingBottom="@dimen/common_button_padding_bottom"
            android:text="@string/button_continue" />
    </RelativeLayout>
</LinearLayout>