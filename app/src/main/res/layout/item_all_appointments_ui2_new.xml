<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvParentAllAppointmentItem"
    android:contentDescription="All Appointment Item Parent CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/item_ta_margin_horizontal"
    android:layout_marginTop="@dimen/item_ta_margin_top"
    android:layout_marginBottom="@dimen/item_ta_margin_bottom"
    app:cardCornerRadius="@dimen/item_ta_card_corner_radius"
    app:cardElevation="@dimen/item_ta_card_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/item_ta_card_padding">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvProfileImageAllAppointmentItem"
            android:contentDescription="All Appointment Item Profile Image CardView"
            android:layout_width="@dimen/item_ta_member_image_width"
            android:layout_height="@dimen/item_ta_member_image_height"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/item_ta_member_iv_margin_top"
            android:elevation="0dp"
            app:cardCornerRadius="@dimen/item_ta_member_iv_card_radius">

            <ImageView
                android:id="@+id/ivProfileImageAllAppointmentItem"
                android:contentDescription="All Appointment Item Profile Image ImageView"
                android:layout_width="@dimen/item_ta_member_image_width"
                android:layout_height="@dimen/item_ta_member_image_height"
                android:src="@drawable/avatar1" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvPatientNameAllAppointmentItem"
            android:contentDescription="All Appointment Item Patient Name TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/cp_margin_start"
            android:layout_toEndOf="@+id/cvProfileImageAllAppointmentItem"
            android:lineSpacingExtra="3sp"
            android:text="Sarrah Paul"
            android:textColor="@color/textColorBlack"
            android:textSize="@dimen/item_ta_tv_name_text_size" />

        <TextView
            android:id="@+id/tvDoctorNameAllAppointmentItem"
            android:contentDescription="All Appointment Item Doctor Name TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPatientNameAllAppointmentItem"
            android:layout_marginStart="@dimen/margin_8"
            android:layout_toEndOf="@+id/cvProfileImageAllAppointmentItem"
            android:drawableStart="@drawable/ic_baseline_account_circle_14"
            android:drawablePadding="@dimen/margin_8"
            android:gravity="center_vertical"
            android:lineSpacingExtra="3sp"
            android:text="Dr. Lincon"
            android:textColor="@color/textColorGray"
            android:textSize="@dimen/txtsize_patdetail_14sp" />

        <ImageView
            android:id="@+id/ivTimeAllAppointmentItem"
            android:contentDescription="All Appointment Item Time ImageView"
            android:layout_width="@dimen/cal_size_new"
            android:layout_height="@dimen/cal_size_new"
            android:layout_below="@+id/tvDoctorNameAllAppointmentItem"
            android:layout_marginStart="@dimen/item_ta_tv_name_margin_start"
            android:layout_marginTop="@dimen/item_ta_iv_name_margin_start"
            android:layout_toEndOf="@+id/cvProfileImageAllAppointmentItem"
            android:src="@drawable/ui2_ic_calendar"
            android:tint="@color/iconTintGray"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDoctorNameAllAppointmentItem"
            android:layout_marginStart="@dimen/margin_8"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/ivTimeAllAppointmentItem"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAppDateAllAppointmentItem"
                android:contentDescription="All Appointment Item Appointment Date TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/margin_8"
                android:gravity="center_vertical"
                android:lineHeight="@dimen/presc_rec_line_ht"
                android:lineSpacingExtra="@dimen/presc_rec_line_spacing"
                android:text="Received 3 hours ago new"
                android:textAppearance="@style/caption"
                android:textColor="@color/textColorGray"
                android:textSize="@dimen/presc_rec_text_size"
                app:drawableStartCompat="@drawable/ui2_ic_calendar" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cvPrescReceivedAllAppointmentItem"
                android:contentDescription="All Appointment Item Prescription Received CardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAppDateAllAppointmentItem"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_marginHorizontal="2dp"
                app:cardCornerRadius="3dp">

                <LinearLayout
                    android:id="@+id/llPrescReceivedAllAppointmentItem"
                    android:contentDescription="All Appointment Item Prescription Received LinearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/cardTintLightGreen"
                    android:orientation="horizontal"
                    android:paddingHorizontal="3dp">

                    <ImageView
                        android:id="@+id/ivPrescReceivedRecAllAppointmentItem"
                        android:contentDescription="All Appointment Item Prescription Received ImageView"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/prescription_icon_blue" />

                    <TextView
                        android:id="@+id/tvPrescReceivedAllAppointmentItem"
                        android:contentDescription="All Appointment Item Prescription Received TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingRight="3dp"
                        android:text="@string/presc_received"
                        android:textColor="#1B163A"
                        android:textSize="11sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvPrescPendingAllAppointmentItem"
                android:contentDescription="All Appointment Item Prescription Pending CardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAppDateAllAppointmentItem"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:visibility="gone"
                android:layout_marginHorizontal="2dp"
                app:cardCornerRadius="3dp">

                <LinearLayout
                    android:id="@+id/llPrescPendingAllAppointmentItem"
                    android:contentDescription="All Appointment Item Prescription Pending LinearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/cardTintLightOrange"
                    android:orientation="horizontal"
                    android:paddingHorizontal="3dp">

                    <ImageView
                        android:id="@+id/ivPrescPendingAllAppointmentItem"
                        android:contentDescription="All Appointment Item Prescription Pending ImageView"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/prescription_icon_blue" />

                    <TextView
                        android:id="@+id/tvPrescPendingAllAppointmentListItem"
                        android:contentDescription="All Appointment Item Prescription Pending TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingRight="5dp"
                        android:text="@string/presc_pending"
                        android:textColor="#1B163A"
                        android:textSize="11sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <ImageView
            android:id="@+id/ivPriorityTagAllAppointmentItem"
            android:contentDescription="All Appointment Item Priority Tag ImageView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/item_ta_priority_tag_height"
            android:layout_alignParentEnd="true"
            android:layout_gravity="top|end|center"
            android:layout_marginTop="@dimen/item_ta_priority_tag_margin_top"
            android:layout_marginEnd="@dimen/item_ta_priority_tag_margin_end"
            android:layout_weight="0.5"
            android:gravity="center"
            android:lineSpacingExtra="0sp"
            android:src="@drawable/ui2_frame_priority"
            android:visibility="gone" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>