<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlParentIdentificationFirstScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contentDescription="Identification First Screen Parent RelativeLayout">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/svParentIdentificationFirstScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/flNextIdentificationFirstScreen"
        android:layout_marginBottom="@dimen/margin_24"
        android:contentDescription="Identification First Screen Parent ScrollView"
        android:fillViewport="true"
        android:scrollbars="none">

        <!--Firstname-->
        <RelativeLayout
            android:id="@+id/rlChildIdentificationFirstScreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_24"
            android:layout_marginEnd="@dimen/margin_24"
            android:contentDescription="Identification First Screen Child RelativeLayout">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvProfileIdentificationFirstScreen"
                android:layout_width="@dimen/patregist_profileimg_icon"
                android:layout_height="@dimen/patregist_profileimg_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_16dp"
                android:contentDescription="Identification First Screen Profile CardView"
                android:elevation="0dp"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:id="@+id/ivProfileIdentificationFirstScreen"
                    android:layout_width="@dimen/patregist_profileimg_icon"
                    android:layout_height="@dimen/patregist_profileimg_icon"
                    android:contentDescription="Identification First Screen Profile ImageView"
                    android:src="@drawable/avatar1" />
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/ivCameraIdentificationFirstScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/cvProfileIdentificationFirstScreen"
                android:layout_marginStart="-20dip"
                android:layout_toEndOf="@+id/cvProfileIdentificationFirstScreen"
                android:contentDescription="Identification First Screen Camera ImageView"
                android:elevation="8dip"
                android:src="@drawable/lense_with_camera_icon" />

            <TextView
                android:id="@+id/tvAddPicIdentificationFirstScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cvProfileIdentificationFirstScreen"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/common_edittext_margin_top"
                android:contentDescription="Identification First Screen Add Picture TextView"
                android:gravity="top"
                android:lineSpacingExtra="3sp"
                android:text="@string/add_a_picture"
                android:textAppearance="@style/blur_txtview"
                android:textColor="@null"
                android:textSize="@null"
                android:translationY="-1.39sp" />


            <LinearLayout
                android:id="@+id/llFirstNameIdentificationFirstScreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAddPicIdentificationFirstScreen"
                android:layout_marginTop="@dimen/margin_24"
                android:contentDescription="Identification First Screen First Name LinearLayout"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvFirstNameTitleIdentificationFirstScreen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="Identification First Screen First Name Title TextView"
                    android:lineSpacingExtra="3sp"
                    android:text="@string/first_name_mandatory"
                    android:textAppearance="@style/blur_txtview"
                    android:textSize="@null" />

                <EditText
                    android:id="@+id/etFirstNameIdentificationFirstScreen"
                    style="@style/edittext_textcolor"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext_height_44dp"
                    android:layout_marginTop="@dimen/hamburger_margin_start"
                    android:background="@drawable/edittext_border"
                    android:contentDescription="Identification First Screen First Name EditText"
                    android:hint="@string/enter_first_name"
                    android:inputType="textCapWords"
                    android:paddingStart="@dimen/fu_margin_start"
                    android:paddingTop="@dimen/margin_10"
                    android:paddingBottom="@dimen/margin_10"
                    android:textColorHint="@color/edittext_hint_color"
                    android:textSize="@dimen/edittext_textsize_16sp" />

                <TextView
                    android:id="@+id/tvFirstNameErrorIdentificationFirstScreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/hamburger_margin_start"
                    android:contentDescription="Identification First Screen First Name Error TextView"
                    android:lineSpacingExtra="0sp"
                    android:text="@string/this_field_is_mandatory"
                    android:textAppearance="@style/registr_error_msg"
                    android:textColor="@color/red"
                    android:textSize="@null"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </LinearLayout>

            <!--Middlename-->
            <LinearLayout
                android:id="@+id/llMiddleNameIdentificationFirstScreen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/llFirstNameIdentificationFirstScreen"
                android:layout_marginTop="@dimen/margin_24"
                android:contentDescription="Identification First Screen Middle Name LinearLayout"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvMiddleNameTitleIdentificationFirstScreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Identification First Screen Middle Name Title TextView"
                    android:lineSpacingExtra="3sp"
                    android:text="@string/middle_name_registration"
                    android:textAppearance="@style/blur_txtview"
                    android:textSize="@null" />

                <EditText
                    android:id="@+id/etMiddleNameIdentificationFirstScreen"
                    style="@style/edittext_textcolor"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext_height_44dp"
                    android:layout_marginTop="@dimen/hamburger_margin_start"
                    android:background="@drawable/edittext_border"
                    android:contentDescription="Identification First Screen Middle Name EditText"
                    android:hint="@string/enter_middle_name"
                    android:inputType="textCapWords"
                    android:paddingStart="@dimen/fu_margin_start"
                    android:paddingTop="@dimen/margin_10"
                    android:paddingBottom="@dimen/margin_10"
                    android:textColorHint="@color/edittext_hint_color"
                    android:textSize="@dimen/edittext_textsize_16sp" />

                <TextView
                    android:id="@+id/tvMiddleNameErrorIdentificationFirstScreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/hamburger_margin_start"
                    android:contentDescription="Identification First Screen Middle Name Error TextView"
                    android:lineSpacingExtra="0sp"
                    android:text="@string/this_field_is_mandatory"
                    android:textAppearance="@style/registr_error_msg"
                    android:textColor="@color/red"
                    android:textSize="@null"
                    android:visibility="gone"
                    tools:visibility="visible" />


            </LinearLayout>

            <!--Lastname-->
            <LinearLayout
                android:id="@+id/llLastNameIdentificationFirstScreen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/llMiddleNameIdentificationFirstScreen"
                android:layout_marginTop="@dimen/margin_24"
                android:contentDescription="Identification First Screen Last Name LinearLayout"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvLastNameTitleIdentificationFirstScreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Identification First Screen Last Name Title TextView"
                    android:lineSpacingExtra="3sp"
                    android:text="@string/last_name_mandatory"
                    android:textAppearance="@style/blur_txtview"
                    android:textSize="@null" />

                <EditText
                    android:id="@+id/etLastNameIdentificationFirstScreen"
                    style="@style/edittext_textcolor"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext_height_44dp"
                    android:layout_marginTop="@dimen/hamburger_margin_start"
                    android:background="@drawable/edittext_border"
                    android:contentDescription="Identification First Screen Last Name EditText"
                    android:hint="@string/enter_last_name"
                    android:inputType="textCapWords"
                    android:paddingStart="@dimen/fu_margin_start"
                    android:paddingTop="@dimen/margin_10"
                    android:paddingBottom="@dimen/margin_10"
                    android:textColorHint="@color/edittext_hint_color"

                    android:textSize="@dimen/edittext_textsize_16sp" />

                <TextView
                    android:id="@+id/tvLastNameErrorIdentificationFirstScreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/hamburger_margin_start"
                    android:contentDescription="Identification First Screen Last Name Error TextView"
                    android:lineSpacingExtra="0sp"
                    android:text="@string/this_field_is_mandatory"
                    android:textAppearance="@style/registr_error_msg"
                    android:textColor="@color/red"
                    android:textSize="@null"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </LinearLayout>

            <!--Gender-->
            <LinearLayout
                android:id="@+id/llGenderIdentificationFirstScreen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/llLastNameIdentificationFirstScreen"
                android:layout_marginTop="@dimen/margin_24"
                android:contentDescription="Identification First Screen Gender LinearLayout"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvGenderTitleIdentificationFirstScreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Identification First Screen Gender Title TextView"
                    android:gravity="center"
                    android:lineSpacingExtra="3sp"
                    android:text="@string/gender_mandatory"
                    android:textAppearance="@style/blur_txtview"
                    android:textSize="@null" />

                <RadioGroup
                    android:id="@+id/rgGenderIdentificationFirstScreen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/hamburger_margin_start"
                    android:contentDescription="Identification First Screen Gender RadioGroup"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <RadioButton
                        android:id="@+id/rbMaleIdentificationFirstScreen"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:layout_weight="1"
                        android:contentDescription="Identification First Screen Gender Male RadioButton"
                        android:drawableEnd="@drawable/gender_male_svg"
                        android:text="@string/male"
                        android:textSize="@dimen/select_language"
                        android:theme="@style/RadioButtonStyleSelection" />

                    <RadioButton
                        android:id="@+id/rbFemaleIdentificationFirstScreen"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/gender_margin"
                        android:layout_marginEnd="@dimen/gender_margin"
                        android:layout_weight="1"
                        android:contentDescription="Identification First Screen Gender Female RadioButton"
                        android:drawableEnd="@drawable/gender_female_svg"
                        android:text="@string/female"
                        android:textSize="@dimen/select_language"
                        android:theme="@style/RadioButtonStyleSelection" />

                    <RadioButton
                        android:id="@+id/rbOtherIdentificationFirstScreen"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:layout_weight="1"
                        android:contentDescription="Identification First Screen Gender Other RadioButton"
                        android:drawableEnd="@drawable/gender_other_svg"
                        android:text="@string/other"
                        android:textSize="@dimen/select_language"
                        android:theme="@style/RadioButtonStyleSelection" />

                </RadioGroup>

                <TextView
                    android:id="@+id/tvGenderErrorIdentificationFirstScreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/hamburger_margin_start"
                    android:contentDescription="Identification First Screen Gender Error TextView"
                    android:lineSpacingExtra="0sp"
                    android:text="@string/this_field_is_mandatory"
                    android:textAppearance="@style/registr_error_msg"
                    android:textColor="@color/red"
                    android:textSize="@null"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </LinearLayout>

            <!--DOB-->
            <LinearLayout
                android:id="@+id/llDOBIdentificationFirstScreen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/llGenderIdentificationFirstScreen"
                android:layout_marginTop="@dimen/margin_24"
                android:contentDescription="Identification First Screen DOB LinearLayout"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDOBTitleIdentificationFirstScreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Identification First Screen DOB Title TextView"
                    android:lineSpacingExtra="3sp"
                    android:text="@string/date_of_birth_mandatory"
                    android:textAppearance="@style/blur_txtview"

                    android:textSize="@null" />

                <EditText
                    android:id="@+id/etDOBIdentificationFirstScreen"
                    style="@style/edittext_textcolor"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext_height_44dp"
                    android:layout_marginTop="@dimen/hamburger_margin_start"
                    android:background="@drawable/edittext_border"
                    android:contentDescription="Identification First Screen DOB EditText"
                    android:drawableEnd="@drawable/followup_item_calendar"
                    android:focusable="false"
                    android:hint="@string/enter_date_of_birth"
                    android:inputType=""
                    android:maxLines="1"
                    android:paddingStart="@dimen/fu_margin_start"
                    android:paddingTop="@dimen/margin_10"
                    android:paddingEnd="@dimen/margin_16"
                    android:paddingBottom="@dimen/margin_10"
                    android:singleLine="true"
                    android:textColorHint="@color/edittext_hint_color"
                    android:textSize="@dimen/edittext_textsize_16sp" />

                <TextView
                    android:id="@+id/tvDOBErrorIdentificationFirstScreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/hamburger_margin_start"
                    android:contentDescription="Identification First Screen DOB Error TextView"
                    android:lineSpacingExtra="0sp"
                    android:text="@string/this_field_is_mandatory"
                    android:textAppearance="@style/registr_error_msg"
                    android:textColor="@color/red"
                    android:textSize="@null"
                    android:visibility="gone"
                    tools:visibility="visible" />


            </LinearLayout>

            <!--Age-->
            <LinearLayout
                android:id="@+id/llAgeIdentificationFirstScreen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/llDOBIdentificationFirstScreen"
                android:layout_marginTop="@dimen/margin_24"
                android:contentDescription="Identification First Screen Age LinearLayout"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvAgeTitleIdentificationFirstScreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Identification First Screen Age Title TextView"
                    android:lineSpacingExtra="3sp"
                    android:text="@string/age_mandatory"
                    android:textAppearance="@style/blur_txtview"
                    android:textSize="@null" />

                <EditText
                    android:id="@+id/etAgeIdentificationFirstScreen"
                    style="@style/edittext_textcolor"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext_height_44dp"
                    android:layout_marginTop="@dimen/hamburger_margin_start"
                    android:background="@drawable/edittext_border"
                    android:contentDescription="Identification First Screen Age EditText"
                    android:focusable="false"
                    android:hint="@string/enter_age"
                    android:inputType=""
                    android:maxLines="1"
                    android:paddingStart="@dimen/fu_margin_start"
                    android:paddingTop="@dimen/margin_10"
                    android:paddingEnd="@dimen/margin_16"
                    android:paddingBottom="@dimen/margin_10"
                    android:singleLine="true"
                    android:textColorHint="@color/edittext_hint_color"
                    android:textSize="@dimen/edittext_textsize_16sp" />

                <TextView
                    android:id="@+id/tvAgeErrorIdentificationFirstScreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/hamburger_margin_start"
                    android:contentDescription="Identification First Screen Age Error TextView"
                    android:lineSpacingExtra="0sp"
                    android:text="@string/this_field_is_mandatory"
                    android:textAppearance="@style/registr_error_msg"
                    android:textColor="@color/red"
                    android:textSize="@null"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </LinearLayout>

            <!--Phone number-->
            <LinearLayout
                android:id="@+id/llPhoneNumIdentificationFirstScreen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/llAgeIdentificationFirstScreen"
                android:layout_marginTop="@dimen/margin_24"
                android:layout_marginBottom="@dimen/margin_24"
                android:contentDescription="Identification First Screen Phone Num LinearLayout"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/llPhoneNumTitleIdentificationFirstScreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Identification First Screen Phone Num Title LinearLayout"
                    android:lineSpacingExtra="3sp"
                    android:text="@string/phone_number"
                    android:textAppearance="@style/blur_txtview"
                    android:textSize="@null" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.hbb20.CountryCodePicker
                        android:id="@+id/ccpIdentificationFirstScreen"
                        android:contentDescription="Identification First Screen Country Code Picker"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/edittext_height_44dp"
                        android:layout_marginTop="@dimen/hamburger_margin_start"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_border"
                        android:gravity="center_vertical"
                        app:ccp_countryPreference="us,in"
                        app:ccp_textSize="@dimen/txtsize_patdetail_16sp" />

                    <EditText
                        android:id="@+id/etPhoneNumIdentificationFirstScreen"
                        android:contentDescription="Identification First Screen Phone Num EditText"
                        style="@style/edittext_textcolor"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/edittext_height_44dp"
                        android:layout_marginStart="@dimen/fu_card_margin_updown"
                        android:layout_marginTop="@dimen/hamburger_margin_start"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_border"
                        android:digits="1234567890"
                        android:hint="@string/phone_number"
                        android:inputType="number"
                        android:paddingStart="@dimen/fu_margin_start"
                        android:paddingTop="@dimen/margin_10"
                        android:paddingEnd="@dimen/fu_card_margin_updown"
                        android:paddingBottom="@dimen/margin_10"
                        android:textSize="@dimen/edittext_textsize_16sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvPhoneNumErrorIdentificationFirstScreen"
                    android:contentDescription="Identification First Screen Phone Num Error TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/hamburger_margin_start"
                    android:lineSpacingExtra="0sp"
                    android:text="@string/this_field_is_mandatory"
                    android:textAppearance="@style/registr_error_msg"
                    android:textColor="@color/red"
                    android:textSize="@null"
                    android:visibility="gone"
                    tools:visibility="gone" />


            </LinearLayout>

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>


    <FrameLayout
        android:id="@+id/flNextIdentificationFirstScreen"
        android:contentDescription="Identification First Screen Next Button FrameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_24">

        <RelativeLayout
            android:id="@+id/rlNextIdentificationFirstScreen"
            android:contentDescription="Identification First Screen Next Button RelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <Button
                android:id="@+id/btnNextIdentificationFirstScreen"
                android:contentDescription="Identification First Screen Next Button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fu_btn_size"
                android:layout_marginStart="@dimen/margin_24"
                android:layout_marginEnd="@dimen/margin_24"
                android:background="@drawable/ui2_common_primary_bg"
                android:drawableEnd="@drawable/ui2_ic_baseline_arrow_forward_24"
                android:paddingHorizontal="@dimen/margin_10"
                android:text="@string/next" />

        </RelativeLayout>
    </FrameLayout>


</RelativeLayout>