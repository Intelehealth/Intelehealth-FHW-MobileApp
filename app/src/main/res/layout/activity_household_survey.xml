<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.householdSurvey.HouseholdSurveyActivity">

    <FrameLayout
        android:id="@+id/framelayout_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <!--
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_keyboard_arrow_right"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="16dp"/>
    -->

    <RelativeLayout
        android:id="@+id/footer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:elevation="8dip"
        android:minHeight="?actionBarSize"
        android:orientation="horizontal"
        android:paddingVertical="8dip">

        <Button
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="16dip"
            android:background="@drawable/round_corner_16_blue_light"
            android:drawableEnd="@drawable/ic_baseline_navigate_next_24"
            android:minWidth="140dip"
            android:paddingHorizontal="8dip"
            android:text="@string/next"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/btnPrev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="16dip"
            android:background="@drawable/round_corner_16_blue_light"
            android:drawableStart="@drawable/ic_baseline_keyboard_arrow_left_24"
            android:minWidth="140dip"
            android:paddingHorizontal="8dip"
            android:text="@string/previous"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:textStyle="normal"
            android:visibility="visible" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dip">


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/footer_layout"
        android:layout_below="@+id/header_layout"
        android:layout_marginHorizontal="16dip"
        android:layout_marginVertical="8dip"
        android:background="@drawable/rounded_white_bg"

        android:orientation="vertical">

        <TextView
            android:id="@+id/tvSurveySectionName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/rounded_top_default_bg"
            android:gravity="center"
            android:padding="8dip"
            android:text="Economic evaluation"
            android:textColor="@color/white"
            android:textSize="@dimen/header_text_size"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvQuery"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="8dip"
            android:paddingVertical="8dip"
            android:scrollbars="vertical" />
    </LinearLayout>

</RelativeLayout>