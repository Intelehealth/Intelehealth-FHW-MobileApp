                                        </com.google.android.material.card.MaterialCardView>
                    -->

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_deceased_reason"
                        style="@style/Theme.EZazi.Material.CardView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dialog_input_margin_top"
                        android:background="@color/colorContainer"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/card_other_comment"
                        app:strokeColor="@android:color/transparent"
                        app:strokeWidth="0dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/etLayout_deceased_reason"
                            style="@style/Theme.EZazi.Input.Login"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxStrokeColor="@color/colorLoginInputStroke"
                            app:boxStrokeWidth="@dimen/input_stroke_size"
                            app:counterEnabled="true"
                            app:counterMaxLength="300"
                            app:endIconMode="clear_text">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_deceased_reason"
                                style="@style/Theme.EZazi.Input.Dialog.Stage2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/white"
                                android:gravity="start"
                                android:hint="@string/enter_reason_deceased"
                                android:imeOptions="actionDone"
                                android:inputType="textMultiLine"
                                android:lineSpacingExtra="@dimen/std_4dp"
                                android:lines="5"
                                android:maxLength="300"
                                android:paddingStart="20dp"
                                android:textColor="@color/colorInputText"
                                android:textSize="@dimen/input_inner_size" />

                        </com.google.android.material.textfield.TextInputLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSubmit"
                        style="@style/Theme.EZazi.Dialog.Button.Next"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:contentDescription="@string/submit"
                        android:text="@string/save_button"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/card_deceased_reason" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>
</layout>
