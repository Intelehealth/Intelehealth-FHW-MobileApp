<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_10"
    android:layout_marginTop="@dimen/margin_10"
    android:layout_marginEnd="@dimen/margin_30"
    android:layout_marginBottom="@dimen/margin_10"
    android:id="@+id/cvParentAskReasonDialog"
    android:contentDescription="Ask Reason Dialog Parent CardView"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:id="@+id/llParentAskReasonDialog"
        android:contentDescription="Ask Reason Dialog Parent LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin_15"
        android:layout_marginStart="@dimen/margin_12"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="@dimen/margin_12"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivIconAskReasonDialog"
            android:contentDescription="Ask Reason Dialog Icon ImageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/iv_icon_height"
            android:layout_marginTop="24dp"
            android:src="@drawable/ui2_ic_book_app_red" />

        <TextView
            android:id="@+id/tvTitleAskReasonDialog"
            android:contentDescription="Ask Reason Dialog Title TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tv_internet_title_margin_top"
            android:gravity="center"
            android:text="@string/please_select_your_reschedule_reason"
            android:textColor="@color/gray_6"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/rgAskReasonDialog"
            android:contentDescription="Ask Reason Dialog RadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rbNoDocAskReasonDialog"
                android:contentDescription="Ask Reason Dialog No Doctor RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/radio_gender_margin_end"
                android:layout_marginBottom="@dimen/margin_12"
                android:button="@drawable/ui2_ic_circle"
                android:checked="false"
                android:lineSpacingExtra="@dimen/profile_text_line_spacing"
                android:padding="@dimen/radio_gender_padding"
                android:paddingStart="10dp"
                android:paddingEnd="@dimen/radio_gender_padding_end"
                android:text="@string/doctor_is_not_available"
                android:textColor="@color/textColorBlack"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/notifi_divider_color" />

            <RadioButton
                android:id="@+id/rbNoPatientAskReasonDialog"
                android:contentDescription="Ask Reason Dialog No Patient RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_12"
                android:layout_marginEnd="@dimen/radio_gender_margin_end"
                android:layout_marginBottom="@dimen/margin_12"
                android:button="@drawable/ui2_ic_circle"
                android:checked="false"
                android:lineSpacingExtra="@dimen/profile_text_line_spacing"
                android:padding="@dimen/radio_gender_padding"
                android:paddingStart="12dp"
                android:paddingEnd="@dimen/radio_gender_padding_end"
                android:text="@string/patient_is_not_available"

                android:textColor="@color/textColorBlack"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/notifi_divider_color" />

            <RadioButton
                android:id="@+id/rbOthersAskReasonDialog"
                android:contentDescription="Ask Reason Dialog Others RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_12"
                android:layout_marginEnd="@dimen/radio_gender_margin_end"
                android:button="@drawable/ui2_ic_circle"
                android:checked="false"
                android:lineSpacingExtra="@dimen/profile_text_line_spacing"
                android:padding="@dimen/radio_gender_padding"
                android:paddingStart="12dp"
                android:paddingEnd="@dimen/radio_gender_padding_end"
                android:text="@string/others"
                android:textColor="@color/textColorBlack"
                android:textSize="14sp" />
        </RadioGroup>

        <EditText
            android:id="@+id/etOtherAskReasonDialog"
            android:contentDescription="Ask Reason Dialog Other EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_bg_rounded_stroke"
            android:gravity="start|top"
            android:hint="@string/please_enter_the_reason_details"
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:minLines="5"
            android:padding="8dip"
            android:scrollbars="vertical"
            android:textColor="@color/gray_5"
            android:textSize="14sp" />


        <RelativeLayout
            android:id="@+id/rlButtonsAskReasonDialog"
            android:contentDescription="Ask Reason Dialog Buttons RelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCancelAskReasonDialog"
                android:contentDescription="Ask Reason Dialog Cancel Button"
                android:layout_width="74dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@drawable/white_bg_button"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingTop="16dp"
                android:paddingRight="10dp"
                android:paddingBottom="16dp"
                android:text="@string/cancel"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnSaveAskReasonDialog"
                android:contentDescription="Ask Reason Dialog Save Button"
                android:layout_width="74dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/btnCancelAskReasonDialog"
                android:background="@drawable/darkblue_bg_button"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingTop="16dp"
                android:paddingRight="10dp"
                android:paddingBottom="16dp"
                android:text="@string/save"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>