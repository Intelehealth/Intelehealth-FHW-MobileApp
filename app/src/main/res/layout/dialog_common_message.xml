<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cvParentCommonMessageDialog"
    android:contentDescription="Common Message Dialog Parent CardView"
    android:layout_margin="@dimen/margin_5"
    app:cardCornerRadius="@dimen/margin_16dp"
    app:cardElevation="@dimen/hamburger_margin_start">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivIconCommonMessageDialog"
            android:contentDescription="Common Message Dialog Icon ImageView"
            android:layout_width="@dimen/patregist_profileimg_icon"
            android:layout_height="@dimen/patregist_profileimg_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_32dp"
            android:src="@drawable/close_patient_svg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivIconCommonMessageDialog"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/margin_24"
            android:layout_marginTop="@dimen/margin_24"
            android:layout_marginEnd="@dimen/margin_24">

            <TextView
                android:id="@+id/tvTitleCommonMessageDialog"
                android:contentDescription="Common Message Dialog Title TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:lineSpacingExtra="4sp"
                android:text="@string/patient_registered"
                android:textAppearance="@style/dialog_title"
                android:textStyle="bold"
                android:textColor="@null"
                android:textSize="@null" />

            <TextView
                android:id="@+id/tvSubtitleCommonMessageDialog"
                android:contentDescription="Common Message Dialog Subtitle TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTitleCommonMessageDialog"
                android:layout_marginTop="@dimen/fu_margin_start"
                android:gravity="center"
                android:lineSpacingExtra="3sp"
                android:text="@string/does_patient_start_visit_now"
                android:textAppearance="@style/dialog_subtitle"
                android:textColor="@null"
                android:textSize="@null" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvSubtitleCommonMessageDialog"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/margin_24"
                android:layout_marginBottom="@dimen/margin_32dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnNegativeCommonMessageDialog"
                    android:contentDescription="Common Message Dialog Negative Button"
                    style="@style/negative_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/fu_margin_start"
                    android:background="@drawable/ui2_common_input_bg"
                    android:paddingHorizontal="@dimen/padding_15"
                    android:paddingVertical="@dimen/padding_12"
                    android:text="@string/yes" />

                <Button
                    android:id="@+id/btnPositiveCommonMessageDialog"
                    android:contentDescription="Common Message Dialog Positive Button"                    style="@style/positive_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_toEndOf="@id/negative_btn"
                    android:background="@drawable/primary_bg_rounded_corners"
                    android:paddingHorizontal="@dimen/padding_15"
                    android:paddingVertical="@dimen/padding_12"
                    android:text="@string/no" />
            </LinearLayout>


        </RelativeLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>