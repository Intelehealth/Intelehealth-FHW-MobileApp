<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.TestUiActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/validation_error_tv_margin_top"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/tv_admission_date_error1"
            style="@style/Textview_Validation_Error"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/error_tv_margin_end"
            android:layout_weight="1"
            android:gravity="end"
            android:lineSpacingExtra="0sp"
            android:text="Admission date error"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_admission_time_error1"
            style="@style/Textview_Validation_Error"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:lineSpacingExtra="0sp"
            android:text="Admission time error"
            android:visibility="visible" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/validation_error_tv_margin_top">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <TextView
            android:id="@+id/tv_admission_date_error"
            style="@style/Textview_Validation_Error"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/error_tv_margin_end"
            android:gravity="end"
            android:lineSpacingExtra="0sp"
            android:text="@string/this_field_is_mandatory"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline1"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_admission_time_error"
            style="@style/Textview_Validation_Error"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:lineSpacingExtra="0sp"
            android:text="@string/this_field_is_mandatory"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toEndOf="@id/guideline1"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/view1"
            style="@style/Textview_Validation_Error"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/error_tv_margin_end"
            android:layout_weight="1"
            android:gravity="end"
            android:lineSpacingExtra="0sp"
            android:text="Admission date error - click"
            android:textColor="@color/colorGreen"
            android:textSize="20sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/view2"
            style="@style/Textview_Validation_Error"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:lineSpacingExtra="0sp"
            android:text="Admission time error - click"
            android:textColor="@color/colorGreen"
            android:textSize="20sp"
            android:visibility="visible" />

    </LinearLayout>


</LinearLayout>