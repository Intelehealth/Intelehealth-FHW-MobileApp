<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginStart="@dimen/info_videos_margin_start"
    android:layout_marginEnd="@dimen/info_videos_margin_end"
    android:layout_height="match_parent">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tlInformativeVideosFragment"
        android:contentDescription="Informative Videos Fragment TabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAlignment="center"
        app:tabMaxWidth="0dp"
        app:tabGravity="fill"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/textColorBlack"
        app:tabTextAppearance="@style/CustomTabText" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vpInformativeVideosFragment"
        android:contentDescription="Informative Videos Fragment ViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tlInformativeVideosFragment"
        android:layout_marginTop="@dimen/info_pager_common_margin_top"
        android:visibility="visible"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />


</RelativeLayout>