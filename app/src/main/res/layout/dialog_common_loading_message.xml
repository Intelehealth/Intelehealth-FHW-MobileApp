<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/cvParentCommonLoadingDialog"
    android:contentDescription="Common Loading Dialog Parent CardView"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_5"
    app:cardCornerRadius="@dimen/margin_16dp"
    app:cardElevation="@dimen/hamburger_margin_start">

    <RelativeLayout
        android:id="@+id/rlParentCommonLoadingDialog"
        android:contentDescription="Common Loading Dialog Parent RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/pbCommonLoadingDialog"
            android:contentDescription="Common Loading Dialog ProgressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_24"
            android:indeterminateTint="@color/colorPrimary" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pbCommonLoadingDialog"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/margin_24"
            android:layout_marginTop="@dimen/margin_24"
            android:layout_marginEnd="@dimen/margin_24"
            android:layout_marginBottom="@dimen/margin_24"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvTitleCommonLoadingDialog"
                android:contentDescription="Common Loading Dialog Title TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:lineSpacingExtra="4sp"
                android:text="@string/booking_appointment"
                android:textAppearance="@style/dialog_title"
                android:textColor="@null"
                android:textSize="@null"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvSubtitleCommonLoadingDialog"
                android:contentDescription="Common Loading Dialog Subtitle TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingExtra="3sp"
                android:text="@string/please_wait"
                android:textAppearance="@style/dialog_subtitle"
                android:textColor="@null"
                android:textSize="@null" />


        </LinearLayout>


    </RelativeLayout>
</androidx.cardview.widget.CardView>