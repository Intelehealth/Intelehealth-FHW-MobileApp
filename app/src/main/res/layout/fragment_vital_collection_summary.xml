<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlParentVitalsSummary"
    android:contentDescription="Vitals Summary Parent RelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ayu.visit.vital.VitalCollectionSummaryFragment">

    <RelativeLayout
        android:id="@+id/rlToolbarVitalsSummary"
        android:contentDescription="Vitals Summary Toolbar RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="?actionBarSize"
        android:paddingHorizontal="@dimen/toolbar_margin_left">

        <ImageButton
            android:id="@+id/ibCancelVitalsSummary"
            android:contentDescription="Vitals Summary Cancel ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:background="@null"
            app:srcCompat="@drawable/cancel_btn_cross" />


        <ImageButton
            android:id="@+id/ibRefreshVitalsSummary"
            android:contentDescription="Vitals Summary Refresh ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/common_title_margin_top"
            android:layout_toStartOf="@+id/ibCancelVitalsSummary"
            android:background="@null"
            app:srcCompat="@drawable/ic_refreshbtn" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llButtonsVitalsSummary"
        android:contentDescription="Vitals Summary Buttons LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="@dimen/button_skip_margin_start"
        android:layout_marginBottom="@dimen/button_skip_margin_bottom"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btnCancelVitalsSummary"
            android:contentDescription="Vitals Summary Cancel Button"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="@drawable/ui2_common_input_bg"
            android:drawableTint="@color/iconTintWhite"
            android:lineHeight="@dimen/button_skip_line_height"
            android:paddingStart="@dimen/common_button_padding_left"
            android:paddingTop="@dimen/common_button_padding_top"
            android:paddingEnd="@dimen/common_button_padding_right"
            android:paddingBottom="@dimen/common_button_padding_bottom"
            android:text="@string/generic_back"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/common_button_text_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSubmitVitalsSummary"
            android:contentDescription="Vitals Summary Submit Button"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_weight="1"
            android:background="@drawable/ui2_common_primary_bg"
            android:drawableEnd="@drawable/ui2_ic_baseline_arrow_forward_24"
            android:drawableTint="@color/iconTintWhite"
            android:lineHeight="@dimen/button_skip_line_height"
            android:paddingStart="@dimen/common_button_padding_left"
            android:paddingTop="@dimen/common_button_padding_top"
            android:paddingEnd="@dimen/common_button_padding_right"
            android:paddingBottom="@dimen/common_button_padding_bottom"
            android:text="@string/confirm"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/common_button_text_size" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsvVitalsSummary"
        android:contentDescription="Vitals Summary NestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llButtonsVitalsSummary"
        android:layout_below="@id/rlToolbarVitalsSummary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/toolbar_margin_left">

            <ImageView
                android:id="@+id/ivVitalsIconVitalsSummary"
                android:contentDescription="Vitals Summary Vitals Icon ImageView"
                android:layout_width="64dip"
                android:layout_height="64dip"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ui2_ic_vital_icon" />

            <TextView
                android:id="@+id/tvSubTitleVitalsSummaryFragment"
                android:contentDescription="Vitals Summary Vitals Subtitle TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlToolbarVitalsSummary"
                android:layout_marginTop="@dimen/margin_16"
                android:gravity="center"
                android:lineSpacingExtra="1sp"
                android:paddingHorizontal="@dimen/toolbar_margin_left"
                android:text="@string/_vitals_summary"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/toolbar_text_size"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_24">

                <TextView
                    android:id="@+id/tvDetailsLabelVitalsSummary"
                    android:contentDescription="Vitals Summary Details Label TextView"
                    style="@style/label_misc_txt_14sp_dark_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:lineSpacingExtra="1sp"
                    android:text="@string/details" />

                <TextView
                    android:id="@+id/tvEditVitalsSummary"
                    android:contentDescription="Vitals Summary Edit TextView"
                    style="@style/label_misc_txt_12sp_primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/ui2_common_gray_round_stroke_bg"
                    android:drawableStart="@drawable/ui2_ic_edit"
                    android:drawablePadding="4dip"
                    android:gravity="center"
                    android:lineSpacingExtra="1sp"
                    android:padding="@dimen/padding_5"
                    android:text="@string/change" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_8"
                android:layout_marginTop="@dimen/margin_16"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <ImageView
                        android:id="@+id/ivHeightBulletVitalsSummary"
                        android:contentDescription="Vitals Summary Height Bullet ImageView"
                        android:layout_width="6dip"
                        android:layout_height="6dip"
                        android:layout_marginEnd="@dimen/padding_5"
                        android:src="@drawable/ic_baseline_lens_24" />

                    <TextView
                        android:id="@+id/tvHeightTitleVitalsSummary"
                        android:contentDescription="Vitals Summary Height Title TextView"
                        style="@style/label_misc_txt_14sp_dark_1"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/toolbar"
                        android:layout_centerVertical="true"
                        android:layout_weight="1"
                        android:lineSpacingExtra="1sp"
                        android:text="@string/height_cm" />

                    <TextView
                        android:id="@+id/tvHeightValueVitalsSummary"
                        android:contentDescription="Vitals Summary Height Value TextView"
                        style="@style/label_misc_txt_14sp_dark"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/toolbar"
                        android:layout_centerVertical="true"
                        android:layout_weight="1"
                        android:lineSpacingExtra="1sp"
                        android:text="@string/no_information" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <ImageView
                        android:id="@+id/ivWeightBulletVitalsSummary"
                        android:contentDescription="Vitals Summary Weight Bullet ImageView"
                        android:layout_width="6dip"
                        android:layout_height="6dip"
                        android:layout_marginEnd="@dimen/padding_5"
                        android:src="@drawable/ic_baseline_lens_24" />

                    <TextView
                        android:id="@+id/tvWeightTitleVitalsSummary"
                        android:contentDescription="Vitals Summary Weight Title TextView"
                        style="@style/label_misc_txt_14sp_dark_1"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/toolbar"
                        android:layout_centerVertical="true"
                        android:layout_weight="1"
                        android:lineSpacingExtra="1sp"
                        android:text="@string/weight_kg" />

                    <TextView
                        android:id="@+id/tvWeightValueVitalsSummary"
                        android:contentDescription="Vitals Summary Weight Value TextView"
                        style="@style/label_misc_txt_14sp_dark"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/toolbar"
                        android:layout_centerVertical="true"
                        android:layout_weight="1"
                        android:lineSpacingExtra="1sp"
                        android:text="@string/no_information" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <ImageView
                        android:id="@+id/ivBMIBulletVitalsSummary"
                        android:contentDescription="Vitals Summary BMI Bullet ImageView"
                        android:layout_width="6dip"
                        android:layout_height="6dip"
                        android:layout_marginEnd="@dimen/padding_5"
                        android:src="@drawable/ic_baseline_lens_24" />

                    <TextView
                        android:id="@+id/tvBMITitleVitalsSummary"
                        android:contentDescription="Vitals Summary BMI Title TextView"
                        style="@style/label_misc_txt_14sp_dark_1"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/toolbar"
                        android:layout_centerVertical="true"
                        android:layout_weight="1"
                        android:lineSpacingExtra="1sp"
                        android:text="@string/visit_summary_bmi" />

                    <TextView
                        android:id="@+id/tvBMIValueVitalsSummary"
                        android:contentDescription="Vitals Summary BMI Value TextView"
                        style="@style/label_misc_txt_14sp_dark"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/toolbar"
                        android:layout_centerVertical="true"
                        android:layout_weight="1"
                        android:lineSpacingExtra="1sp"
                        android:text="@string/no_information" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <ImageView
                        android:id="@+id/ivBPBulletVitalsSummary"
                        android:contentDescription="Vitals Summary BP Bullet ImageView"
                        android:layout_width="6dip"
                        android:layout_height="6dip"
                        android:layout_marginEnd="@dimen/padding_5"
                        android:src="@drawable/ic_baseline_lens_24" />

                    <TextView
                        android:id="@+id/tvBPTitleVitalsSummary"
                        android:contentDescription="Vitals Summary BP Title TextView"
                        style="@style/label_misc_txt_14sp_dark_1"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/toolbar"
                        android:layout_centerVertical="true"
                        android:layout_weight="1"
                        android:lineSpacingExtra="1sp"
                        android:text="@string/visit_summary_bp" />

                    <TextView
                        android:id="@+id/tvBPValueVitalsSummary"
                        android:contentDescription="Vitals Summary BP Value TextView"
                        style="@style/label_misc_txt_14sp_dark"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/toolbar"
                        android:layout_centerVertical="true"
                        android:layout_weight="1"
                        android:lineSpacingExtra="1sp"
                        android:text="@string/no_information" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <ImageView
                        android:id="@+id/ivPulseBulletVitalsSummary"
                        android:contentDescription="Vitals Summary Pulse Bullet ImageView"
                        android:layout_width="6dip"
                        android:layout_height="6dip"
                        android:layout_marginEnd="@dimen/padding_5"
                        android:src="@drawable/ic_baseline_lens_24" />

                    <TextView
                        android:id="@+id/tvPulseTitleVitalsSummary"
                        android:contentDescription="Vitals Summary Pulse Title TextView"
                        style="@style/label_misc_txt_14sp_dark_1"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/toolbar"
                        android:layout_centerVertical="true"
                        android:layout_weight="1"
                        android:lineSpacingExtra="1sp"
                        android:text="@string/visit_summary_pulse" />

                    <TextView
                        android:id="@+id/tvPulseValueVitalsSummary"
                        android:contentDescription="Vitals Summary Pulse Value TextView"
                        style="@style/label_misc_txt_14sp_dark"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/toolbar"
                        android:layout_centerVertical="true"
                        android:layout_weight="1"
                        android:lineSpacingExtra="1sp"
                        android:text="@string/no_information" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <ImageView
                        android:id="@+id/ivTempBulletVitalsSummary"
                        android:contentDescription="Vitals Summary Temp Bullet ImageView"
                        android:layout_width="6dip"
                        android:layout_height="6dip"
                        android:layout_marginEnd="@dimen/padding_5"
                        android:src="@drawable/ic_baseline_lens_24" />

                    <TextView
                        android:id="@+id/tvTempTitleVitalsSummary"
                        android:contentDescription="Vitals Summary Temp Title TextView"
                        style="@style/label_misc_txt_14sp_dark_1"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/toolbar"
                        android:layout_centerVertical="true"
                        android:layout_weight="1"
                        android:lineSpacingExtra="1sp"
                        android:text="@string/temperature_f" />

                    <TextView
                        android:id="@+id/tvTempValueVitalsSummary"
                        android:contentDescription="Vitals Summary Temp Value TextView"
                        style="@style/label_misc_txt_14sp_dark"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/toolbar"
                        android:layout_centerVertical="true"
                        android:layout_weight="1"
                        android:lineSpacingExtra="1sp"
                        android:text="@string/no_information" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <ImageView
                        android:id="@+id/ivSpO2BulletVitalsSummary"
                        android:contentDescription="Vitals Summary SpO2 Bullet ImageView"
                        android:layout_width="6dip"
                        android:layout_height="6dip"
                        android:layout_marginEnd="@dimen/padding_5"
                        android:src="@drawable/ic_baseline_lens_24" />

                    <TextView
                        android:id="@+id/tvSpO2TitleVitalsSummary"
                        android:contentDescription="Vitals Summary SpO2 Title TextView"
                        style="@style/label_misc_txt_14sp_dark_1"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/toolbar"
                        android:layout_centerVertical="true"
                        android:layout_weight="1"
                        android:lineSpacingExtra="1sp"
                        android:text="@string/table_spo2" />

                    <TextView
                        android:id="@+id/tvSpO2ValueVitalsSummary"
                        android:contentDescription="Vitals Summary SpO2 Value TextView"
                        style="@style/label_misc_txt_14sp_dark"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/toolbar"
                        android:layout_centerVertical="true"
                        android:layout_weight="1"
                        android:lineSpacingExtra="1sp"
                        android:text="@string/no_information" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <ImageView
                        android:id="@+id/ivRRBulletVitalsSummary"
                        android:contentDescription="Vitals Summary RR Bullet ImageView"
                        android:layout_width="6dip"
                        android:layout_height="6dip"
                        android:layout_marginEnd="@dimen/padding_5"
                        android:src="@drawable/ic_baseline_lens_24" />

                    <TextView
                        android:id="@+id/tvRRTitleVitalsSummary"
                        android:contentDescription="Vitals Summary RR Title TextView"
                        style="@style/label_misc_txt_14sp_dark_1"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/toolbar"
                        android:layout_centerVertical="true"
                        android:layout_weight="1"
                        android:lineSpacingExtra="1sp"
                        android:text="@string/respiratory_rate" />

                    <TextView
                        android:id="@+id/tvRRValueVitalsSummary"
                        android:contentDescription="Vitals Summary RR Value TextView"
                        style="@style/label_misc_txt_14sp_dark"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/toolbar"
                        android:layout_centerVertical="true"
                        android:layout_weight="1"
                        android:lineSpacingExtra="1sp"
                        android:text="@string/no_information" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>