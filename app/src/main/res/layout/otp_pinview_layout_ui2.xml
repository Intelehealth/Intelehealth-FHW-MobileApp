<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/otpVerificationOtpPin1"
        android:contentDescription="OTP Verification Pin 1"
        style="@style/OtpTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/otp_pinview_margin_end"
        android:background="@drawable/otp_pinview_bg_pin_ui2"
        android:imeOptions="actionNext"
        android:paddingStart="@dimen/otp_pinview_padding_start_end"
        android:paddingTop="@dimen/otp_pinview_padding_top_bottom"
        android:paddingEnd="@dimen/otp_pinview_padding_start_end"
        android:paddingBottom="@dimen/otp_pinview_padding_top_bottom" />

    <EditText
        android:id="@+id/otpVerificationOtpPin2"
        android:contentDescription="OTP Verification Pin 2"
        style="@style/OtpTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/otp_pinview_margin_end"
        android:background="@drawable/otp_pinview_bg_pin_ui2"
        android:imeOptions="actionNext"

        />

    <EditText
        android:id="@+id/otpVerificationOtpPin3"
        android:contentDescription="OTP Verification Pin 3"
        style="@style/OtpTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/otp_pinview_margin_end"
        android:background="@drawable/otp_pinview_bg_pin_ui2"
        android:imeOptions="actionNext"

        />

    <EditText
        android:id="@+id/otpVerificationOtpPin4"
        android:contentDescription="OTP Verification Pin 4"
        style="@style/OtpTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/otp_pinview_margin_end"
        android:background="@drawable/otp_pinview_bg_pin_ui2"
        android:imeOptions="actionNext"
       />

    <EditText
        android:id="@+id/otpVerificationOtpPin5"
        android:contentDescription="OTP Verification Pin 5"
        style="@style/OtpTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/otp_pinview_margin_end"
        android:background="@drawable/otp_pinview_bg_pin_ui2"
        android:imeOptions="actionNext" />

    <EditText
        android:id="@+id/otpVerificationOtpPin6"
        android:contentDescription="OTP Verification Pin 6"
        style="@style/OtpTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/otp_pinview_margin_end"
        android:background="@drawable/otp_pinview_bg_pin_ui2"
        android:imeOptions="actionDone"
      />
</LinearLayout>