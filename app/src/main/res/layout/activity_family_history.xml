    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15"
        android:gravity="center_vertical"
        android:minHeight="?actionBarSize"
        android:paddingHorizontal="@dimen/toolbar_margin_left">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:lineSpacingExtra="1sp"
            android:text="Lincon Testing"
            android:textAppearance="@style/label"
            android:textColor="@null"
            android:textSize="@dimen/toolbar_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_title_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:gravity="center_vertical"
            android:lineSpacingExtra="1sp"
            android:text="Lincon Testing"
            android:textAppearance="@style/caption_fu_openmrsId"
            android:textColor="@null"
            android:textSize="@dimen/text_13sp"
            android:textStyle="normal" />

    </RelativeLayout>

    <org.intelehealth.unicef.utilities.pageindicator.ScrollingPagerIndicator
        android:id="@+id/recyclerViewIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_10"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView"
        app:spi_dotSelectedColor="@color/colorPrimary"
        app:spi_visibleDotCount="21">

    </org.intelehealth.unicef.utilities.pageindicator.ScrollingPagerIndicator>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/family_history_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_10"
        android:fadeScrollbars="false"
        android:scrollbarThumbVertical="@color/colorAccent"
        android:scrollbars="vertical"
        android:visibility="visible" />

    <include
        layout="@layout/content_family_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_done_24dp" />

</LinearLayout>