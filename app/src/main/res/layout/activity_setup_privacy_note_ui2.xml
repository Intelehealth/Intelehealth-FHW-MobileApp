<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".activities.onboarding.SetupPrivacyNoteActivity_New">

    <ImageView
        android:id="@+id/ivBackArrowSetupAyuIntro"
        android:contentDescription="Setup Ayu Intro Screen Back Arrow ImageView"
        android:layout_width="@dimen/back_arrow_demo1_width"
        android:layout_height="@dimen/back_arrow_demo1_height"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/back_arrow_demo1_width"
        android:layout_marginTop="@dimen/back_arrow_demo1_width"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/ivAyuLogoSetupAyuIntro"
        android:contentDescription="Setup Ayu Intro Screen Ayu Logo ImageView"
        android:layout_width="@dimen/demo1_ayu_image_width"
        android:layout_height="@dimen/demo1_ayu_image_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/demo1_ayu_img_margin_top"
        android:src="@drawable/ui2_ic_ayu_image" />

    <TextView
        android:id="@+id/tvHelloSetupAyuIntro"
        android:contentDescription="Setup Ayu Intro Screen Hello TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivAyuLogoSetupAyuIntro"
        android:layout_marginTop="@dimen/setup_title_margin_top"
        android:gravity="center"
        android:lineHeight="@dimen/setup_title_line_height"
        android:text="@string/hello_i_am_ayu"
        android:textColor="@color/textColorWhite"
        android:textSize="@dimen/setup_privacy_screen_title"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHelloSetupAyuIntro"
        android:layout_marginTop="@dimen/setup_info_margin_top"
        android:gravity="center"
        android:lineHeight="@dimen/setup_info_line_height"
        android:text="@string/ayu_intro"
        android:textColor="@color/textColorWhite"
        android:textSize="@dimen/setup_privacy_screen_info" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/top_rounded_whitebg"
        android:orientation="vertical"
        android:padding="@dimen/padding_25">

        <CheckBox
            android:id="@+id/cbAcceptTCandPPSetupAyuIntro"
            android:contentDescription="Setup Ayu Intro Screen Accept TnC And PP CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/chk_box_ayu_margin_top"
            android:button="@drawable/ui2_ic_default_checkbox" />

        <LinearLayout
            android:id="@+id/llAcceptTCandPPSetupAyuIntro"
            android:contentDescription="Setup Ayu Intro Screen Accept TnC And PP Linear Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_toEndOf="@+id/cbAcceptTCandPPSetupAyuIntro">

            <TextView
                android:id="@+id/tvAcceptTcandPPSetupAyuIntro"
                android:contentDescription="Setup Ayu Intro Screen Accept TnC And PP TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="@string/agree_to_terms"
                android:textSize="@dimen/terms_link_text_size" />

        </LinearLayout>


        <Button
            android:id="@+id/btnSetupAyuIntro"
            android:contentDescription="Setup Ayu Intro Screen Setup Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llAcceptTCandPPSetupAyuIntro"
            android:layout_marginTop="@dimen/button_setup_margin_top"
            android:layout_marginBottom="@dimen/button_setup_margin_bottom"
            android:background="@drawable/common_button_bg_primary_new_ui2"
            android:drawableEnd="@drawable/ui2_ic_baseline_arrow_forward_24"
            android:drawableTint="@color/iconTintWhite"
            android:paddingStart="@dimen/common_button_padding_left"
            android:paddingTop="@dimen/common_button_padding_top"
            android:paddingEnd="@dimen/common_button_padding_right"
            android:paddingBottom="@dimen/common_button_padding_bottom"
            android:text="@string/setup" />

    </RelativeLayout>

    <include
        android:id="@+id/snackbarAcceptTCandPPSetupAyuIntro"
        android:contentDescription="Setup Ayu Intro Screen Accept TnC And PP Snackbar"
        layout="@layout/cutom_snackbar_policy_ui2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/margin_24"
        android:layout_marginEnd="@dimen/margin_24"
        android:layout_marginBottom="@dimen/margin_24"
        android:visibility="gone" />

</RelativeLayout>


