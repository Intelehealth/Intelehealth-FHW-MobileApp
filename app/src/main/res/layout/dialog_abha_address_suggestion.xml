<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_clear"
            android:layout_gravity="end"
            app:tint="@color/black"
            android:padding="@dimen/padding_10"
            />

        <TextView

            android:id="@+id/aadhar_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:lineSpacingExtra="0sp"
            android:paddingHorizontal="@dimen/padding_20"
            android:paddingBottom="@dimen/padding_20"
             android:text="@string/the_abha_address_can_contain_alphanumeric_with_a_single_dot_and_underscore_allowed_in_the_middle_but_not_at_the_beginning_or_end"
            android:textAppearance="@style/registr_error_msg"
            android:textColor="@color/black"
            android:textSize="@null" />
    </LinearLayout>
</layout>