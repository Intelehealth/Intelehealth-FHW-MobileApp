<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.visitSummaryActivity.TimelineVisitSummaryActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_timeline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnEndStage"
        android:fadeScrollbars="false"
        android:scrollbarSize="5dp"
        android:scrollbarThumbVertical="@color/colorAccent"
        android:scrollbars="vertical"
        tools:listitem="@layout/timeline_listitem" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/btnEndStage"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/darker_gray" />

    <Button
        android:id="@+id/btnEndStage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="@dimen/body_element_horizontal_margin"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:layout_toStartOf="@+id/btnSOS"
        android:background="@drawable/ic_rectangle_76"
        android:gravity="center" android:padding="8dip"
        android:text="@string/endStageButton"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnFlipCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="40dip"
        android:contentDescription="@string/chat_fab"
        app:backgroundTint="@color/green3"
        android:src="@drawable/ic_baseline_chat_bubble_outline_24" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnVideoOnOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="40dip"
        android:layout_toStartOf="@+id/btnFlipCamera"
        android:contentDescription="@string/chat_fab"
        android:src="@drawable/ic_baseline_videocam_24"
        app:backgroundTint="@color/colorYellow_2" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnSOS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="40dip"
        android:layout_toStartOf="@+id/btnVideoOnOff"
        android:contentDescription="@string/chat_fab"
        android:src="@drawable/ic_baseline_sos_24"
        app:backgroundTint="@color/red" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/outcomeTV"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/lato_bold"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="@dimen/body_element_horizontal_margin"
        android:textSize="20sp"
        android:textAlignment="center"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginBottom="40dp"/>


</RelativeLayout>