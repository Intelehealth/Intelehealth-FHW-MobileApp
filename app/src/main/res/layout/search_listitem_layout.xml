<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvParentFindPatientListItem"
    android:contentDescription="Find Patient List Item Parent CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/margin_10"
    android:layout_marginHorizontal="@dimen/margin_5"
    android:layout_marginTop="@dimen/margin_5"
    android:layout_marginBottom="24dp"
    app:cardElevation="@dimen/margin_5">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rlParentFindPatientListItem"
        android:contentDescription="Find Patient List Item Parent RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fu_margin_start"
                android:layout_weight="2.4">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvPatientImageFindPatientListItem"
                    android:contentDescription="Find Patient List Item Patient Image CardView"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_margin="2dp"
                    android:elevation="0dp"
                    app:cardCornerRadius="20dp">

                    <ImageView
                        android:id="@+id/ivPatientImageFindPatientListItem"
                        android:contentDescription="Find Patient List Item Patient Image ImageView"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/avatar1" />
                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:id="@+id/rlNameAgeDateFindPatientListItem"
                    android:contentDescription="Find Patient List Item Name Age Date RelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/fu_margin_start"
                    android:layout_toEndOf="@+id/cvPatientImageFindPatientListItem">

                    <!-- Label -->
                    <LinearLayout
                        android:id="@+id/llNameAgeFindPatientListItem"
                        android:contentDescription="Find Patient List Item Name Age Date RelativeLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/tvNameFindPatientListItem"
                            android:contentDescription="Find Patient List Item Name TextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:ellipsize="end"
                            android:fontFamily="@font/lato_bold"
                            android:gravity="center_vertical"
                            android:lineSpacingExtra="3sp"
                            android:maxLines="1"
                            android:text="test"
                            android:textAppearance="@style/label"
                            android:textColor="@null"
                            android:textSize="@dimen/fu_name_txt_size" />

                        <TextView
                            android:id="@+id/tvGenderAgeFindPatientListItem"
                            android:contentDescription="Find Patient List Item Gender Age TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/cal_margnin_start"
                            android:layout_toEndOf="@+id/tvNameFindPatientListItem"
                            android:gravity="center_vertical"
                            android:lineSpacingExtra="3sp"
                            android:text="@string/search_gender"
                            android:textAppearance="@style/label_misc_txt_14sp"
                            android:textColor="@null"
                            android:textSize="@dimen/fu_name_txt_size" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivCalendarFindPatientListItem"
                        android:contentDescription="Find Patient List Item Calendar ImageView"
                        android:layout_width="@dimen/cal_size"
                        android:layout_height="@dimen/cal_size"
                        android:layout_below="@+id/llNameAgeFindPatientListItem"
                        android:layout_marginTop="@dimen/cal_margin_top"
                        android:src="@drawable/followup_item_calendar" />

                    <TextView
                        android:id="@+id/tvDateTimeFindPatientListItem"
                        android:contentDescription="Find Patient List Item Date Time TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/llNameAgeFindPatientListItem"
                        android:layout_marginStart="@dimen/cal_margnin_start"
                        android:layout_marginTop="@dimen/cal_margnin_start"
                        android:layout_toEndOf="@+id/ivCalendarFindPatientListItem"
                        android:gravity="center_vertical"
                        android:lineSpacingExtra="3sp"
                        android:text="@string/search_date_txt"
                        android:textColor="@color/search_followup"
                        android:textSize="@dimen/fu_male_textsize" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvPrescReceivedFindPatientListItem"
                        android:contentDescription="Find Patient List Item Prescription Received CardView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvDateTimeFindPatientListItem"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="4dp"
                        android:visibility="gone"
                        tools:visibility="visible"
                        android:layout_marginHorizontal="2dp"
                        app:cardCornerRadius="3dp">

                        <LinearLayout
                            android:id="@+id/llPrescReceivedFindPatientListItem"
                            android:contentDescription="Find Patient List Item Prescription Received LinearLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/cardTintLightGreen"
                            android:orientation="horizontal"
                            android:paddingHorizontal="3dp">

                            <ImageView
                                android:id="@+id/ivPrescReceivedRecFindPatientListItem"
                                android:contentDescription="Find Patient List Item Prescription Received ImageView"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/prescription_icon_blue" />

                            <TextView
                                android:id="@+id/tvPrescReceivedFindPatientListItem"
                                android:contentDescription="Find Patient List Item Prescription Received TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingRight="3dp"
                                android:text="@string/presc_received"
                                android:textColor="#1B163A"
                                android:textSize="11sp" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvPrescPendingFindPatientListItem"
                        android:contentDescription="Find Patient List Item Prescription Pending CardView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvDateTimeFindPatientListItem"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="4dp"
                        android:visibility="gone"
                        android:layout_marginHorizontal="2dp"
                        app:cardCornerRadius="3dp">

                        <LinearLayout
                            android:id="@+id/llPrescPendingFindPatientListItem"
                            android:contentDescription="Find Patient List Item Prescription Pending LinearLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/cardTintLightOrange"
                            android:orientation="horizontal"
                            android:paddingHorizontal="3dp">

                            <ImageView
                                android:id="@+id/ivPrescPendingFindPatientListItem"
                                android:contentDescription="Find Patient List Item Prescription Pending ImageView"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/prescription_icon_blue" />

                            <TextView
                                android:id="@+id/tvPrescPendingFindPatientListItem"
                                android:contentDescription="Find Patient List Item Prescription Pending TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingRight="5dp"
                                android:text="@string/presc_pending"
                                android:textColor="#1B163A"
                                android:textSize="11sp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

            </RelativeLayout>

            <ImageView
                android:id="@+id/ivPriorityTagFindPatientListItem"
                android:contentDescription="Find Patient List Item Priority Tag ImageView"
                android:layout_width="0dp"
                android:layout_height="@dimen/search_priority_tag"
                android:layout_gravity="top|end|center"
                android:layout_marginTop="@dimen/fu_margin_start"
                android:layout_marginEnd="@dimen/fu_margin_start"
                android:layout_weight="0.6"
                android:gravity="center"
                android:lineSpacingExtra="0sp"
                android:src="@drawable/ui2_frame_priority" />

        </LinearLayout>


    </RelativeLayout>



</androidx.cardview.widget.CardView>
