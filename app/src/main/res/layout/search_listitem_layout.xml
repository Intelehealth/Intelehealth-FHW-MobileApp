<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fu_cardview_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_5"
    android:layout_marginTop="@dimen/margin_5"
    android:layout_marginBottom="24dp"
    app:cardCornerRadius="@dimen/margin_10"
    app:cardElevation="@dimen/margin_5">

    <RelativeLayout
        android:id="@+id/frame_10014"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fu_margin_start"
                android:layout_weight="2.4">

                <androidx.cardview.widget.CardView
                    android:id="@+id/profile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_margin="2dp"
                    android:elevation="0dp"
                    app:cardCornerRadius="20dp">

                    <ImageView
                        android:id="@+id/profile_imgview"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/avatar1" />
                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/fu_margin_start"
                    android:layout_toEndOf="@+id/profile">

                    <!-- Label -->
                    <LinearLayout
                        android:id="@+id/lll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/search_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:ellipsize="end"
                            android:fontFamily="@font/lato_bold"
                            android:gravity="center_vertical"
                            android:lineSpacingExtra="3sp"
                            android:maxLines="1"
                            android:text="test"
                            android:textAppearance="@style/label"
                            android:textColor="@null"
                            android:textSize="@dimen/fu_name_txt_size" />

                        <TextView
                            android:id="@+id/search_gender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/cal_margnin_start"
                            android:layout_toEndOf="@+id/search_name"
                            android:gravity="center_vertical"
                            android:lineSpacingExtra="3sp"
                            android:text="@string/search_gender"
                            android:textAppearance="@style/label_misc_txt_14sp"
                            android:textColor="@null"
                            android:textSize="@dimen/fu_name_txt_size" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/fu_item_calendar"
                        android:layout_width="@dimen/cal_size"
                        android:layout_height="@dimen/cal_size"
                        android:layout_below="@+id/lll"
                        android:layout_marginTop="@dimen/cal_margin_top"
                        android:src="@drawable/followup_item_calendar" />

                    <TextView
                        android:id="@+id/search_date_relative"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lll"
                        android:layout_marginStart="@dimen/cal_margnin_start"
                        android:layout_marginTop="@dimen/cal_margnin_start"
                        android:layout_toEndOf="@+id/fu_item_calendar"
                        android:gravity="center_vertical"
                        android:lineSpacingExtra="3sp"
                        android:text="@string/search_date_txt"
                        android:textColor="@color/search_followup"
                        android:textSize="@dimen/fu_male_textsize" />

                    <RelativeLayout
                        android:id="@+id/prescription_background"
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"
                        android:layout_below="@+id/search_date_relative"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="@dimen/fu_vs_margin_start"
                        android:background="@drawable/pres_received_drawable_rounded_corners"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/pres_status_text"
                            android:layout_width="wrap_content"
                            android:layout_height="26dp"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/lato_regular"
                            android:padding="@dimen/margin_3"
                            android:paddingVertical="@dimen/padding_5"
                            android:text="@string/tag_prescription_received"
                            android:textAlignment="center"
                            android:textColor="@color/ui2_black_text_color"
                            android:textSize="@dimen/text_12sp"
                            app:drawableStartCompat="@drawable/ic_pres_icon" />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/presc_tag_imgview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/search_date_relative"
                        android:layout_marginTop="@dimen/fu_vs_margin_start"
                        android:src="@drawable/ic_presc_received"
                        android:visibility="gone" />

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/priority_tag_imgview"
                android:layout_width="0dp"
                android:layout_height="@dimen/search_priority_tag"
                android:layout_gravity="top|end|center"
                android:layout_marginTop="@dimen/fu_margin_start"
                android:layout_marginEnd="@dimen/fu_margin_start"
                android:layout_weight="0.6"
                android:background="@drawable/drawable_priority_background"
                android:fontFamily="@font/lato_bold"
                android:gravity="center"
                android:lineSpacingExtra="0sp"
                android:text="@string/priority_uppercase"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="11sp"
                tools:visibility="visible" />

        </LinearLayout>


    </RelativeLayout>


</androidx.cardview.widget.CardView>
