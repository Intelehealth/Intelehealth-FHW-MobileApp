<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="activeBaselineMedical"
            type="Boolean" />

        <variable
            name="activeBaselineOther"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/std_16dp"
        android:paddingHorizontal="@dimen/std_48dp"
        android:paddingVertical="@dimen/std_16dp"
        app:layout_collapseMode="parallax">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvIndicatorBaselineGeneral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/std_8dp"
            android:gravity="center"
            android:text="@string/baseline_general"
            android:textAppearance="@style/personal_txtview"
            app:drawableTopCompat="@drawable/ic_baseline_general"
            app:layout_constraintEnd_toStartOf="@id/line_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/line_1"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_marginBottom="@dimen/std_24dp"
            android:contentDescription="@string/general_to_medical_info"
            android:src="@drawable/line_11"
            android:visibility="@{activeBaselineMedical ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@id/tvIndicatorBaselineGeneral"
            app:layout_constraintEnd_toStartOf="@id/tvIndicatorBaselineMedical"
            app:layout_constraintStart_toEndOf="@id/tvIndicatorBaselineGeneral"
            app:layout_constraintTop_toTopOf="@id/tvIndicatorBaselineGeneral" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvIndicatorBaselineMedical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/std_8dp"
            android:gravity="center"
            android:text="@string/baseline_medical"
            android:textAppearance="@style/personal_txtview"
            android:visibility="@{activeBaselineMedical ? View.VISIBLE : View.GONE}"
            app:drawableTopCompat="@drawable/ic_baseline_medical"
            app:layout_constraintEnd_toStartOf="@id/line_2"
            app:layout_constraintStart_toEndOf="@id/line_1"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/line_2"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_marginBottom="@dimen/std_24dp"
            android:contentDescription="@string/medical_to_other_info"
            android:src="@drawable/line_11"
            android:visibility="@{activeBaselineOther ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@id/tvIndicatorBaselineGeneral"
            app:layout_constraintEnd_toStartOf="@id/tvIndicatorBaselineOther"
            app:layout_constraintStart_toEndOf="@id/tvIndicatorBaselineMedical"
            app:layout_constraintTop_toTopOf="@id/tvIndicatorBaselineGeneral" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvIndicatorBaselineOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/std_8dp"
            android:gravity="center"
            android:text="@string/other_identification"
            android:textAppearance="@style/personal_txtview"
            android:visibility="@{activeBaselineOther ? View.VISIBLE : View.GONE}"
            app:drawableTopCompat="@drawable/ic_baseline_other"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/line_2"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>