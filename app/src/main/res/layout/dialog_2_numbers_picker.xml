<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llParentLayoutNumberPickerDialog"
    android:contentDescription="Number Picker Dialog Parent LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llQtyLayoutNumberPickerDialog"
        android:contentDescription="Number Picker Dialog Quantity LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <NumberPicker
            android:id="@+id/npQty1NumberPickerDialog"
            android:contentDescription="Number Picker Dialog Quantity 1 Picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:padding="@dimen/padding_card">

        </NumberPicker>
        <NumberPicker
            android:id="@+id/npQty2NumberPickerDialog"
            android:contentDescription="Number Picker Dialog Quantity 2 Picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:padding="@dimen/padding_card">

        </NumberPicker>
        <NumberPicker
            android:id="@+id/npQty3NumberPickerDialog"
            android:contentDescription="Number Picker Dialog Quantity 3 Picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_weight="4"
            android:padding="@dimen/padding_card">

        </NumberPicker>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llUnitLayoutNumberPickerDialog"
        android:contentDescription="Number Picker Dialog Unit LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvUnit1NumberPickerDialog"
            android:contentDescription="Number Picker Dialog Unit 1 TextView"            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/padding_card"
            android:fontFamily="@font/lato_regular"/>
        <TextView
            android:id="@+id/tvUnit2NumberPickerDialog"
            android:contentDescription="Number Picker Dialog Unit 2 TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/padding_card"
            android:fontFamily="@font/lato_regular"/>
        <TextView
            android:id="@+id/tvUnit3NumberPickerDialog"
            android:contentDescription="Number Picker Dialog Unit 3 TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/padding_card"
            android:fontFamily="@font/lato_regular"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlButtonLayoutNumberPickerDialog"
        android:contentDescription="Number Picker Dialog Buttons RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="30dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnCancelNumberPickerDialog"
            android:contentDescription="Number Picker Dialog Cancel Button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:background="@drawable/white_bg_button"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingTop="16dp"
            android:paddingRight="10dp"
            android:paddingBottom="16dp"
            android:text="@string/cancel"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnOkayNumberPickerDialog"
            android:contentDescription="Number Picker Dialog Okay Button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/btnCancelNumberPickerDialog"
            android:background="@drawable/darkblue_bg_button"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingTop="16dp"
            android:paddingRight="10dp"
            android:paddingBottom="16dp"
            android:text="@string/okay"
            android:textSize="14sp" />

    </RelativeLayout>
</LinearLayout>