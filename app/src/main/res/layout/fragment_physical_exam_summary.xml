<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlParentPhyExamSummaryFragment"
    android:contentDescription="Physical Exam Summary Fragment Parent RelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ayu.visit.physicalexam.PhysicalExamSummaryFragment">

    <RelativeLayout
        android:id="@+id/rlToolbarPhyExamSummaryFragment"
        android:contentDescription="Physical Examination Summary Fragment Toolbar RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="?actionBarSize"
        android:paddingHorizontal="@dimen/toolbar_margin_left">

        <ImageButton
            android:id="@+id/ibCancelPhysExamSummaryFragment"
            android:contentDescription="Physical Examination Summary Fragment Cancel ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:background="@null"
            app:srcCompat="@drawable/cancel_btn_cross" />


        <ImageButton
            android:id="@+id/ibRefreshPhysExamSummaryFragment"
            android:contentDescription="Physical Examination Summary Fragment Refresh ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/common_title_margin_top"
            android:layout_toStartOf="@+id/ibCancelPhysExamSummaryFragment"
            android:background="@null"
            app:srcCompat="@drawable/ic_refreshbtn" />


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/llButtonsPhysExamSummaryFragment"
        android:contentDescription="Physical Examination Summary Fragment Buttons LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="@dimen/button_skip_margin_start"
        android:layout_marginBottom="@dimen/button_skip_margin_bottom"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btnCancelPhyExamSummaryFragment"
            android:contentDescription="Physical Examination Summary Fragment Cancel Button"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="@drawable/ui2_common_input_bg"
            android:drawableTint="@color/iconTintWhite"
            android:lineHeight="@dimen/button_skip_line_height"
            android:paddingStart="@dimen/common_button_padding_left"
            android:paddingTop="@dimen/common_button_padding_top"
            android:paddingEnd="@dimen/common_button_padding_right"
            android:paddingBottom="@dimen/common_button_padding_bottom"
            android:text="@string/generic_back"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/common_button_text_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSubmitPhyExamSummaryFragment"
            android:contentDescription="Physical Examination Summary Fragment Submit Button"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_weight="1"
            android:background="@drawable/ui2_common_primary_bg"
            android:drawableEnd="@drawable/ui2_ic_baseline_arrow_forward_24"
            android:drawableTint="@color/iconTintWhite"
            android:lineHeight="@dimen/button_skip_line_height"
            android:paddingStart="@dimen/common_button_padding_left"
            android:paddingTop="@dimen/common_button_padding_top"
            android:paddingEnd="@dimen/common_button_padding_right"
            android:paddingBottom="@dimen/common_button_padding_bottom"
            android:text="@string/confirm"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/common_button_text_size" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsvPhyExamSummaryFragment"
        android:contentDescription="Physical Examination Summary Fragment NestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llButtonsPhysExamSummaryFragment"
        android:layout_below="@id/rlToolbarPhyExamSummaryFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/toolbar_margin_left">

            <ImageView
                android:id="@+id/ivIconPhyExamSummaryFragment"
                android:contentDescription="Physical Examination Summary Fragment Icon ImageView"
                android:layout_width="64dip"
                android:layout_height="64dip"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ui2_physical_exam_icon" />

            <TextView
                android:id="@+id/tvSubtitlePhyExamSummaryFragment"
                android:contentDescription="Physical Examination Summary Fragment Subtitle TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar"
                android:layout_marginTop="@dimen/margin_16"
                android:gravity="center"
                android:lineSpacingExtra="1sp"
                android:paddingHorizontal="@dimen/padding_12"
                android:text="@string/ui2_physical_exam_summay_title"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/toolbar_text_size"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/llSummaryPhyExamSummaryFragment"
                android:contentDescription="Physical Examination Summary Fragment Summary LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16"
                android:orientation="vertical">

            </LinearLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>