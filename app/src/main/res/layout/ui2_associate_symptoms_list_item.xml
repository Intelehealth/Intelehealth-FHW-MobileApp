<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_8"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/margin_8">


        <LinearLayout
            android:id="@+id/llActionViewAssSymListItem"
            android:contentDescription="Associated Symptom List Item Action View LinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvYesAssSymListItem"
                android:contentDescription="Associated Symptom List Item 'Yes' TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_10"
                android:background="@drawable/normal_white_reounded_bg"
                android:drawableStart="@drawable/ic_baseline_check_18_green"
                android:drawablePadding="@dimen/padding_7"
                android:gravity="center"
                android:lineSpacingExtra="1sp"
                android:maxLines="1"
                android:paddingHorizontal="@dimen/padding_10"
                android:paddingVertical="@dimen/padding_10"
                android:text="@string/yes"
                android:textColor="@color/ui2_black_text_color"
                android:textSize="12sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvNoAssSymListItem"
                android:contentDescription="Associated Symptom List Item 'No' TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/normal_white_reounded_bg"
                android:drawableStart="@drawable/ic_baseline_close_18_green"
                android:drawablePadding="@dimen/padding_7"
                android:gravity="center"
                android:lineSpacingExtra="1sp"
                android:maxLines="1"
                android:paddingHorizontal="@dimen/padding_10"
                android:paddingVertical="@dimen/padding_10"
                android:text="@string/no"
                android:textColor="@color/ui2_black_text_color"
                android:textSize="12sp"
                android:textStyle="normal" />


        </LinearLayout>

        <TextView
            android:id="@+id/tvQuestionAssSymListItem"
            android:contentDescription="Associated Symptom List Item Question TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_16"
            android:layout_toStartOf="@id/llActionViewAssSymListItem"
            android:fontFamily="sans-serif-black"
            android:lineSpacingExtra="1sp"
            android:text="Which part of the abdomen do you feel pain?"
            android:textColor="@color/ui2_black_text_color"
            android:textSize="14sp"
            android:textStyle="normal" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAssSymListItem"
        android:contentDescription="Associated Symptom List Item RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16"
        android:visibility="gone">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/llSingleComponentContainerAssSymListItem"
        android:contentDescription="Associated Symptom List Item LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_question_desc"
        android:layout_marginTop="@dimen/margin_16"
        android:orientation="vertical"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dip"
        android:layout_marginTop="@dimen/margin_8"
        android:background="@color/edittextBorder" />
</LinearLayout>