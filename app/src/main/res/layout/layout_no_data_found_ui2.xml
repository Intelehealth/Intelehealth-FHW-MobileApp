<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/flParentNoDataFound"
    android:contentDescription="No Data Found Parent FrameLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/toolbar_relative"
    android:layout_marginHorizontal="@dimen/fu_vs_margin_top"
    android:visibility="visible">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <ImageView
            android:id="@+id/ivSearchIconNoDataFound"
            android:contentDescription="No Data Found Search Icon ImageView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_search_icon_background"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvPatientNotFoundNoDataFound"
            android:contentDescription="No Data Found 'Patient Not Found' TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivSearchIconNoDataFound"
            android:layout_marginStart="30dp"
            android:layout_marginTop="12dp"
            android:lineSpacingExtra="4sp"
            android:text="@string/no_data_found"
            android:textAppearance="@style/you_can_add"
            android:textColor="@null"
            android:textSize="16sp"
            android:textStyle="bold" />


    </RelativeLayout>
</FrameLayout>

