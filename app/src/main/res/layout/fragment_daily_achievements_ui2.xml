<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/svParentDailyAchievements"
    android:contentDescription="Daily Achievements Parent ScrollView"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/llParentDailyAchievements"
        android:contentDescription="Daily Achievements Parent LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/date_frag_daily_parent_margin_top"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llDateDailyAchievements"
            android:contentDescription="Daily Achievements Date LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/date_frag_text_margin_start"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivDateIconDailyAchievements"
                android:contentDescription="Daily Achievements Date Icon ImageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ui2_ic_calendar" />

            <TextView
                android:id="@+id/tvTodayDateDailyAchievements"
                android:contentDescription="Daily Achievements Today's Date TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/daily_tab_date_margin_start"
                android:fontFamily="@font/lato_regular"
                android:text="1 March, 2022"
                android:textColor="@color/textColorGray"
                android:textSize="@dimen/date_frag_text_size"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llChild1DailyAchievements"
            android:contentDescription="Daily Achievements Child 1 LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/card1_common_achieve_margin_start"
            android:layout_marginTop="@dimen/card_daily_frag_margin_top"
            android:layout_marginEnd="@dimen/card1_common_achieve_margin_end"
            android:layout_marginBottom="@dimen/card1_common_achieve_margin_bottom"
            android:orientation="horizontal"
            android:weightSum="2">


            <LinearLayout
                android:id="@+id/llPatientAddedDailyAchievements"
                android:contentDescription="Daily Achievements Patient Added LinearLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/card1_achieve_margin_end"
                android:layout_weight="1"
                android:background="@drawable/ui2_patients_card_bg_1"
                android:orientation="vertical"
                android:padding="@dimen/card_common_achieve_padding">

                <ImageView
                    android:id="@+id/ivPatientAddedIconDailyAchievements"
                    android:contentDescription="Daily Achievements Patient Added Icon ImageView"
                    android:layout_width="@dimen/card_achieve_icon_width"
                    android:layout_height="@dimen/card_achieve_icon_height"
                    android:src="@drawable/ui2_icon_user_add" />

                <TextView
                    android:id="@+id/tvPatientAddedDescDailyAchievements"
                    android:contentDescription="Daily Achievements Patient Added Description TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/card_achieve_title_margin_top"
                    android:text="@string/patients_added"
                    android:textSize="@dimen/date_frag_layout_text_size" />

                <TextView
                    android:id="@+id/tvPatientAddedValueDailyAchievements"
                    android:contentDescription="Daily Achievements Patient Added Value TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/card_achieve_value_margin_top"
                    android:gravity="top"
                    android:lineHeight="@dimen/card_achieve_value_line_height"
                    android:lineSpacingExtra="@dimen/card_achieve_value_line_spacing"
                    android:textColor="@color/textColorBlack"
                    android:textSize="@dimen/card_achieve_value_textsize"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/llVisitCompletedDailyAchievements"
                android:contentDescription="Daily Achievements Visit Completed LinearLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/card1_achieve_margin_start"
                android:layout_weight="1"
                android:background="@drawable/ui2_patients_card_bg_blue"
                android:orientation="vertical"
                android:padding="@dimen/card_common_achieve_padding">

                <ImageView
                    android:id="@+id/ivVisitCompletedIconDailyAchievements"
                    android:contentDescription="Daily Achievements Visit Completed Icon ImageView"
                    android:layout_width="@dimen/card_achieve_icon_width"
                    android:layout_height="@dimen/card_achieve_icon_height"
                    android:src="@drawable/ui2_ic_icon_visits_completed" />

                <TextView
                    android:id="@+id/tvVisitCompletedDescDailyAchievements"
                    android:contentDescription="Daily Achievements Visit Completed Description TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/card_achieve_title_margin_top"
                    android:text="@string/visits_completed_by_you"
                    android:textSize="@dimen/date_frag_layout_text_size" />

                <TextView
                    android:id="@+id/tvVisitCompletedValueDailyAchievements"
                    android:contentDescription="Daily Achievements Visit Completed Value TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/card_achieve_value_margin_top"
                    android:gravity="top"
                    android:lineHeight="@dimen/card_achieve_value_line_height"
                    android:lineSpacingExtra="@dimen/card_achieve_value_line_spacing"
                    android:textColor="@color/textColorBlack"
                    android:textSize="@dimen/card_achieve_value_textsize"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llChild2DailyAchievements"
            android:contentDescription="Daily Achievements Child 2 LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/card2_common_achieve_margin_start"
            android:layout_marginEnd="@dimen/card2_common_achieve_margin_end"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/llSatisfactionScoreDailyAchievements"
                android:contentDescription="Daily Achievements Satisfaction Score LinearLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/card1_achieve_margin_end"
                android:layout_weight="1"
                android:background="@drawable/ui2_patients_card_bg_green"
                android:orientation="vertical"
                android:padding="@dimen/card_common_achieve_padding">

                <ImageView
                    android:id="@+id/ivSatisfactionScoreIconDailyAchievements"
                    android:contentDescription="Daily Achievements Satisfaction Score Icon ImageView"
                    android:layout_width="@dimen/card_achieve_icon_width"
                    android:layout_height="@dimen/card_achieve_icon_height"
                    android:src="@drawable/ui2_ic_star_score" />

                <TextView
                    android:id="@+id/tvSatisfactionScoreDescDailyAchievements"
                    android:contentDescription="Daily Achievements Satisfaction Score Description TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/card_achieve_title_margin_top"
                    android:text="@string/your_patient_score"
                    android:textSize="@dimen/date_frag_layout_text_size" />

                <TextView
                    android:id="@+id/tvSatisfactionScoreValueDailyAchievements"
                    android:contentDescription="Daily Achievements Satisfaction Score Value TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/card_achieve_value_margin_top"
                    android:gravity="top"
                    android:lineHeight="@dimen/card_achieve_value_line_height"
                    android:lineSpacingExtra="@dimen/card_achieve_value_line_spacing"
                    android:textColor="@color/textColorBlack"
                    android:textSize="@dimen/card_achieve_value_textsize"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/llTimeSpentDailyAchievements"
                android:contentDescription="Daily Achievements Time Spent LinearLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/card1_achieve_margin_start"
                android:layout_weight="1"
                android:background="@drawable/ui2_patients_card_bg_1"
                android:orientation="vertical"
                android:padding="@dimen/card_common_achieve_padding">

                <ImageView
                    android:id="@+id/ivTimeSpentIconDailyAchievements"
                    android:contentDescription="Daily Achievements Time Spent Icon ImageView"
                    android:layout_width="@dimen/card_achieve_icon_width"
                    android:layout_height="@dimen/card_achieve_icon_height"
                    android:src="@drawable/ui2_ic_time_spent" />

                <TextView
                    android:id="@+id/tvTimeSpentDescDailyAchievements"
                    android:contentDescription="Daily Achievements Time Spent Desc TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/card_achieve_title_margin_top"
                    android:text="@string/your_time_spent_today"
                    android:textSize="@dimen/date_frag_layout_text_size" />

                <TextView
                    android:id="@+id/tvTimeSpentValueDailyAchievements"
                    android:contentDescription="Daily Achievements Time Spent Value TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/card_achieve_value_margin_top"
                    android:lineHeight="@dimen/card_achieve_value_line_height"
                    android:lineSpacingExtra="@dimen/card_achieve_value_line_spacing"
                    android:textColor="@color/textColorBlack"
                    android:textSize="@dimen/card_achieve_value_textsize"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </LinearLayout>
</ScrollView>