<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cvAddressDetails"
    android:contentDescription="Patient Details Screen Address Details CardView"
    android:layout_below="@+id/personalCardPatientDetails"
    android:layout_marginStart="@dimen/toolbar_margin_left"
    android:layout_marginTop="@dimen/margin_20dp"
    android:layout_marginEnd="@dimen/toolbar_margin_left"
    app:cardCornerRadius="@dimen/hamburger_margin_start"
    app:cardElevation="@dimen/margin_5">

    <RelativeLayout
        android:id="@+id/rlParentAddressDetails"
        android:contentDescription="Patient Details Screen Address Details Parent RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fu_margin_start"
        android:layout_marginTop="@dimen/fu_margin_start"
        android:layout_marginEnd="@dimen/fu_margin_start"
        android:layout_marginBottom="@dimen/fu_card_margin_updown">

        <RelativeLayout
            android:id="@+id/rlHeaderAddressDetails"
            android:contentDescription="Patient Details Screen Address Details Header RelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivIconHeaderAddressDetails"
                android:contentDescription="Patient Details Screen Address Details Header Icon ImageView"
                android:layout_width="@dimen/edittext_height_44dp"
                android:layout_height="@dimen/edittext_height_44dp"
                android:src="@drawable/addresslocation_icon_unselected" />

            <TextView
                android:id="@+id/tvTitleHeaderAddressDetails"
                android:contentDescription="Patient Details Screen Address Details Header Title TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/hamburger_margin_start"
                android:layout_toEndOf="@+id/ivIconHeaderAddressDetails"
                android:gravity="center_vertical"
                android:lineSpacingExtra="3sp"
                android:text="@string/address_identification"
                android:textColor="@color/textview_color"
                android:textSize="@dimen/txtsize_patdetail_16sp" />

            <ImageView
                android:id="@+id/ivCollapseCardAddressDetails"
                android:contentDescription="Patient Details Screen Address Details Collapse Card Arrow ImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/chevron_up" />

        </RelativeLayout>

        <View
            android:id="@+id/viewDividerAddressDetails"
            android:contentDescription="Patient Details Screen Address Details Divider View"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rlHeaderAddressDetails"
            android:layout_marginTop="@dimen/fu_margin_start"
            android:layout_marginBottom="@dimen/fu_card_margin_updown"
            android:background="@color/notifi_divider_color" />

        <!--Personal Sub-Child-->
        <RelativeLayout
            android:id="@+id/rlDetailsParentAddressDetails"
            android:contentDescription="Patient Details Screen Address Details 'Details' Parent RelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewDividerAddressDetails">

            <TextView
                android:id="@+id/tvDetailsTitleAddressDetails"
                android:contentDescription="Patient Details Screen Address Details 'Details' Title TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="-3sp"
                android:text="@string/details"
                android:textColor="@color/textview_color"
                android:textSize="@dimen/txtsize_patdetail_16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_change_patdetail"
                android:layout_alignParentEnd="true"
                android:paddingHorizontal="4dp"
                android:id="@+id/llEditAddressDetails"
                android:contentDescription="Patient Details Screen Address Details Edit LinearLayout">

                <ImageView
                    android:id="@+id/ivEditIconAddressDetails"
                    android:contentDescription="Patient Details Screen Address Details Edit Icon ImageView"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/edit"/>

                <TextView
                    android:id="@+id/tvChangeTitleAddressDetails"
                    android:contentDescription="Patient Details Screen Address Details Change Title TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/change"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/lato_bold"
                    android:textColor="#2E1E91"/>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlDetailsChildAddressDetails"
            android:contentDescription="Patient Details Screen Address Details 'Details' Child RelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlDetailsParentAddressDetails"
            android:layout_marginTop="@dimen/hamburger_margin_start">

            <TableLayout
                android:id="@+id/tlDetailsAddressDetails"
                android:contentDescription="Patient Details Screen Address Details 'Details' TableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shrinkColumns="1">

                <TableRow
                    android:id="@+id/trPostalCodeAddressDetails"
                    android:contentDescription="Patient Details Screen Address Details 'Postal Code' TableRow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <TextView
                        android:id="@+id/tvPostalCodeAddressDetails"
                        android:contentDescription="Patient Details Screen Address Details 'Postal Code' Textview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="@dimen/margin_5"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/bullet_gray"
                        android:text="@string/identification_screen_prompt_postal_code"
                        android:drawablePadding="5dp"
                        android:textAppearance="@style/caption"
                        android:textColor="@color/hint_text_color"
                        android:textSize="@dimen/find_patient_hint_size" />

                    <TextView
                        android:id="@+id/tvPostalCodeValueAddressDetails"
                        android:contentDescription="Patient Details Screen Address Details 'Postal Code' Value Textview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="422101"
                        android:textAppearance="@style/caption"
                        android:textColor="@color/textview_color"
                        android:textSize="@dimen/find_patient_hint_size" />
                </TableRow>

                <!--Gender-->
                <TableRow
                    android:id="@+id/trCountryAddressDetails"
                    android:contentDescription="Patient Details Screen Address Details 'Country' TableRow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_4"
                    android:layout_weight="2">

                    <TextView
                        android:id="@+id/tvCountryAddressDetails"
                        android:contentDescription="Patient Details Screen Address Details 'Country' TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="@dimen/margin_5"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/bullet_gray"
                        android:text="@string/country"
                        android:drawablePadding="5dp"
                        android:textAppearance="@style/caption"
                        android:textColor="@color/hint_text_color"
                        android:textSize="@dimen/find_patient_hint_size" />

                    <TextView
                        android:id="@+id/tvCountryValueAddressDetails"
                        android:contentDescription="Patient Details Screen Address Details 'Country' Value TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="India"
                        android:textAppearance="@style/caption"
                        android:textColor="@color/textview_color"
                        android:textSize="@dimen/find_patient_hint_size" />
                </TableRow>

                <!--Date of birth-->
                <TableRow
                    android:id="@+id/trStateAddressDetails"
                    android:contentDescription="Patient Details Screen Address Details 'State' TableRow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_4"
                    android:layout_weight="2">

                    <TextView
                        android:id="@+id/tvStateAddressDetails"
                        android:contentDescription="Patient Details Screen Address Details 'State' TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="@dimen/margin_5"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/bullet_gray"
                        android:text="@string/state"
                        android:drawablePadding="5dp"
                        android:textAppearance="@style/caption"
                        android:textColor="@color/hint_text_color"
                        android:textSize="@dimen/find_patient_hint_size" />

                    <TextView
                        android:id="@+id/tvStateValueAddressDetails"
                        android:contentDescription="Patient Details Screen Address Details 'State' Value TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Maharashtra"
                        android:textAppearance="@style/caption"
                        android:textColor="@color/textview_color"
                        android:textSize="@dimen/find_patient_hint_size" />
                </TableRow>

                <!--Age-->
                <TableRow
                    android:id="@+id/trDistrictAddressDetails"
                    android:contentDescription="Patient Details Screen Address Details 'District' TableRow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_4"
                    android:layout_weight="2">

                    <TextView
                        android:id="@+id/tvDistrictAddressDetails"
                        android:contentDescription="Patient Details Screen Address Details 'District' TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="@dimen/margin_5"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/bullet_gray"
                        android:text="@string/district"
                        android:drawablePadding="5dp"
                        android:textAppearance="@style/caption"
                        android:textColor="@color/hint_text_color"
                        android:textSize="@dimen/find_patient_hint_size" />

                    <TextView
                        android:id="@+id/tvDistrictValueAddressDetails"
                        android:contentDescription="Patient Details Screen Address Details 'District' Value TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Nashik"
                        android:textAppearance="@style/caption"
                        android:textColor="@color/textview_color"
                        android:textSize="@dimen/find_patient_hint_size" />
                </TableRow>

                <!--Phone number-->
                <TableRow
                    android:id="@+id/trVillageAddressDetails"
                    android:contentDescription="Patient Details Screen Address Details 'Village' TableRow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_4"
                    android:layout_weight="2">

                    <TextView
                        android:id="@+id/tvVillageAddressDetails"
                        android:contentDescription="Patient Details Screen Address Details 'Village' TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="@dimen/margin_5"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/bullet_gray"
                        android:text="@string/village_town_city"
                        android:drawablePadding="5dp"
                        android:textAppearance="@style/caption"
                        android:textColor="@color/hint_text_color"
                        android:textSize="@dimen/find_patient_hint_size" />

                    <TextView
                        android:id="@+id/tvVillageValueAddressDetails"
                        android:contentDescription="Patient Details Screen Address Details 'Village' Value TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Dwarka"
                        android:textAppearance="@style/caption"
                        android:textColor="@color/textview_color"
                        android:textSize="@dimen/find_patient_hint_size" />
                </TableRow>

                <!-- Address 1-->
                <TableRow
                    android:id="@+id/trCorrAddress1AddressDetails"
                    android:contentDescription="Patient Details Screen Address Details 'Corresponding Address 1' TableRow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_4"
                    android:layout_weight="2">

                    <TextView
                        android:id="@+id/tvCorrAddress1AddressDetails"
                        android:contentDescription="Patient Details Screen Address Details 'Corresponding Address 1' TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="@dimen/margin_5"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/bullet_gray"
                        android:text="@string/_corresponding_address_1"
                        android:drawablePadding="5dp"
                        android:textAppearance="@style/caption"
                        android:textColor="@color/hint_text_color"
                        android:textSize="@dimen/find_patient_hint_size" />

                    <TextView
                        android:id="@+id/tvCorrAddress1ValueAddressDetails"
                        android:contentDescription="Patient Details Screen Address Details 'Corresponding Address 1' Value TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="444, Kathe lane, Dwarka, Nasik"
                        android:textAppearance="@style/caption"
                        android:textColor="@color/textview_color"
                        android:textSize="@dimen/find_patient_hint_size" />
                </TableRow>


            </TableLayout>

        </RelativeLayout>


    </RelativeLayout>
</androidx.cardview.widget.CardView>
