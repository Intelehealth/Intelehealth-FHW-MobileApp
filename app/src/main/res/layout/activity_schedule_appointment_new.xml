<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/rlParentScheduleAppointment"
    android:contentDescription="Schedule Appointment Parent RelativeLayout"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingStart="@dimen/schedule_app_padding_start_end"
    android:paddingEnd="@dimen/schedule_app_padding_start_end"
    tools:context=".appointmentNew.ScheduleAppointmentActivity_New">

    <include
        android:id="@+id/layoutToolbarScheduleAppointment"
        android:contentDescription="Schedule Appointment Toolbar Layout"
        layout="@layout/toolbar_common_new2_ui2" />

    <RelativeLayout
        android:id="@+id/rlDateSelectorScheduleAppointment"
        android:contentDescription="Schedule Appointment Date Selector RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutToolbarScheduleAppointment"
        android:layout_marginTop="@dimen/schedule_app_margin_top"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivDateSelectorScheduleAppointment"
            android:contentDescription="Schedule Appointment Date Selector ImageView"
            android:layout_width="@dimen/iv_time_height_width"
            android:layout_height="@dimen/iv_time_height_width"
            android:src="@drawable/ui2_ic_calendar" />

        <TextView
            android:id="@+id/tvSelectedMonthYearScheduleAppointment"
            android:contentDescription="Schedule Appointment Selected Month Year TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/hor_calview_month_margin_start"
            android:layout_marginTop="@dimen/hor_calview_month_margin_top"
            android:layout_toEndOf="@+id/ivDateSelectorScheduleAppointment"
            android:hint="November, 2022"
            android:lineHeight="@dimen/hor_calview_month_line_height"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/hor_calview_month_text_size"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/llPrevNextArrowScheduleAppointment"
            android:contentDescription="Schedule Appointment Prev Next Arrow LinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivPrevArrowScheduleAppointment"
                android:contentDescription="Schedule Appointment Prev Arrow ImageView"
                android:layout_width="@dimen/iv_time_height_width"
                android:layout_height="@dimen/iv_time_height_width"
                android:layout_marginEnd="@dimen/iv_prev_month_margin_end"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ui2_ic_chevron_left" />

            <ImageView
                android:id="@+id/ivNextArrowScheduleAppointment"
                android:contentDescription="Schedule Appointment Next Arrow ImageView"
                android:layout_width="@dimen/iv_time_height_width"
                android:layout_height="@dimen/iv_time_height_width"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ui2_ic_chevron_right"
                app:tint="@color/colorPrimary" />
        </LinearLayout>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvHorizontalCalScheduleAppointment"
        android:contentDescription="Schedule Appointment Horizontal Calendar RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlDateSelectorScheduleAppointment"
        android:layout_marginTop="@dimen/rv_hor_calview_margin_top" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/rvHorizontalCalScheduleAppointment"
        android:layout_marginBottom="@dimen/schedule_app_margin_bottom"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/schedule_app_margin_bottom1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvPrevAppoDetails1ScheduleAppointment"
                    android:contentDescription="Schedule Appointment 'Previous Appointment Details' 1 TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/tv_reschedule_margin_top"
                    android:text="@string/previously_scheduled_appointment_details"
                    android:textColor="@color/textColorGray"
                    android:visibility="gone"
                    tools:visibility="visible"/>

                <TextView
                    android:id="@+id/tvPrevAppoDetails2ScheduleAppointment"
                    android:contentDescription="Schedule Appointment 'Previous Appointment Details' 2 TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColorBlack"
                    android:visibility="gone"
                    tools:visibility="visible"/>

                <TextView
                    android:id="@+id/tvPickTimeSlotScheduleAppointment"
                    android:contentDescription="Schedule Appointment 'Pick time slot' TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/tv_pick_slot_margin_top"
                    android:text="@string/pick_time_slot"
                    android:textColor="@color/textColorGray"
                    android:textSize="@dimen/tv_pick_slot_text_size" />

                <TextView
                    android:id="@+id/tvMorningLabelScheduleAppointment"
                    android:contentDescription="Schedule Appointment Morning Label TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/tv_slot_time_margin_top"
                    android:drawableStart="@drawable/ui2_ic_sunrise"
                    android:drawablePadding="@dimen/tv_slot_time_drawable_padding"
                    android:drawableTint="@color/colorPrimary1"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="3sp"
                    android:text="@string/morning"
                    android:textColor="@color/textColorBlack"
                    android:textSize="@dimen/tv_slot_time_text_size"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvMorningSlotsScheduleAppointment"
                    android:contentDescription="Morning Slots Schedule Appointment RecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/rv_hor_calview_margin_top" />

                <TextView
                    android:id="@+id/tvAfternoonLabelScheduleAppointment"
                    android:contentDescription="Schedule Appointment Afternoon Label TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/tv_slot_time_noon_margin_top"
                    android:drawableStart="@drawable/ui2_ic_afternoon"
                    android:drawablePadding="@dimen/tv_slot_time_drawable_padding"
                    android:drawableTint="@color/colorPrimary1"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="3sp"
                    android:text="@string/afternoon"
                    android:textColor="@color/textColorBlack"
                    android:textSize="@dimen/tv_slot_time_text_size"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvAfternoonSlotsScheduleAppointment"
                    android:contentDescription="Afternoon Slots Schedule Appointment RecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/rv_hor_calview_margin_top" />

                <TextView
                    android:id="@+id/tvEveningLabelScheduleAppointment"
                    android:contentDescription="Schedule Appointment Evening Label TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/tv_slot_time_margin_top"
                    android:drawableStart="@drawable/ui2_ic_sunset"
                    android:drawablePadding="@dimen/tv_slot_time_drawable_padding"
                    android:drawableTint="@color/colorPrimary1"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="3sp"
                    android:text="@string/evening"
                    android:textColor="@color/textColorBlack"
                    android:textSize="@dimen/tv_slot_time_text_size"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvEveningSlotsScheduleAppointment"
                    android:contentDescription="Evening Slots Schedule Appointment RecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/rv_hor_calview_margin_top" />
            </LinearLayout>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/btnBookAppointmentScheduleAppointment"
        android:contentDescription="Schedule Appointment 'Book Appointment' Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/button_setup1_margin_top"
        android:layout_marginBottom="@dimen/button_setup1_margin_bottom"
        android:background="@drawable/ui2_common_primary_bg"
        android:paddingStart="@dimen/common_button_padding_left"
        android:paddingTop="@dimen/common_button_padding_top"
        android:paddingEnd="@dimen/common_button_padding_right"
        android:paddingBottom="@dimen/common_button_padding_bottom"
        android:text="@string/book_appointment"
        android:textSize="@dimen/common_button_text_size" />

    <TextView
        android:id="@+id/tvNoSlotAvailableScheduleAppointment"
        android:contentDescription="Schedule Appointment 'No Slot Available' TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:paddingHorizontal="24dip"
        android:text="@string/slot_empty_message"
        android:textColor="@color/gray_4_1"
        android:textSize="16sp" />

</RelativeLayout>