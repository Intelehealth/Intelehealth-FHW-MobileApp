<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rlParentIdentificationSecondScreen"
    android:contentDescription="Identification Second Screen Parent RelativeLayout"
    android:layout_marginTop="@dimen/margin_16dp"
    android:layout_marginBottom="@dimen/margin_16dp">

    <ScrollView
        android:id="@+id/svParentIdentificationSecondScreen"
        android:contentDescription="Identification Second Screen Parent ScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/flNextIdentificationActivity"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/margin_24"
        android:fillViewport="true">

        <RelativeLayout
            android:id="@+id/rlChildIdentificationSecondScreen"
            android:contentDescription="Identification Second Screen Child RelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_24"
            android:layout_marginEnd="@dimen/margin_24">

            <LinearLayout
                android:id="@+id/llPostalCodeCountryIdentificationSecondScreen"
                android:contentDescription="Identification Second Screen Postal Code Country LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llPostalCodeIdentificationSecondScreen"
                    android:contentDescription="Identification Second Screen Postal Code LinearLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvPostalCodeTitleIdentificationSecondScreen"
                        android:contentDescription="Identification Second Screen Postal Code Title TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="3sp"
                        android:text="@string/identification_screen_prompt_postal_code"
                        android:textAppearance="@style/blur_txtview"
                        android:textSize="@null" />

                    <EditText
                        android:id="@+id/etPostalCodeIdentificationSecondScreen"
                        android:contentDescription="Identification Second Screen Postal Code EditText"
                        style="@style/edittext_textcolor"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edittext_height_44dp"
                        android:layout_marginTop="@dimen/common_edittext_margin_top"
                        android:background="@drawable/edittext_border"
                        android:hint="@string/enter_postal_code"
                        android:inputType="number"
                        android:maxLength="6"
                        android:maxLines="1"
                        android:paddingStart="@dimen/fu_margin_start"
                        android:paddingTop="@dimen/margin_10"
                        android:paddingBottom="@dimen/margin_10"
                        android:textColorHint="@color/edittext_hint_color"
                        android:textSize="@dimen/edittext_textsize_16sp" />

                    <TextView
                        android:id="@+id/tvPostalCodeErrorIdentificationSecondScreen"
                        android:contentDescription="Identification Second Screen Postal Code Error TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="@dimen/hamburger_margin_start"
                        android:lineSpacingExtra="0sp"
                        android:text="@string/this_field_is_mandatory"
                        android:textAppearance="@style/registr_error_msg"
                        android:textColor="@color/red"
                        android:textSize="@null"
                        android:visibility="gone"
                        tools:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llCountryIdentificationSecondScreen"
                    android:contentDescription="Identification Second Screen Country LinearLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvCountryTitleIdentificationSecondScreen"
                        android:contentDescription="Identification Second Screen Country Title TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="3sp"
                        android:text="@string/identification_screen_prompt_country"
                        android:textAppearance="@style/blur_txtview"
                        android:textSize="@null" />

                    <Spinner
                        android:id="@+id/spinnerCountryIdentificationSecondScreen"
                        android:contentDescription="Identification Second Screen Country Spinner"
                        style="@style/AppTheme"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edittext_height_44dp"
                        android:layout_marginTop="@dimen/common_edittext_margin_top"
                        android:background="@drawable/ui2_spinner_background_new"
                        android:dropDownVerticalOffset="56dp"
                        android:paddingStart="@dimen/fu_margin_start"
                        android:paddingTop="@dimen/margin_10"
                        android:paddingEnd="@dimen/margin_16dp"
                        android:paddingBottom="@dimen/margin_10" />

                    <TextView
                        android:id="@+id/tvCountryErrorIdentificationSecondScreen"
                        android:contentDescription="Identification Second Screen Country Error TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="@dimen/hamburger_margin_start"
                        android:lineSpacingExtra="0sp"
                        android:text="@string/this_field_is_mandatory"
                        android:textAppearance="@style/registr_error_msg"
                        android:textColor="@color/red"
                        android:textSize="@null"
                        android:visibility="gone"
                        tools:visibility="visible" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llStateIdentificationSecondScreen"
                android:contentDescription="Identification Second Screen State LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llPostalCodeCountryIdentificationSecondScreen"
                android:layout_marginTop="@dimen/margin_24"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvStateTitleIdentificationSecondScreen"
                    android:contentDescription="Identification Second Screen State Title TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="3sp"
                    android:text="@string/identification_screen_prompt_state"
                    android:textAppearance="@style/blur_txtview"
                    android:textSize="@null" />

                <Spinner
                    android:id="@+id/spinnerStateIdentificationSecondScreen"
                    android:contentDescription="Identification Second Screen State Spinner"
                    style="@style/AppTheme"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext_height_44dp"
                    android:layout_marginTop="@dimen/common_edittext_margin_top"
                    android:background="@drawable/ui2_spinner_background_new"
                    android:dropDownVerticalOffset="56dp"
                    android:entries="@array/states_india"
                    android:paddingStart="@dimen/fu_margin_start"
                    android:paddingTop="@dimen/margin_10"
                    android:paddingEnd="@dimen/margin_16dp"
                    android:paddingBottom="@dimen/margin_10" />

                <EditText
                    android:id="@+id/etStateIdentificationSecondScreen"
                    android:contentDescription="Identification Second Screen State EditText"
                    style="@style/edittext_textcolor"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext_height_44dp"
                    android:layout_marginTop="@dimen/common_edittext_margin_top"
                    android:background="@drawable/edittext_border"
                    android:hint="@string/enter_state"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingStart="@dimen/fu_margin_start"
                    android:paddingTop="@dimen/margin_10"
                    android:paddingBottom="@dimen/margin_10"
                    android:textColorHint="@color/edittext_hint_color"
                    android:textSize="@dimen/edittext_textsize_16sp"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/tvStateErrorIdentificationSecondScreen"
                    android:contentDescription="Identification Second Screen State Error TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/hamburger_margin_start"
                    android:lineSpacingExtra="0sp"
                    android:text="@string/this_field_is_mandatory"
                    android:textAppearance="@style/registr_error_msg"
                    android:textColor="@color/red"
                    android:textSize="@null"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </LinearLayout>

            <!--District & City-->
            <LinearLayout
                android:id="@+id/llDistrictVillageIdentificationSecondScreen"
                android:contentDescription="Identification Second Screen District Village LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llStateIdentificationSecondScreen"
                android:layout_marginTop="@dimen/margin_24"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llDistrictIdentificationSecondScreen"
                    android:contentDescription="Identification Second Screen District LinearLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvDistrictTitleIdentificationSecondScreen"
                        android:contentDescription="Identification Second Screen District Title TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="3sp"
                        android:text="@string/identification_screen_prompt_district"
                        android:textAppearance="@style/blur_txtview"
                        android:textSize="@null" />

                    <Spinner
                        android:id="@+id/spinnerDistrictIdentificationSecondScreen"
                        android:contentDescription="Identification Second Screen District Spinner"
                        style="@style/AppTheme"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edittext_height_44dp"
                        android:layout_marginTop="@dimen/common_edittext_margin_top"
                        android:background="@drawable/ui2_spinner_background_new"
                        android:dropDownVerticalOffset="56dp"
                        android:paddingStart="@dimen/fu_margin_start"
                        android:paddingTop="@dimen/margin_10"
                        android:paddingEnd="@dimen/margin_16dp"
                        android:paddingBottom="@dimen/margin_10" />

                    <EditText
                        android:id="@+id/etDistrictIdentificationSecondScreen"
                        android:contentDescription="Identification Second Screen District EditText"
                        style="@style/edittext_textcolor"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edittext_height_44dp"
                        android:layout_marginTop="@dimen/common_edittext_margin_top"
                        android:background="@drawable/edittext_border"
                        android:hint="@string/enter_district"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingStart="@dimen/fu_margin_start"
                        android:paddingTop="@dimen/margin_10"
                        android:paddingBottom="@dimen/margin_10"
                        android:textColorHint="@color/edittext_hint_color"
                        android:textSize="@dimen/edittext_textsize_16sp"
                        android:visibility="gone"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/tvDistrictErrorIdentificationSecondScreen"
                        android:contentDescription="Identification Second Screen District Error TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="@dimen/hamburger_margin_start"
                        android:lineSpacingExtra="0sp"
                        android:text="@string/this_field_is_mandatory"
                        android:textAppearance="@style/registr_error_msg"
                        android:textColor="@color/red"
                        android:textSize="@null"
                        android:visibility="gone"
                        tools:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llVillageIdentificationSecondScreen"
                    android:contentDescription="Identification Second Screen Village LinearLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvVillageTitleIdentificationSecondScreen"
                        android:contentDescription="Identification Second Screen Village Title TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="3sp"
                        android:text="@string/identification_screen_prompt_city"
                        android:textAppearance="@style/blur_txtview"
                        android:textSize="@null" />

                    <Spinner
                        android:id="@+id/spinnerVillageIdentificationSecondScreen"
                        android:contentDescription="Identification Second Screen Village Spinner"
                        style="@style/AppTheme"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edittext_height_44dp"
                        android:layout_marginTop="@dimen/common_edittext_margin_top"
                        android:background="@drawable/ui2_spinner_background_new"
                        android:entries="@array/navi_mumbai_city"
                        android:paddingStart="@dimen/fu_margin_start"
                        android:paddingTop="@dimen/margin_10"
                        android:paddingEnd="@dimen/margin_16dp"
                        android:paddingBottom="@dimen/margin_10"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/etVillageIdentificationSecondScreen"
                        android:contentDescription="Identification Second Screen Village EditText"
                        style="@style/edittext_textcolor"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edittext_height_44dp"
                        android:layout_marginTop="@dimen/common_edittext_margin_top"
                        android:background="@drawable/edittext_border"
                        android:textAllCaps="true"
                        android:hint="@string/enter_village_town_city"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingStart="@dimen/fu_margin_start"
                        android:paddingTop="@dimen/margin_10"
                        android:paddingBottom="@dimen/margin_10"
                        android:textColorHint="@color/edittext_hint_color"
                        android:textSize="@dimen/edittext_textsize_16sp" />

                    <TextView
                        android:id="@+id/tvVillageErrorIdentificationSecondScreen"
                        android:contentDescription="Identification Second Screen Village Error TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="@dimen/hamburger_margin_start"
                        android:lineSpacingExtra="0sp"
                        android:text="@string/this_field_is_mandatory"
                        android:textAppearance="@style/registr_error_msg"
                        android:textColor="@color/red"
                        android:textSize="@null"
                        android:visibility="gone"
                        tools:visibility="visible" />

                </LinearLayout>
            </LinearLayout>

            <!--Address 1-->
            <LinearLayout
                android:id="@+id/llCorrespondingAddress1IdentificationSecondScreen"
                android:contentDescription="Identification Second Screen Corresponding Address1 LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llDistrictVillageIdentificationSecondScreen"
                android:layout_marginTop="@dimen/margin_24"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCorrespondingAddress1TitleIdentificationSecondScreen"
                    android:contentDescription="Identification Second Screen Corresponding Address1 Title TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="3sp"
                    android:text="@string/corresponding_address_1"
                    android:textAppearance="@style/blur_txtview"
                    android:textSize="@null" />

                <EditText
                    android:id="@+id/etCorrespondingAddress1IdentificationSecondScreen"
                    android:contentDescription="Identification Second Screen Corresponding Address1 EditText"
                    style="@style/edittext_textcolor"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext_height_44dp"
                    android:layout_marginTop="@dimen/common_edittext_margin_top"
                    android:background="@drawable/edittext_border"
                    android:hint="@string/enter_patient_address"
                    android:inputType="textCapWords"
                    android:paddingStart="@dimen/fu_margin_start"
                    android:paddingTop="@dimen/margin_10"
                    android:paddingBottom="@dimen/margin_10"
                    android:textColorHint="@color/edittext_hint_color"
                    android:textSize="@dimen/edittext_textsize_16sp" />

                <TextView
                    android:id="@+id/tvCorrespondingAddress1ErrorIdentificationSecondScreen"
                    android:contentDescription="Identification Second Screen Corresponding Address1 Error TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/hamburger_margin_start"
                    android:lineSpacingExtra="0sp"
                    android:text="@string/this_field_is_mandatory"
                    android:textAppearance="@style/registr_error_msg"
                    android:textColor="@color/red"
                    android:textSize="@null"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </LinearLayout>

            <!--Address 2-->
            <LinearLayout
                android:id="@+id/llCorrespondingAddress2IdentificationSecondScreen"
                android:contentDescription="Identification Second Screen Corresponding Address2 LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llCorrespondingAddress1IdentificationSecondScreen"
                android:layout_marginTop="@dimen/margin_24"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCorrespondingAddress2TitleIdentificationSecondScreen"
                    android:contentDescription="Identification Second Screen Corresponding Address2 Title TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="3sp"
                    android:text="@string/corresponding_address_2"
                    android:textAppearance="@style/blur_txtview"
                    android:textSize="@null" />

                <EditText
                    android:id="@+id/etCorrespondingAddress2IdentificationSecondScreen"
                    android:contentDescription="Identification Second Screen Corresponding Address2 EditText"
                    style="@style/edittext_textcolor"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext_height_44dp"
                    android:layout_marginTop="@dimen/common_edittext_margin_top"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:background="@drawable/edittext_border"
                    android:hint="@string/enter_patient_address"
                    android:inputType="textCapWords"
                    android:paddingStart="@dimen/fu_margin_start"
                    android:paddingTop="@dimen/margin_10"
                    android:paddingBottom="@dimen/margin_10"
                    android:textColorHint="@color/edittext_hint_color"
                    android:textSize="@dimen/edittext_textsize_16sp" />

                <TextView
                    android:id="@+id/tvCorrespondingAddress2ErrorIdentificationSecondScreen"
                    android:contentDescription="Identification Second Screen Corresponding Address2 Error TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/hamburger_margin_start"
                    android:lineSpacingExtra="0sp"
                    android:text="@string/this_field_is_mandatory"
                    android:textAppearance="@style/registr_error_msg"
                    android:textColor="@color/red"
                    android:textSize="@null"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </LinearLayout>


        </RelativeLayout>
    </ScrollView>


    <FrameLayout
        android:id="@+id/flNextIdentificationActivity"
        android:contentDescription="Identification Activity Buttons FrameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_24">

        <LinearLayout
            android:id="@+id/llButtonsIdentificationSecondScreen"
            android:contentDescription="Identification Second Screen Buttons LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="visible">

            <Button
                android:id="@+id/btnBackIdentificationSecondScreen"
                android:contentDescription="Identification Second Screen Back Button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fu_btn_size"
                android:layout_marginStart="@dimen/margin_24"
                android:layout_marginEnd="@dimen/space_12dp"
                android:layout_weight="1"
                android:background="@drawable/ui2_common_primary_bg_disabled"
                android:text="@string/generic_back"
                android:textColor="@color/primary_text" />

            <Button
                android:id="@+id/btnNextIdentificationSecondScreen"
                android:contentDescription="Identification Second Screen Next Button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fu_btn_size"
                android:layout_marginEnd="@dimen/margin_24"
                android:layout_marginStart="@dimen/space_12dp"
                android:layout_toEndOf="@+id/btn_back_firstscreen"
                android:layout_weight="1"
                android:background="@drawable/ui2_common_primary_bg"
                android:drawableEnd="@drawable/ui2_ic_baseline_arrow_forward_24"
                android:paddingHorizontal="@dimen/margin_10"
                android:text="@string/next" />
        </LinearLayout>
    </FrameLayout>


</RelativeLayout>