<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/frame_10021"
    tools:context=".activities.aboutus.AboutUsActivity">

    <!--    Toolbar - start -->
    <RelativeLayout
        android:id="@+id/rlToolbarParentAboutUs"
        android:contentDescription="About Us Toolbar Parent Relative Layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/followup_toolbar"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/toolbar_top_minus_24dp"
        android:background="@drawable/frame_10021">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/followup_toolbar"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/fu_margin_start"
            android:layout_marginTop="@dimen/toolbar_margin_top"
            android:layout_marginRight="@dimen/fu_margin_start"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/llToolbarChildAboutUs"
                android:contentDescription="About Us Toolbar Child Linear Layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.7"
                android:orientation="horizontal">

                <!-- arrow-right -->
                <ImageButton
                    android:id="@+id/ivBackArrowAboutUs"
                    android:contentDescription="About Us Back Arrow ImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:onClick="backPress"
                    android:padding="@dimen/margin_5"
                    android:src="@drawable/ic_arrow_right" />

                <!-- Label -->
                <TextView
                    android:id="@+id/tvTitleAboutUs"
                    android:contentDescription="About Us Title TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/fu_margin_start"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="1sp"
                    android:text="@string/about_us"
                    android:textAppearance="@style/label"
                    android:textSize="@dimen/toolbar_text_size"
                    android:textStyle="bold"
                    android:translationY="-0.28sp" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/ibRefreshAboutUs"
                android:contentDescription="About Us Refresh ImageButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="@null"
                android:src="@drawable/ic_refreshbtn" />

        </LinearLayout>
    </RelativeLayout>
    <!--    Toolbar - end -->

    <!--Scrollbar - Start -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlToolbarParentAboutUs"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvDisplayImagesAboutUs"
                android:contentDescription="About Us Display Images Horizontal Recycler View"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_24"
                android:layout_marginTop="@dimen/margin_12"
                android:layout_marginEnd="@dimen/margin_24"
                android:scrollIndicators="none"
                android:scrollbars="none"
                tools:itemCount="1"
                tools:listitem="@layout/aboutus_listitem" />

            <TextView
                android:id="@+id/tvDescriptionAboutUs"
                android:contentDescription="About Us Description TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rvDisplayImagesAboutUs"
                android:layout_marginStart="@dimen/margin_24"
                android:layout_marginTop="@dimen/margin_24"
                android:layout_marginEnd="@dimen/margin_24"
                android:justificationMode="inter_word"
                android:text="@string/aboutus_text"
                android:textColor="@color/textview_color"
                android:textSize="@dimen/txtsize_patdetail_14sp" />

            <RelativeLayout
                android:id="@+id/rlVisitWebsiteAboutUs"
                android:contentDescription="About Us Visit Website Relative Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDescriptionAboutUs"
                android:layout_marginStart="@dimen/margin_24"
                android:layout_marginTop="@dimen/margin_24"
                android:layout_marginEnd="@dimen/margin_24"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/ivVisitWebsiteIconAboutUs"
                    android:contentDescription="About Us Visit Website Icon ImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/globe_blue_svg" />

                <TextView
                    android:id="@+id/tvVisitWebsiteLinkAboutUs"
                    android:contentDescription="About Us Visit Website Link TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/fu_margin_start"
                    android:layout_toEndOf="@+id/ivVisitWebsiteIconAboutUs"
                    android:autoLink="web"
                    android:text="@string/visit_intelehealth_for_more"
                    android:textColorLink="@color/blue_1"
                    android:textSize="@dimen/txtsize_patdetail_14sp" />

            </RelativeLayout>

            <!--Info - Start-->
            <RelativeLayout
                android:id="@+id/rlCheckTnCAboutUs"
                android:contentDescription="About Us Check TnC Relative Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlVisitWebsiteAboutUs"
                android:layout_marginStart="@dimen/margin_24"
                android:layout_marginTop="@dimen/fu_margin_start"
                android:layout_marginEnd="@dimen/margin_24">

                <ImageView
                    android:id="@+id/ivCheckTnCIconAboutUs"
                    android:contentDescription="About Us Check TnC Icon ImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/info_blue_svg" />

                <TextView
                    android:id="@+id/tvCheckTnCLinkAboutUs"
                    android:contentDescription="About Us Check TnC Link TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/fu_margin_start"
                    android:layout_toEndOf="@+id/ivCheckTnCIconAboutUs"
                    android:text="@string/aboutus_termscondition"
                    android:textColorLink="@color/blue_1"
                    android:textSize="@dimen/txtsize_patdetail_14sp" />
            </RelativeLayout>
            <!--Info - End-->

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlCheckTnCAboutUs"
                android:layout_marginTop="@dimen/margin_24">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btnGoToWebsiteAboutUs"
                        android:contentDescription="About Us Go To Website Button"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/fu_btn_size"
                        android:layout_marginStart="@dimen/margin_24"
                        android:layout_marginTop="@dimen/fu_margin_start"
                        android:layout_marginEnd="@dimen/margin_24"
                        android:layout_marginBottom="@dimen/margin_24"
                        android:background="@drawable/blue_common_bg_button"
                        android:drawableEnd="@drawable/globe"
                        android:fontFamily="@font/dm_sans"
                        android:paddingStart="@dimen/margin_30"
                        android:paddingEnd="@dimen/margin_14"
                        android:text="@string/go_to_website"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txtsize_patdetail_16sp" />

                </RelativeLayout>
            </FrameLayout>

        </RelativeLayout>
    </ScrollView>
    <!--Scrollbar - End -->


</RelativeLayout>