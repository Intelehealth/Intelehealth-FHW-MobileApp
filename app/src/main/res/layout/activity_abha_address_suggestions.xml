<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".abdm.activity.AbhaAddressSuggestionsActivity">

            <!--toolbar-->
            <LinearLayout
                android:id="@+id/ll_action_bar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/back_arrow_margin_start"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_back_arrow_terms"
                    android:layout_width="@dimen/back_arrow_width"
                    android:layout_height="@dimen/back_arrow_height"
                    android:src="@drawable/ui2_ic_arrow_back_new" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/title_margin_start"
                    android:text="Select an ABHA Address"
                    android:textColor="@color/textColorBlack"
                    android:textSize="@dimen/setup_privacy_screen_info"
                    android:textStyle="bold" />
            </LinearLayout>
            <!--toolbar end-->

    <ScrollView
        android:id="@+id/scrollViewAddress"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/ll_action_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/submitABHAAddressBtn"
        android:fillViewport="true"
        android:layout_marginTop="@dimen/margin_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="26dp"
                android:text="*Please select an ABHA address from the suggestions below."
                android:textAppearance="@style/sub_title"
                android:textColor="@null"
                android:textSize="@null"
                android:gravity="top"
                />
            
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGrp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginHorizontal="@dimen/margin_14"
                android:layout_below="@+id/sub_title"
                android:paddingHorizontal="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_14"
                app:chipSpacingHorizontal="@dimen/margin_16"
                app:singleSelection="true">

