<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.onboarding.TermsAndConditionsActivity_New">

    <LinearLayout
        android:id="@+id/tncToolbarLinearLayout"
        android:contentDescription="Terms and Conditions Toolbar Parent Layout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_marginStart="@dimen/back_arrow_margin_start"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tncBackArrowImageView"
            android:contentDescription="Terms and Conditions Back Arrow ImageView"
            android:layout_width="@dimen/back_arrow_width"
            android:layout_height="@dimen/back_arrow_height"
            android:src="@drawable/ui2_ic_arrow_back_new" />

        <TextView
            android:id="@+id/tncTitleTextView"
            android:contentDescription="Terms and Conditions Title TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/title_margin_start"
            android:text="@string/terms_and_conditions"
            android:textSize="@dimen/setup_privacy_screen_info"
            android:textStyle="bold" />
    </LinearLayout>


    <androidx.core.widget.NestedScrollView
        android:id="@+id/tncContentScrollView"
        android:contentDescription="Terms and Conditions Content ScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tnCButtonLayout"
        android:layout_below="@+id/tncToolbarLinearLayout">


        <TextView
            android:id="@+id/tncContentTextView"
            android:contentDescription="Terms and Conditions Content TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/content_margin_start"
            android:layout_toEndOf="@+id/iv_back_arrow_terms"
            android:fontFamily="@font/lato_regular"
            android:justificationMode="inter_word"
            android:text="@string/privacy_policy_content_old"
            android:textSize="14sp" />


    </androidx.core.widget.NestedScrollView>


    <LinearLayout
        android:id="@+id/tnCButtonLayout"
        android:contentDescription="Terms and Conditions Button LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/tncDeclineBtn"
            android:contentDescription="Terms and Conditions Decline Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/decline_button_margin_start"
            android:layout_marginEnd="@dimen/decline_button_margin_end"
            android:layout_weight="1"
            android:background="@drawable/ui2_common_primary_bg_disabled"
            android:lineHeight="@dimen/button_line_height"
            android:onClick="declineTC"
            android:padding="@dimen/padding_15"
            android:text="@string/decline"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/common_button_text_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/tncAcceptBtn"
            android:contentDescription="Terms and Conditions Accept Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/accept_button_margin_start"
            android:layout_marginEnd="@dimen/accept_button_margin_end"
            android:layout_weight="1"
            android:background="@drawable/ui2_common_primary_bg"
            android:lineHeight="@dimen/button_line_height"
            android:onClick="acceptPP"
            android:padding="@dimen/padding_15"
            android:text="@string/accept_new"
            android:textSize="@dimen/common_button_text_size" />


    </LinearLayout>


</RelativeLayout>