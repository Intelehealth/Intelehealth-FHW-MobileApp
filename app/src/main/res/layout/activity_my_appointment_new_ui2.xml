<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rlParentMyAppointment"
    android:contentDescription="My Appointment Parent RelativeLayout"
    android:background="@drawable/frame_10021"
    android:orientation="vertical"
    android:paddingStart="@dimen/my_appointment_parent_padding"
    android:paddingEnd="@dimen/my_appointment_parent_padding"
    tools:context=".appointmentNew.MyAppointmentActivity">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutToolbarMyAppointment"
        android:contentDescription="My Appointment Toolbar Layout"
        layout="@layout/toolbar_common_new2_ui2" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tlMyAppointment"
        android:contentDescription="My Appointment TabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutToolbarMyAppointment"
        android:layout_marginTop="@dimen/my_appointments_tab_margin_top"
        android:gravity="center"
        android:textAlignment="center"
        app:tabGravity="fill"
        app:tabMaxWidth="0dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/textColorBlack"
        app:tabTextAppearance="@style/CustomTabText" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vpMyAppointment"
        android:contentDescription="My Appointment ViewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tlMyAppointment"
        android:visibility="visible"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnvMyAppointment"
        android:contentDescription="My Appointment BottomNavigationView"
        style="@style/NavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/top_rounded_whitebg"
        android:foregroundTint="@color/colorPrimary"
        android:visibility="gone"
        app:elevation="8dip"
        app:itemBackground="@drawable/bottom_nav_tab_background"
        app:itemIconSize="@dimen/bottom_nav_icon_size"
        app:itemRippleColor="@color/colorPrimary2"
        app:itemTextColor="@drawable/ui2_selector_for_all_bottomnavs"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/menu_home_footer" />
</RelativeLayout>