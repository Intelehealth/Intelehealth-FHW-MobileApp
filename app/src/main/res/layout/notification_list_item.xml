<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvParentNotificationListItem"
    android:contentDescription="Notification List Item Parent CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/margin_10"
    android:layout_marginHorizontal="@dimen/card_padding"
    android:layout_marginTop="@dimen/card_padding"
    android:layout_marginBottom="@dimen/card_padding"
    app:cardElevation="@dimen/card_padding">

    <LinearLayout
        android:id="@+id/llParentNotificationListItem"
        android:contentDescription="Notification List Item Parent LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <!-- Todo: Adjust weight as it is the imp factor here to display delete icon-->
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rlProfileNotificationListItem"
        android:contentDescription="Notification List Item Profile RelativeLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:layout_margin="@dimen/fu_margin_start">

        <ImageView
            android:id="@+id/ivIconNotificationListItem"
            android:contentDescription="Notification List Item Icon ImageView"
            android:layout_width="@dimen/search_add_btn_height"
            android:layout_height="@dimen/search_add_btn_height"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:src="@drawable/ic_green_calenar_icon" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/search_presTag_margin_top"
            android:layout_toEndOf="@+id/ivIconNotificationListItem">

            <!-- Label -->
            <TextView
                android:id="@+id/tvNameTextNotificationListItem"
                android:contentDescription="Notification List Item Name TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:gravity="center_vertical"
                android:lineSpacingExtra="3sp"
                android:minLines="2"
                android:text="@string/notifi_card_title"
                android:textColor="@color/header_subtitle_color"
                android:textSize="@dimen/fu_male_textsize" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cvOpenPrescNotificationListItem"
                android:contentDescription="Notification List Item Open Prescription CardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvNameTextNotificationListItem"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:layout_marginHorizontal="2dp"
                app:cardCornerRadius="3dp">

                <LinearLayout
                    android:id="@+id/btnOpenPrescNotificationListItem"
                    android:contentDescription="Notification List Item Open Prescription Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#EFE8FF"
                    android:orientation="horizontal"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/open_prescription"
                        android:fontFamily="@font/dm_sans"
                        android:textStyle="bold"
                        android:paddingHorizontal="6dp"
                        android:textColor="#1B163A"
                        android:textSize="11sp" />

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/arrow_forward_blue" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlDeleteNotificationListItem"
        android:contentDescription="Notification List Item Delete RelativeLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_weight="0.5"
        android:layout_gravity="end"
        android:background="#FFE8E8" >

        <ImageView
            android:id="@+id/ivDeleteNotificationListItem"
            android:contentDescription="Notification List Item Delete ImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete_red_icon"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>
